<%= render 'layouts/header' %> 
<%= render 'drinks_common', current_section: "Wishlist" %>
<div class="row">
	<div class="row no-margin spinner text-center">
		<div class="spinner-text">
			<i class="fa fa-spinner fa-spin fa-4x" aria-hidden="true"></i>
			<h4>Updating...</h4>
		</div>
	</div>
	<div class="container" id="deliveries-view">
		<div class="row no-margin">
			<div class="col-xs-12 col-sm-6 no-padding-right">
				<h3 class="recent-ratings-header">My wishlist</h3>
			</div>
			<div class="col-xs-offset-1 col-xs-10 col-sm-offset-3 col-sm-3">
				<%= link_to drink_search_path(current_user.id), class: 'btn btn-default btn-success formButton-send-note the-supply-button' do %>
					<i class="fa fa-plus"> add a drink</i>
				<% end %>
			</div>
		</div>
		<div class="row no-margin cellar-drinks-row">
			<% if @wishlist_drinks.blank? %>
				<div class="col-xs-12">
					<h4 class="recent-ratings-header">Oh no, your wishlist is empty! Time to make a wish...</h4>
				</div>
			<% else %>
				<% @wishlist_drinks.each do |drink| %>
					<%= render(partial: 'drink_card_wishlist', locals: { drink: drink }) %>
				<% end %>
			<% end %>	
		</div>
	</div>
</div>
<div id="remove_drink_from_wishlist_confirmation" class="modal">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
		<h3>Remove drink confirmation</h3>
	</div>
	<div class="modal-body">
		<div class="row no-margin">
			<div class="col-sm-12">
				<h4>Remove this drink from your wishlist?</h4>
			</div>
		</div>
		<div class="col-sm-2"></div>
		<div class="col-sm-4 remove-button-holder" id="remove_drink_from_wishlist_holder">
			<%= link_to "#", :class => 'subtract-drink-confirmation text-center btn btn-danger remove-drink-button', remote: true do %>
				<i class="fa fa-minus"></i>
				Remove it!
			<% end %>
		</div>
		<div class="col-sm-4 remove-button-holder">
			<%= link_to "Wait!", "#", :class => 'btn btn-default wait-button', :data => {:dismiss=>"modal"} %>
		</div>
	</div>
</div>
<%= render 'layouts/footer' %>