<div class="delivery-info-box drinks">
	<p>drinks</p>
	<h4 class="delivery-preference-prompt"><%= @curated_total_count %></h4>
</div>	
<% if @curated_large_drinks != 0 %>
	<div class="delivery-info-box small hidden-xs hidden-sm">
		<p>small</p>
		<h4 class="delivery-preference-prompt"><%= @curated_small_drinks %></h4>
	</div>	
	<div class="delivery-info-box large hidden-xs hidden-sm">
		<p>large</p>
		<h4 class="delivery-preference-prompt"><%= @curated_large_drinks %></h4>
	</div>
<% end %>
<% if @curated_cellar_drinks != 0 %>
	<div class="delivery-info-box cellar hidden-xs hidden-sm">
		<p>cellar</p>
		<h4 class="delivery-preference-prompt"><%= @curated_cellar_drinks %></h4>
	</div>
<% end %>
<div class="delivery-info-box total-price">
	<p>drink avg</p>
	<h4 class="delivery-preference-prompt"><%= number_to_currency(@average_drink_cost, precision: 2) %></h4>
</div>		
<div class="delivery-info-box subtotal">
	<p>subtotal</p>
	<h4 class="delivery-preference-prompt"><%= number_to_currency(@free_curation.subtotal, precision: 2) %></h4>
</div>	
<div class="delivery-info-box sales-tax">
	<p>tax</p>
	<h4 class="delivery-preference-prompt"><%= number_to_currency(@free_curation.sales_tax, precision: 2) %></h4>
</div>	
<div class="delivery-info-box subtotal">
	<p>drink total</p>
	<h4 class="delivery-preference-prompt"><%= number_to_currency(@free_curation.total_price, precision: 2) %></h4>
</div>

