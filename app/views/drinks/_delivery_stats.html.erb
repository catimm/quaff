<div class="delivery-info-box drinks">
	<p>drinks</p>
	<h4 class="delivery-preference-prompt"><%= delivery.delivery_drink_count %></h4>
</div>	
<% if delivery.delivery_large_count != 0 %>
	<div class="delivery-info-box small hidden-xs">
		<p>small</p>
		<h4 class="delivery-preference-prompt"><%= delivery.delivery_small_count %></h4>
	</div>	
	<div class="delivery-info-box large hidden-xs">
		<p>large</p>
		<h4 class="delivery-preference-prompt"><%= delivery.delivery_large_count %></h4>
	</div>
<% end %>		
<div class="delivery-info-box subtotal">
	<p>subtotal</p>
	<h4 class="delivery-preference-prompt"><%= number_to_currency(delivery.subtotal, precision: 2) %></h4>
</div>	
<div class="delivery-info-box sales-tax">
	<p>tax</p>
	<h4 class="delivery-preference-prompt"><%= number_to_currency(delivery.sales_tax, precision: 2) %></h4>
</div>	
<div class="delivery-info-box total-price">
	<p>drink total</p>
	<h4 class="delivery-preference-prompt"><%= number_to_currency(delivery.total_drink_price, precision: 2) %></h4>
</div>
<div class="delivery-info-box sales-tax">
	<p>delivery</p>
	<h4 class="delivery-preference-prompt"><%= number_to_currency(delivery.delivery_fee, precision: 0) %></h4>
</div>
<% if !delivery.delivery_credit.blank? %>
	<div class="delivery-info-box sales-tax">
		<p>credit</p>
		<h4 class="delivery-preference-prompt"><%= number_to_currency(delivery.delivery_fee, precision: 0) %></h4>
	</div>
<% end %>
<div class="delivery-info-box total-price">
	<p>grand total</p>
	<h4 class="delivery-preference-prompt"><%= number_to_currency(delivery.grand_total, precision: 2) %></h4>
</div>

