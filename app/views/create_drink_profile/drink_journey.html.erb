<%= render 'layouts/header_create_drink_profile' %> 
	<div class="row no-margin spinner-signup text-center">
		<div class="spinner-text">
			<i class="fa fa-spinner fa-spin fa-4x" aria-hidden="true"></i>
			<h4>Processing...</h4>
		</div>
	</div>
	<div class="row no-margin first-row-signup">
		<div class="col-xs-12 col-sm-offset-1 col-sm-10">
			<div class="row no-margin">
				<div class="col-xs-4 col-md-offset-3 col-md-1 no-padding signup-guide-column-holder <%= @types_chosen %>">
					<%= link_to "types", drink_profile_categories_path, class: "guide-header #{@types_chosen}" %>
					<div class="fa fa-chevron-right"></div>
				</div>
				<div class="col-xs-4 col-md-1 no-padding signup-guide-column-holder <%= @journey_chosen %>">
					<% if 5 >= 4 %>
						<%= link_to "journey", drink_profile_journey_path, class: "guide-header #{@journey_chosen}" %>
					<% else %>
						<h5 class="guide-header">journey</h5>
					<% end %>
					<div class="fa fa-chevron-right"></div>
				</div>
				<div class="col-xs-4 col-md-1 no-padding signup-guide-column-holder <%= @numbers_chosen %>">
					<% if 9 >= 8 %>
						<%= link_to "numbers", drink_profile_drinks_per_week_path, class: "guide-header #{@numbers_chosen}" %>
					<% else %>
						<h5 class="guide-header">numbers</h5>
					<% end %>
					<div class="fa fa-chevron-right"></div>
				</div>
				<div class="col-xs-4 col-md-1 no-padding signup-guide-column-holder <%= @likes_chosen %>">
					<% if 9 >= 8 %>
						<%= link_to "likes", drink_profile_beer_likes_path, class: "guide-header #{@likes_chosen}" %>
					<% else %>
						<h5 class="guide-header">likes</h5>
					<% end %>
					<div class="fa fa-chevron-right"></div>
				</div>
				<div class="col-xs-4 col-md-1 no-padding signup-guide-column-holder <%= @dislikes_chosen %>">
					<% if 9 >= 8 %>
						<%= link_to "dislikes", drink_profile_beer_dislikes_path, class: "guide-header #{@dislikes_chosen}" %>
					<% else %>
						<h5 class="guide-header">dislikes</h5>
					<% end %>
					<div class="fa fa-chevron-right"></div>
				</div>
				<div class="col-xs-4 col-md-1 no-padding signup-guide-column-holder <%= @priorities_chosen %>">
					<% if 9 >= 8 %>
						<%= link_to "choices", drink_profile_priorities_path, class: "guide-header #{@priorities_chosen}" %>
					<% else %>
						<h5 class="guide-header">choices</h5>
					<% end %>
					<div class="fa fa-chevron-right"></div>
				</div>
				<div class="col-xs-4 col-md-1 no-padding signup-guide-column-holder <%= @estimates_chosen %>">
					<% if 9 >= 8 %>
						<%= link_to "estimates", drink_profile_estimates_path, class: "guide-header #{@estimates_chosen}" %>
					<% else %>
						<h5 class="guide-header">estimates</h5>
					<% end %>
				</div>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="container" id="user-craft-journey-signup">
			<div class="col-xs-12 text-center">
				<h2 class="signup-question">Indicate where you are in your craft journey.</h2>
				<h5 class="signup-question-detail">You can update this answer on your user profile page anytime after signup.</h5>
			</div>
			<%- flash.each do |name, msg| -%>
                <% if name.include?  "notice" %>
	                <div class="col-xs-12 col-sm-offset-4 col-sm-4 show" id="category-error-holder">
	                	<%= content_tag :div, msg, class: "alert alert-danger text-center" %>
	            	</div>
            	<% end %>
            <%- end -%>
		</div>
	</div>
	<div class="row signup-drink-category-row-holder">
		<div class="container">
			<% if @user_delivery_preference.beer_chosen == true %>
				<div class="row drink-category-journey-row">
					<div class="col-xs-12 col-sm-offset-4 col-sm-4 text-center no-padding">
						<h3 class="delivery-journey-prompt">Where are you in your beer journey?</h3>
					</div>
					<div class="col-xs-12 col-sm-offset-4 col-sm-4 text-center" id="beer-journey-choice">
						<%= render 'layouts/settings_drink_journey', drink: "beer" %>
					</div>
				</div>
				<% if @user_delivery_preference.cider_chosen == true || @user_delivery_preference.wine_chosen == true %>
					<div class="col-xs-12 col-sm-offset-4 col-sm-4 text-center">
						<hr>
					</div>
				<% end %>
			<% end %>
			<% if @user_delivery_preference.cider_chosen == true %>
				<div class="row drink-category-journey-row">
					<div class="col-xs-12 col-sm-offset-4 col-sm-4 text-center no-padding">
						<h3 class="delivery-journey-prompt">Where are you in your cider journey?</h3>
					</div>
					<div class="col-xs-12 col-sm-offset-4 col-sm-4 text-center" id="cider-journey-choice">
						<%= render 'layouts/settings_drink_journey', drink: "cider" %>
					</div>
				</div>
				<% if @user_delivery_preference.wine_chosen == true %>
					<div class="col-xs-12 col-sm-offset-4 col-sm-4 text-center">
						<hr>
					</div>
				<% end %>
			<% end %>
			<% if @user_delivery_preference.wine_chosen == true %>
				<div class="row drink-category-journey-row">
					<div class="col-xs-12 col-sm-offset-4 col-sm-4 text-center no-padding">
						<h3 class="delivery-journey-prompt">Where are you in your wine journey?</h3>
					</div>
					<div class="col-xs-12 col-sm-offset-4 col-sm-4 text-center" id="wine-journey-choice">
						<%= render 'layouts/settings_drink_journey', drink: "wine" %>
					</div>
				</div>
			<% end %>
		</div>
	</div>
	<div class="row">
		<div class="container">
			<div class="row drink-profile-next-row">
				<div class="col-xs-offset-1 col-xs-10 col-sm-offset-4 col-sm-4 text-center">
					<%= link_to "Next", drink_profile_drinks_per_week_path, class: "btn btn-success user-info-next-button", id: "journey_choice_next_step_button" %>
				</div>
			</div>
		</div>
	</div>
<%= render 'layouts/footer' %>