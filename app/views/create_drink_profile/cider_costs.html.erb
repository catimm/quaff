<%= render 'layouts/header_create_drink_profile' %> 
<%= render 'drink_profile_guide' %>
<%= render 'layouts/settings_drink_costs', drink: @category %>
<div class="row">
	<div class="container">
		<div class="row drink-profile-next-row">
			<div class="col-xs-offset-1 col-xs-10 col-sm-offset-4 col-sm-4 text-center">
				<% if !@user_cider_preferences.cider_price_response.nil? && !@user_cider_preferences.cider_price_limit.nil? %>
					<%= link_to "Next", @next_step, class: "btn btn-success signup-styles-next-step", id: "profile_costs_next_button" %>
				<% else %>
					<%= link_to "Next", @next_step, disabled: true, class: "btn btn-default user-info-next-button", id: "profile_costs_next_button" %>
				<% end %>
			</div>
		</div>
	</div>
</div>
<%= render 'layouts/footer' %>