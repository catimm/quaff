<%= render 'layouts/header_create_drink_profile' %> 
	<div class="row no-margin spinner-signup text-center">
		<div class="spinner-text">
			<i class="fa fa-spinner fa-spin fa-4x" aria-hidden="true"></i>
			<h4>Processing...</h4>
		</div>
	</div>
	<div class="row no-margin first-row-signup">
		<div class="row no-margin">
			<div class="col-xs-4 col-md-offset-3 col-md-1 no-padding signup-guide-column-holder <%= @types_chosen %>">
				<%= link_to "types", drink_profile_categories_path, class: "guide-header #{@types_chosen}" %>
				<div class="fa fa-chevron-right"></div>
			</div>
			<div class="col-xs-4 col-md-1 no-padding signup-guide-column-holder <%= @journey_chosen %>">
				<% if 5 >= 4 %>
					<%= link_to "journey", drink_profile_journey_path, class: "guide-header #{@journey_chosen}" %>
				<% else %>
					<h5 class="guide-header">journey</h5>
				<% end %>
				<div class="fa fa-chevron-right"></div>
			</div>
			<div class="col-xs-4 col-md-1 no-padding signup-guide-column-holder <%= @numbers_chosen %>">
				<% if 9 >= 8 %>
					<%= link_to "numbers", drink_profile_drinks_per_week_path, class: "guide-header #{@numbers_chosen}" %>
				<% else %>
					<h5 class="guide-header">numbers</h5>
				<% end %>
				<div class="fa fa-chevron-right"></div>
			</div>
			<div class="col-xs-4 col-md-1 no-padding signup-guide-column-holder <%= @likes_chosen %>">
				<% if 9 >= 8 %>
					<%= link_to "likes", drink_profile_beer_likes_path, class: "guide-header #{@likes_chosen}" %>
				<% else %>
					<h5 class="guide-header">likes</h5>
				<% end %>
				<div class="fa fa-chevron-right"></div>
			</div>
			<div class="col-xs-4 col-md-1 no-padding signup-guide-column-holder <%= @dislikes_chosen %>">
				<% if 9 >= 8 %>
					<%= link_to "dislikes", drink_profile_beer_dislikes_path, class: "guide-header #{@dislikes_chosen}" %>
				<% else %>
					<h5 class="guide-header">dislikes</h5>
				<% end %>
				<div class="fa fa-chevron-right"></div>
			</div>
			<div class="col-xs-4 col-md-1 no-padding signup-guide-column-holder <%= @priorities_chosen %>">
				<% if 9 >= 8 %>
					<%= link_to "choices", drink_profile_priorities_path, class: "guide-header #{@priorities_chosen}" %>
				<% else %>
					<h5 class="guide-header">choices</h5>
				<% end %>
				<div class="fa fa-chevron-right"></div>
			</div>
			<div class="col-xs-4 col-md-1 no-padding signup-guide-column-holder <%= @estimates_chosen %>">
				<% if 9 >= 8 %>
					<%= link_to "estimates", drink_profile_estimates_path, class: "guide-header #{@estimates_chosen}" %>
				<% else %>
					<h5 class="guide-header">estimates</h5>
				<% end %>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="container" id="user-drink-preference-signup">
			<div class="col-xs-12 text-center">
				<h2 class="signup-question">Indicate how many drinks you'd like us to curate for you.</h2>
				<h5 class="signup-question-detail">You can update this answer in your delivery settings at any time.</h5>
			</div>
		</div>
	</div>
	<div class="row no-margin">
		<div class="container">
			<% if @beer_chosen == true %>
				<div class="row no-margin">
	            	<div class="col-xs-12 col-sm-10 col-md-9">
	                    <h3 class="delivery-numbers-prompt">How many <span class="numbers-category-choice">beers</span> do you drink at home each <span class="<%= @beer_timeframe_choice_class %>" id="beer-timeframe"><%= @chosen_beer_timeframe %></span>?</h3>
	                </div>
	                <div class="col-xs-12 col-sm-2 col-md-3">
	                	<h3 class="chosen-drink-per-week <%= @chosen_beers_per_week %>" id="number-beer-per-week"><%= @beers_per_week_text %></h3>
	               	</div>
	                <div class="col-xs-12 col-sm-6 col-md-5">
	                    <div class="col-xs-6 no-padding week-or-month-holder-parent">
							<div class="week-or-month-holder <%= @beer_week_chosen %>" id="beer-timeframe-week">
								<h3 class="drinks-per-text">week</h3>
							</div>
						</div>
						<div class="col-xs-6 no-padding week-or-month-holder-parent">
							<div class="week-or-month-holder <%= @beer_month_chosen %>" id="beer-timeframe-month">
								<h3 class="drinks-per-text">month</h3>
							</div>
						</div>
	                </div>
	                <div class="col-xs-12 col-sm-6" id="beer">
	                    <%= render 'choose_number_of_drinks', drink: 'beer' %>
	                </div>
			    </div>
		    	<% if @cider_chosen == true || @wine_chosen == true %>
		    		<hr />
		    	<% end %>
		    <% end %>
		    <% if @cider_chosen == true %>
				<div class="row no-margin">
	            	<div class="col-xs-12 col-sm-10 col-md-9">
	                    <h3 class="delivery-numbers-prompt">How many <span class="numbers-category-choice">ciders</span> do you drink at home each <span class="<%= @cider_timeframe_choice_class %>" id="cider-timeframe"><%= @chosen_cider_timeframe %></span>?</h3>
	                </div>
	                <div class="col-xs-12 col-sm-2 col-md-3">
	                	<h3 class="chosen-drink-per-week <%= @chosen_ciders_per_week %>" id="number-cider-per-week"><%= @ciders_per_week_text %></h3>
	               	</div>
	                <div class="col-xs-12 col-sm-6 col-md-5">
	                    <div class="col-xs-6 no-padding week-or-month-holder-parent">
							<div class="week-or-month-holder <%= @cider_week_chosen %>" id="cider-timeframe-week">
								<h3 class="drinks-per-text">week</h3>
							</div>
						</div>
						<div class="col-xs-6 no-padding week-or-month-holder-parent">
							<div class="week-or-month-holder <%= @cider_month_chosen %>" id="cider-timeframe-month">
								<h3 class="drinks-per-text">month</h3>
							</div>
						</div>
	                </div>
	                <div class="col-xs-12 col-sm-6" id="cider">
	                    <%= render 'choose_number_of_drinks', drink: 'cider' %>
	                </div>
			    </div>
		    	<% if @wine_chosen == true%>
		    		<hr />
		    	<% end %>
		    <% end %>
		    <% if @wine_chosen == true %>
				<div class="row no-margin">
	            	<div class="col-xs-12 col-sm-10 col-md-9">
	                    <h3 class="delivery-numbers-prompt">How many <span class="numbers-category-choice">glasses of wine</span> do you drink at home each <span class="<%= @wine_timeframe_choice_class %>" id="wine-timeframe"><%= @chosen_wine_timeframe %></span>?</h3>
	                </div>
	                <div class="col-xs-12 col-sm-2 col-md-3">
	                	<h3 class="chosen-drink-per-week <%= @chosen_wines_per_week %>" id="number-wine-per-week"><%= @wines_per_week_text %></h3>
	               	</div>
	                <div class="col-xs-12 col-sm-6 col-md-5">
	                    <div class="col-xs-6 no-padding week-or-month-holder-parent">
							<div class="week-or-month-holder <%= @wine_week_chosen %>" id="wine-timeframe-week">
								<h3 class="drinks-per-text">week</h3>
							</div>
						</div>
						<div class="col-xs-6 no-padding week-or-month-holder-parent">
							<div class="week-or-month-holder <%= @wine_month_chosen %>" id="wine-timeframe-month">
								<h3 class="drinks-per-text">month</h3>
							</div>
						</div>
	                </div>
	                <div class="col-xs-12 col-sm-6" id="wine">
	                    <%= render 'choose_number_of_drinks', drink: 'wine' %>
	                </div>
			    </div>
		    <% end %>
		</div>
	</div>
	<div class="row">
		<div class="container">
			<div class="row">
				<div class="col-xs-offset-1 col-xs-10 col-sm-offset-4 col-sm-4">
					<% if @beer_chosen == true %>
						<% if !@user_beer_preference.beers_per_week.nil? %>
							<%= link_to "Next", drink_profile_beer_likes_path, class: "btn btn-success user-info-next-button", id: "drinks_per_week_next_step_button" %>
						<% else %>
							<%= link_to "Next", drink_profile_beer_likes_path, disabled: true, class: "btn btn-default user-info-next-button", id: "drinks_per_week_next_step_button" %>
						<% end %>
					<% elsif @cider_chosen == true %>
						<% if !@user_preferences.blank? %>
							<%= link_to "Next", drink_profile_cider_likes_path, class: "btn btn-success user-info-next-button", id: "drinks_per_week_next_step_button" %>
						<% else %>
							<%= link_to "Next", drink_profile_cider_likes_path, disabled: true, class: "btn btn-default user-info-next-button", id: "drinks_per_week_next_step_button" %>
						<% end %>
					<% else %>
						<% if !@user_preferences.blank? %>
							<%= link_to "Next", drink_profile_wine_likes_path, class: "btn btn-success user-info-next-button", id: "drinks_per_week_next_step_button" %>
						<% else %>
							<%= link_to "Next", drink_profile_wine_likes_path, disabled: true, class: "btn btn-default user-info-next-button", id: "drinks_per_week_next_step_button" %>
						<% end %>
					<% end %>
				</div>
			</div>
		</div>
	</div>
<%= render 'layouts/footer' %>