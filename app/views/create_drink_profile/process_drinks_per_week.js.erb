$(function() {
	<% if @timeframe_saved == true %>
		<% if @timeframe == "week" %>
			$('#<%= @data %>').addClass('chosen');
		<% else %>
			$('#<%= @data %>').addClass('chosen');
		<% end %>
	<% end %>
	
	<% if @type == "number" %>
		if($('#<%= @data %>').parent('.number-box-holder-parent').siblings('.number-box-holder-parent').children('.weekly-drinks').hasClass('chosen')) {
			$('#<%= @data %>').parent('.number-box-holder-parent').siblings('.number-box-holder-parent').children('.weekly-drinks').removeClass('chosen');
		}
		$('#<%= @data %>').addClass('chosen');
	<% end %>
	
	<% if !@drinks_per_week_text.nil? %>
		if($('#chosen-drinks-per-week-row').hasClass('hidden')) {
			$('#chosen-drinks-per-week-row').removeClass('hidden').addClass('show');
		}
		$("#chosen-drinks-per-week-row").html("<%= escape_javascript(render 'layouts/chosen_drinks_per_week' ) %>");

		// make next button active
		if ($("#profile_numbers_next_button").attr('disabled') == 'disabled' ) {
			$('#profile_numbers_next_button').attr('disabled', false);
			$('#profile_numbers_next_button').removeClass('btn-default').addClass('btn-success');
		}
	<% end %>
	
	<% if !@referring_url.include?("create_drink_profile") %>
		// code for changing setting after login
		$("#settings-last-saved").html("<%= escape_javascript(render 'layouts/last_saved' ) %>");
		$(".last-saved").addClass('notice');
	    $( ".notice" ).fadeOut( 2000, function() {
		    $(".last-saved").removeClass('notice');
		  });
		$(".last-saved").fadeIn(100);
	<% end %>
});