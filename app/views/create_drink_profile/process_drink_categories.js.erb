$(function() {
	<% if @need_at_least_one_category == true %>
		// show modal
	    $('#need_one_category_message').modal('show');
	<% else %>
		<% if @beer_category == true %>
			$('.drink-profile-category-image-holder-chosen-cover#beer').removeClass('hidden').addClass('show');
		<% end %>
		<% if @beer_category == false %>
			$('.drink-profile-category-image-holder-chosen-cover#beer').removeClass('show').addClass('hidden');
		<% end %>
		<% if @cider_category == true %>
			$('.drink-profile-category-image-holder-chosen-cover#cider').removeClass('hidden').addClass('show');
		<% end %>
		<% if @cider_category == false %>
			$('.drink-profile-category-image-holder-chosen-cover#cider').removeClass('show').addClass('hidden');
		<% end %>
		<% if @wine_category == true %>
			$('.drink-profile-category-image-holder-chosen-cover#wine').removeClass('hidden').addClass('show');
		<% end %>
		<% if @wine_category == false %>
			$('.drink-profile-category-image-holder-chosen-cover#wine').removeClass('show').addClass('hidden');
		<% end %>
		<% if @category_count == 1 %>
			$("#navbar-holder").html("<%= escape_javascript(render 'layouts/collapse_navbar_dropdown' ) %>");
			$("#drink_category_next_button_holder").html("<%= escape_javascript(render 'drink_category_next_button' ) %>");
			$('#profile_category_next_button').removeAttr('disabled');
			$("#profile_category_next_button").removeClass('btn-default').addClass('btn-success');
		<% else %>
			$('#profile_category_next_button').attr('disabled', true);
			$("#profile_category_next_button").removeClass('btn-success').addClass('btn-default');
		<% end %>
		
		<% if !@referring_url.include?("create_drink_profile") %>
			// code for changing setting after login
			$("#settings-last-saved").html("<%= escape_javascript(render 'layouts/last_saved' ) %>");
			$(".last-saved").addClass('notice');
		    $( ".notice" ).fadeOut( 2000, function() {
			    $(".last-saved").removeClass('notice');
			  });
			$(".last-saved").fadeIn(100);
		<% end %>
		
	<% end %>
});