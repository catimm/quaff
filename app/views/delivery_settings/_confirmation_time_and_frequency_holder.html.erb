<div class="row no-margin">
	<div class="col-xs-12 col-sm-offset-2 col-sm-8 col-md-offset-3 col-md-6 no-padding">
		<div class="delivery-settings-estimate-tile">
			<h4 class='delivery-settings-confirm-header'>Delivery Time & Frequency</h4>
			<% if !@account.delivery_frequency.blank? && !@next_delivery.blank? %>
				<div class="row no-margin">
					<div class="col-xs-1 padding-5 text-center">
						<h4 class='delivery-settings-confirm-text'>
							<i class="fa fa-ellipsis-h" aria-hidden="true"></i>
						</h4>
					</div>
					<div class="col-xs-4 padding-5">
						<h4 class='delivery-settings-confirm-header'>
							Frequency
						</h4>
					</div>
					<% if @account.delivery_frequency.to_i != 1 %>
						<div class="col-xs-7 no-padding">
							<h4 class='delivery-settings-confirm-text'>
								<span>Every <%= @account.delivery_frequency %> weeks</span>
							</h4>
						</div>
					<% else %>
						<div class="col-xs-7 no-padding">
							<h4 class='delivery-settings-confirm-text'>
								<span>Every week</span>
							</h4>
						</div>
					<% end %>
				</div>
				<div class="row no-margin">
					<div class="col-xs-1 padding-5 text-center">
						<h4 class='delivery-settings-confirm-text'>
							<i class="fa fa-clock-o" aria-hidden="true"></i>
						</h4>
					</div>
					<div class="col-xs-4 padding-5">
						<h4 class='delivery-settings-confirm-header'>
							Time
						</h4>
					</div>
					<div class="col-xs-7 no-padding">
						<h4 class='delivery-settings-confirm-text'>
							<span><%= (@next_delivery.delivery_date).strftime("%A") %>s, 
						<%= (@next_delivery.delivery_start_time).strftime("%-l%P") %> - <%= (@next_delivery.delivery_end_time).strftime("%-l%P") %></span>
						</h4>
					</div>
				</div>
				<div class="row no-margin">
					<div class="col-xs-1 padding-5 text-center">
						<h4 class='delivery-settings-confirm-text'>
							<i class="fa fa-calendar-o" aria-hidden="true"></i>
						</h4>
					</div>
					<div class="col-xs-4 padding-5">
						<h4 class='delivery-settings-confirm-header'>
							Next
						</h4>
					</div>
					<div class="col-xs-7 no-padding">
						<h4 class='delivery-settings-confirm-text'>
							<span><%= (@next_delivery.delivery_date).strftime("%b %-d, %Y") %></span>
						</h4>
					</div>
				</div>
			<% elsif @account.delivery_frequency.blank? %>
				<h4 class='delivery-settings-confirm-unchosen-text'>Please choose a delivery frequency</h4>
			<% elsif @next_delivery.blank? %>
				<h4 class='delivery-settings-confirm-unchosen-text'>Please choose your first delivery time</h4>
			<% end %>
		</div>
	</div>
</div>