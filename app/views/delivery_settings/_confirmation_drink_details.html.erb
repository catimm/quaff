		<div class="col-xs-12 no-padding">
			<div class="delivery-settings-estimate-tile">
				<h4 class='delivery-settings-confirm-header'>Totals</h4>
				<% if !@cider_preferences.ciders_per_delivery.nil? && !@beer_preferences.beers_per_delivery.nil? && !@average_price.nil? %>
					<% @drinks_per_delivery = (@beer_preferences.beers_per_delivery.to_i + @cider_preferences.ciders_per_delivery.to_i) %>
					<% @drink_total = (@drinks_per_delivery * @average_price.to_i) %>
					<div class="row no-margin">
						<div class="col-xs-1 padding-5 text-center">
							<h4 class='delivery-settings-confirm-text'>
								<i class="fa fa-beer" aria-hidden="true"></i>
							</h4>
						</div>
						<div class="col-xs-7 padding-5">
							<h4 class='delivery-settings-confirm-header'>
								Drinks per delivery
							</h4>
						</div>
						<div class="col-xs-4 no-padding">
							<h4 class='delivery-settings-confirm-text'>
								<span><%= @drinks_per_delivery %></span>
							</h4>
						</div>
					</div>
					<div class="row no-margin">
						<div class="col-xs-1 padding-5 text-center">
							<h4 class='delivery-settings-confirm-text'>
								<i class="fa fa-dot-circle-o" aria-hidden="true"></i>
							</h4>
						</div>
						<div class="col-xs-7 padding-5">
							<h4 class='delivery-settings-confirm-header'>
