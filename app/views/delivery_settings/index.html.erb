<%= render 'layouts/header' %> 
<div class="row no-margin first-row">
	<div class="container first-row-container">
		<div class="col-xs-12">
			<h1 class="section-header">Delivery Settings</h1>
		</div>
		<div class="col-xs-12 col-sm-7">
			<div class="row">
				<% if session[:user_subscription_id] != 1 %>
					<div class="col-xs-4">
						<%= link_to "My Preferences", user_delivery_settings_path, class: "drink-preference-view-option current", id: "next" %>
					</div>
				<% end %>
				<div class="col-xs-4">
					<%= link_to 'Delivery Location', user_delivery_settings_location_path, class: "drink-preference-view-option", id: "history" %>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="row">
	<div class="container" id="user-delivery-preferences-holder">
	    <%= render 'user_delivery_preferences' %>
	</div>
</div>
<div id="new_plan_step_two" class="modal">
	<div class="modal-header">
		<div class="row no-margin">
			<button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
			<div class="col-sm-12">
				<h3>
					Step 2 of 2 to initiate new plan:<br /> 
					Set your Delivery Preferences
				</h3>
			</div>
		</div>
	</div>
	<div class="modal-body">
		<div class="row no-margin">
			<div class="col-xs-12">
				<h4 class="delivery-confirmation-text">
					Please take a moment to set your preferences for number of drinks per week, delivery frequency, 
					etc.  Thanks!
				</h4>
			</div>
		</div>
		<div class="col-sm-offset-4 col-sm-4 add-button-holder">
			<%= link_to "#", :class => 'text-center btn btn-success add-drink-button', :data => {:dismiss=>"modal"} do %>
				<i class="fa fa-chevron-circle-right"></i>
				Got it!
			<% end %>
		</div>
	</div>
</div>
<%= render 'layouts/footer' %>