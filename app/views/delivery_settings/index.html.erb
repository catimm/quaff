<%= render 'layouts/header' %> 
<div class="row no-margin first-row">
		<div class="container first-row-container">
			<div class="col-xs-12">
				<h1 class="section-header">Delivery Settings</h1>
			</div>
			<div class="col-xs-12 col-sm-7">
				<div class="row">
					<div class="col-xs-4">
						<%= link_to "My Preferences", user_delivery_settings_path(current_user.id), class: "drink-preference-view-option current", id: "next" %>
					</div>
					<% if !@mates.blank? %>
					<div class="col-xs-4">
						<%= link_to 'Delivery Estimate', user_delivery_settings_total_estimate_path, class: "drink-preference-view-option", id: "history" %>
					</div>
					<% end %>
					<div class="col-xs-4">
						<%= link_to 'Delivery Location', user_delivery_settings_location_path, class: "drink-preference-view-option", id: "history" %>
					</div>
				</div>
			</div>
		</div>
	</div>
<div class="row">
	<div class="container" id="user-delivery-preferences-holder">
	    <%= render 'user_delivery_preferences' %>
	</div>
</div>
<div id="delivery_settings_welcome" class="modal">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
		<h3 class="getting-started-header">Congrats, you're done. Welcome to Knird!</h3>
	</div>
	<div class="modal-body initial-message-after-signup">
		<div class="row no-margin">
			<div class="col-xs-12">
				<h5>We're leaving you at your delivery settings page so you can review all the information you just provided.</h5>
				<h5>You can visit this page at any time to updated these settings.</h5>
				<h5>Also, you'll receive an email the Monday before each delivery so you can review the drinks and provide input if you have any, but that's it for now...</h5>
			</div>
			<div class="col-xs-1 col-sm-3"></div>
			<div class="col-xs-10 col-sm-6">
				<%= link_to "Got it!", "#", :class => 'btn btn-success wait-button', :data => {:dismiss=>"modal"} %>
			</div>
		</div>
	</div> 
</div>
<%= render 'layouts/footer' %>