<%= render 'layouts/header' %> 
	<div class="row no-margin first-row">
		<div class="container first-row-container">
			<div class="col-sm-5 no-padding">
				<h1 class="section-header">Drink Supply</h1>
			</div>
			<div class="col-sm-2"></div>
			<div class="col-sm-1">
				<%= link_to "Cooler", user_supply_path(current_user.id, 'cooler'), class: "drink-preference-view-option #{@cooler_chosen}", id: "cooler" %>
			</div>
			<div class="col-sm-1">
				<%= link_to "Cellar", user_supply_path(current_user.id, 'cellar'), class: "drink-preference-view-option #{@cellar_chosen}", id: "cellar" %>
			</div>
			<div class="col-sm-2">
				<%= link_to "Next Delivery", user_supply_path(current_user.id, 'next'), class: "drink-preference-view-option #{@next_chosen}", id: "next" %>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="container" id="preference-view-choice">
			<% if @view == "cooler" %>
				<%= render 'user_cooler' %>
			<% elsif @view == "cellar" %>
				<%= render 'user_cellar' %>
			<% else %>
				<%= render 'user_next' %>
			<% end %>
		</div>
	</div>
<%= render 'layouts/footer' %>