<div class="container">
	<div class="row no-margin">
		<div class="col-xs-12">
			<h3 class="recent-ratings-header">My credit cards</h3>
		</div>
	</div>
	<div class="row no-margin">
		<div class="col-xs-12 col-sm-4 col-md-3">
			<div class="add-credit-card-holder">
				<%= form_tag add_new_card_user_path, class:"add-new-card-button" do %>
					<input name="plan_id" type="hidden"></input>
		          	<script 
		          		class="stripe-button" 
		          		name="Knird" 
		          		data-currency="USD" 
		          		data-panel-label="Add credit card"
		          		data-label="Add credit card"
		          		data-email="<%= current_user.email %>" 
		          		data-image="https://s3-us-west-2.amazonaws.com/knird/Knird_logo-3.jpg" 
		          		data-key="<%= Rails.configuration.stripe[:publishable_key] %>" 
		          		src="https://checkout.stripe.com/checkout.js">
		          	</script>
				<% end %>
			</div>
		</div>	
		<% if !@customer_cards.blank? %>
			<% @customer_cards.each do |card| %>
				<%= render 'credit_card_details', card: card %>
			<% end %>
		<% end %>
	</div>
	<div class="row no-margin">
		<div class="col-xs-12 col-sm-10">
			<h5>*Note: you must have at least one credit card on file. Please add a new card first before removing your current card. Thanks!</h5>
		</div>
	</div>
</div>