<div class="form-group">
	<label for="special_code_field" class="col-xs-4 col-sm-3 control-label">Special code</label>
	<div class="col-xs-8 col-sm-9">
		<%= f.input :special_code, as: :string, 
				input_html: { class: "form-control", id: "special_code" }, 
					placeholder: "Enter signup or invitation code here if you have one", 
					label: false, required: false %>
	</div>
</div>
<div class="form-group">
	<label for="first_name_field" class="col-xs-4 col-sm-3 control-label">Password</label>
	<div class="col-xs-8 col-sm-9">
		<%= f.input :password, input_html: { class: "form-control", id: "password" }, label: false, required: true, placeholder: "Set password (8 characters min)", hint: ("#{@minimum_password_length} characters minimum" if @validatable) %>
	</div>
</div>
<div class="form-group">
	<label for="first_name_field" class="col-xs-4 col-sm-3 control-label">Confirm password</label>
	<div class="col-xs-8 col-sm-9">
		<%= f.input :password_confirmation, input_html: { class: "form-control", id: "confirm_password" }, label: false, required: true, placeholder: "Confirm password (8 characters min)" %>
	</div>
</div>