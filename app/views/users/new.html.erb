<%= render 'layouts/header_early_signup' %> 
<div class="container">
	<div class="row no-margin spinner-signup text-center">
		<div class="spinner-text">
			<i class="fa fa-spinner fa-spin fa-4x" aria-hidden="true"></i>
			<h4>Processing...</h4>
		</div>
	</div>
	<div class="row no-margin first-row-signup">
		<%= render 'signup/signup_guide_consumer_new' %>
	</div>
	<div class="row">
		<div class="col-xs-12 text-center">
			<h2 class="signup-question">Tell us about you</h2>
			<h5 class="signup-question-detail">You can update this info on your account profile page anytime after signup.</h5>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-offset-1 col-xs-10 col-sm-offset-3 col-sm-6" id="signup-personal-info-holder">
			<%= simple_form_for @user, :html => { :class => 'form-horizontal' } do |f| %>
				<%= f.hidden_field :special_code, :value => @code %>
				<%= render 'user_personal_info', f: f  %>
				<div class="form-group">
					<label for="special_code_field" class="col-xs-4 col-sm-3 control-label">Special code</label>
					<div class="col-xs-8 col-sm-9">
						<%= f.input :special_code, as: :string, 
								input_html: { class: "form-control", id: "special_code" }, 
									placeholder: "Enter signup or invitation code here if you have one", 
									label: false, required: false %>
					</div>
				</div>
				<div class="form-group">
					<label for="first_name_field" class="col-xs-4 col-sm-3 control-label">Password</label>
					<div class="col-xs-8 col-sm-9">
						<%= f.input :password, input_html: { class: "form-control", id: "password" }, label: false, required: true, placeholder: "Set password (8 characters min)", hint: ("#{@minimum_password_length} characters minimum" if @validatable) %>
					</div>
				</div>
				<div class="form-group">
					<label for="first_name_field" class="col-xs-4 col-sm-3 control-label">Confirm password</label>
					<div class="col-xs-8 col-sm-9">
						<%= f.input :password_confirmation, input_html: { class: "form-control", id: "confirm_password" }, label: false, required: true, placeholder: "Confirm password (8 characters min)" %>
					</div>
				</div>
				<div class="form-group">
					<div class="col-xs-offset-1 col-xs-10 col-sm-offset-2 col-sm-10 text-center">
						<%= f.submit "Next", class: "btn btn-success user-info-next-button", id: "user-info-next-button" %>
					</div>
				</div>
			<% end %>
		</div>
	</div>
</div>
<div id="complete_signup_welcome" class="modal">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
		<h3 class="getting-started-header">Let's get started!</h3>
	</div>
	<div class="modal-body initial-message-after-signup">
		<div class="row no-margin">
			<div class="col-xs-12">
				<h5>We have just a few questions to capture your account info and drink preferences.</h5>
				<h5>This quick process will ensure we curate drinks according to your personal taste preferences.</h5>
			</div>
			<div class="col-xs-1 col-sm-3"></div>
			<div class="col-xs-10 col-sm-6">
				<%= link_to "Got it. Let's do this!", "#", :class => 'btn btn-success wait-button', :data => {:dismiss=>"modal"} %>
			</div>
		</div>
	</div> 
</div>
<%= render 'layouts/footer' %>