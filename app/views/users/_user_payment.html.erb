	<div class="col-xs-12 col-sm-8">
		<h3 class="recent-ratings-header">Payment settings</h3>
	</div>
	<div class="col-xs-12 col-sm-4" id="last-updated-holder">
		<% if !@deliveries_last_updated.nil? %>
			<%= render 'preferences_last_updated' %>
		<% end %>
	</div>
	<div class="col-xs-12">
		<h5>Provide your payment information below.</h5>
					          	<script 
					          		class="stripe-button" 
					          		name="Knird" 
					          		data-description="Retain (yearly contract)"
