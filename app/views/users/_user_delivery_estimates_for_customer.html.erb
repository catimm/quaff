<h4 class="estimated-delivery-price-header">Per delivery estimates</h4>

<div class="col-sm-12 preference-estimate-holder">
	<div class="delivery-info-box drinks">
		<p>total drinks</p>
		<h4 class="delivery-preference-prompt">~<%= @drink_per_delivery_calculation %></h4>
	</div>	
</div>
<div class="col-sm-6 preference-estimate-holder">
	<div class="delivery-info-box small">
		<p>small</p>
		<h4 class="delivery-preference-prompt"><span class="preference-estimate-signs">><br>=</span>
			<%= @small_delivery_estimate %>
		</h4>
	</div>	
</div>
<div class="col-sm-6 preference-estimate-holder">
	<div class="delivery-info-box large">
		<p>large</p>
		<h4 class="delivery-preference-prompt"><span class="preference-estimate-signs"><<br>=</span>
			<%= @large_delivery_estimate %>
		</h4>
	</div>	
</div>
<div class="col-sm-12 preference-estimate-holder">
	<div class="delivery-info-box total-price">
		<p>total price <sup  data-toggle="tooltip" title="You always have final say on your delivery, but if we can deliver the love for less, we will!">?</sup></p>
		<h4 class="delivery-preference-prompt">~<%= number_to_currency(@delivery_cost_estimate, precision: 0) %></h4>
	</div>
</div>
