<h4 class="estimated-delivery-price-header">Per delivery estimates</h4>

<div class="col-sm-12 preference-estimate-holder">
	<div class="delivery-info-box drinks">
		<p>total drinks</p>
		<h4 class="delivery-preference-prompt">~<%= @drink_per_delivery_calculation %></h4>
	</div>	
</div>
<div class="col-sm-6 preference-estimate-holder">
	<div class="delivery-info-box small">
		<p>small</p>
		<h4 class="delivery-preference-prompt"><span class="preference-estimate-signs">><br>=</span>
			<%= @small_delivery_estimate %>
		</h4>
	</div>	
</div>
<div class="col-sm-6 preference-estimate-holder">
	<div class="delivery-info-box large">
		<p>large</p>
		<h4 class="delivery-preference-prompt"><span class="preference-estimate-signs"><<br>=</span>
			<%= @large_delivery_estimate %>
		</h4>
	</div>	
</div>
<div class="col-sm-12 preference-estimate-holder">
	<div class="delivery-info-box total-price">
		<p>delivery price</p>
		<h4 class="delivery-preference-prompt"><%= number_to_currency(@cost_estimate_low, precision: 0) %> - <%= number_to_currency(@cost_estimate_high, precision: 0) %></h4>
	</div>
</div>
<h4 class="estimated-delivery-price-header">Monthly cost estimates</h4>

<div class="col-sm-12 preference-estimate-holder">
	<div class="delivery-info-box monthly-estimate">
		<p><%= @user_subscription_name %> monthly membership fee</p>
		<h4 class="delivery-preference-prompt"><%= number_to_currency(@user_subscription_cost, precision: 2) %></h4>
	</div>	
</div>
<div class="col-sm-12 preference-estimate-holder">
	<div class="delivery-info-box monthly-estimate">
		<p>2x delivery price</p>
		<h4 class="delivery-preference-prompt"><%= number_to_currency(@monthly_delivery_estimate_low, precision: 0) %> - <%= number_to_currency(@monthly_delivery_estimate_high, precision: 0) %></h4>
	</div>
</div>
<div class="col-sm-12 preference-estimate-holder">
	<div class="delivery-info-box total-price">
		<p>total monthly price</p>
		<h4 class="delivery-preference-prompt"><%= number_to_currency(@monthly_total_price_estimate_low, precision: 0) %> - <%= number_to_currency(@monthly_total_price_estimate_high, precision: 0) %></h4>
	</div>
</div>
