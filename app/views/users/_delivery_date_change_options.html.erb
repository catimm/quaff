<% if @delivery.delivery_date == @first_change_date_option %>
	<div class="col-sm-2 no-padding delivery-date-change-row-holder">
		<div class="row no-margin delivery-date-change-row text-center chosen" id="1">
			<div class="col-xs-12 delivery-change-month-holder">
				<h1 class="delivery-change-month"><%= (@first_change_date_option).strftime("%^b") %></h1>
			</div>
			<div class="col-xs-12 delivery-change-date-holder">
				<h1 class="delivery-change-date"><%= (@first_change_date_option).strftime("%e") %></h1>
			</div>
			<div class="col-xs-12 delivery-change-day-holde">
				<h1 class="delivery-change-day"><%= (@first_change_date_option).strftime("%^a") %></h1>
			</div>
		</div>
	</div>
<% else %>
	<div class="col-sm-2 no-padding delivery-date-change-row-holder">
		<div class="row no-margin delivery-date-change-row text-center" id="1">
			<div class="col-xs-12 delivery-change-month-holder">
				<h1 class="delivery-change-month"><%= (@first_change_date_option).strftime("%^b") %></h1>
			</div>
			<div class="col-xs-12 delivery-change-date-holder">
				<h1 class="delivery-change-date"><%= (@first_change_date_option).strftime("%e") %></h1>
			</div>
			<div class="col-xs-12 delivery-change-day-holde">
				<h1 class="delivery-change-day"><%= (@first_change_date_option).strftime("%^a") %></h1>
			</div>
		</div>
	</div>
<% end %>
<% (1..11).each do |i| %>
	<% @next_date = @first_change_date_option + (i * 7).days %>
	<% if @delivery.delivery_date == @next_date %>
		<div class="col-sm-2 no-padding delivery-date-change-row-holder">
			<div class="row no-margin delivery-date-change-row text-center chosen" id="<%= i + 1 %>">
				<div class="col-xs-12 delivery-change-month-holder">
					<h1 class="delivery-change-month"><%= (@next_date).strftime("%^b") %></h1>
				</div>
				<div class="col-xs-12 delivery-change-date-holder">
					<h1 class="delivery-change-date"><%= (@next_date).strftime("%e") %></h1>
				</div>
				<div class="col-xs-12 delivery-change-day-holder">
					<h1 class="delivery-change-day"><%= (@next_date).strftime("%^a") %></h1>
				</div>
			</div>
		</div>
	<% else %>   
		<div class="col-sm-2 no-padding delivery-date-change-row-holder">
			<div class="row no-margin delivery-date-change-row text-center" id="<%= i + 1 %>">
				<div class="col-xs-12 delivery-change-month-holder">
					<h1 class="delivery-change-month"><%= (@next_date).strftime("%^b") %></h1>
				</div>
				<div class="col-xs-12 delivery-change-date-holder">
					<h1 class="delivery-change-date"><%= (@next_date).strftime("%e") %></h1>
				</div>
				<div class="col-xs-12 delivery-change-day-holder">
					<h1 class="delivery-change-day"><%= (@next_date).strftime("%^a") %></h1>
				</div>
			</div>
		</div>
	<% end %>
<% end %>