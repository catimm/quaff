<%= render 'layouts/header_no_search' %> 
	<div class="row no-margin first-row">
		<div class="container first-row-container">
			<div class="col-xs-12 col-sm-5 no-padding">
				<h1 class="section-header">Add To Supply</h1>
				<h4 class="drinks-rated no-margin">First search for drinks and then add them below.</h4>
			</div>
			<div class="col-sm-7">
				<div class="row no-margin">
					<div class="col-sm-3 no-padding"></div>
					<div class="col-sm-3">
						<%= link_to "My Cooler", user_supply_path('cooler'), class: "drink-preference-view-option #{@cooler_chosen}", id: "cooler" %>
					</div>
					<div class="col-sm-3">
						<%= link_to "My Cellar", user_supply_path('cellar'), class: "drink-preference-view-option #{@cellar_chosen}", id: "cellar" %>
					</div>
					<div class="col-sm-3">
						<%= link_to "My Wishlist", user_supply_path('wishlist'), class: "drink-preference-view-option #{@wishlist_chosen}", id: "wishlist" %>
					</div>
				</div>
				<div class="row add-supply-search-col">
					<div class="col-sm-3"></div>
					<div class="col-xs-12 col-sm-8">
						<%= form_tag drink_search_path, method: :get, :remote => true, :id => "header-navbar", class: 'navbar-form', role: 'search' do %>
						    <div class="input-group">
						      <%= text_field_tag :query, params[:query], size: 30, placeholder: "Search beers or breweries", class: "form-control supply-drink-search" %>
							    <div class="input-group-btn">
							      <%= button_tag(type: "submit", class: "btn btn-default") do %>
							        <i class="glyphicon glyphicon-search"></i>
							      <% end %>
							    </div>
						    </div>
						  <% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="row spinner text-center">
		<div class="spinner-text">
			<i class="fa fa-spinner fa-spin fa-4x" aria-hidden="true"></i>
			<h4>Search results loading...</h4>
		</div>
	</div>
	<div class="row">
		<div class="container" id="add-supply-holder">
			
		</div>
	</div>
<%= render 'layouts/footer' %>