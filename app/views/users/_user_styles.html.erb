<div class="col-xs-12">
	<div class="row">
		<div class="col-xs-12 col-sm-7">
			<h5>Choose <span class="tiny-style-indicator tiny-like-style text-center"><i class="fa fa-check"></i></span>&nbsp;&nbsp;&nbsp;&nbsp; if you like a style or <span class="tiny-style-indicator tiny-dislike-style text-center"><i class="fa fa-times"></i></span> &nbsp;&nbsp;&nbsp;&nbsp; if you don't. Choose neither if no preference.</h5>
		</div>
		<div class="col-xs-0 col-sm-1"></div>
		<div class="col-xs-12 col-sm-3">
			<%= link_to "Save preferences", "#", class: 'btn btn-default btn-success formButton-style' %>
		</div>
		<div class="col-xs-0 col-sm-1"></div>
	</div>
	<div class="row row-horizon">
		<% @styles.each do |style| %>
			<% if style.style_name != "Hybrid" %>
				<div class="col-sm-3 col-xs-12 style-tile-container">
					<%= link_to "#", :class => 'style-indicator dislike-style text-center show' do %>
						<i class="fa fa-times"></i>
					<% end %>
					<%= link_to "#", :class => 'style-indicator like-style text-center show' do %>
						<i class="fa fa-check"></i>
					<% end %>
					<div class="overview-tile-3">
						<div class="row no-margin text-center">
							<div class="img-responsive style-image-holder" alt="Responsive image" style="background-image: url(<%= style.style_image_url %>)">		
							</div>
						</div>
						<div class="row dislike-style-chosen hidden">
							<%= link_to "#", :class => 'style-indicator dislike-style text-center' do %>
								<i class="fa fa-times"></i>
							<% end %>
						</div>
						<div class="row like-style-chosen hidden">
							<%= link_to "#", :class => 'style-indicator like-style text-center' do %>
								<i class="fa fa-check"></i>
							<% end %>
						</div>
						<div class="row no-margin">
							<div class="col-xs-12">
								<h5 class="tile-header style-tile-header"><%= style.style_name %></h5>
							</div>	
						</div>
						<div class="row no-margin">
							<% @style_examples = find_style_examples(style.id) %>
							<div class="col-xs-12 style-why-statement">
								<p>Such as:</p>
									<ul>
										<% @style_examples.each do |example| %>
											<li><%= example.brewery.short_brewery_name + " " + example.beer_name %></li>
										<% end %>
									</ul>
							</div>
							<div class="col-xs-12 overview-tile-footer"></div>
						</div>
					</div>
				</div>
			<% end %>
		<% end %>
	</div>
</div>