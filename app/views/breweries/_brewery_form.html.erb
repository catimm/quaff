<%= form_for(@brewery) do |f| %>
	<%= f.hidden_field :form_type, :value => "edit" %>
	<%= f.text_field :brewery_name, :class => "form-control", placeholder: "Brewery name" %>
	<%= f.text_field :brewery_city, :class => "form-control", placeholder: "Brewery city" %>
	<%= f.text_field :brewery_state, :class => "form-control", placeholder: "Brewery state" %>
	<%= f.text_field :brewery_url, :class => "form-control", placeholder: "Brewery url" %>
	<%= f.text_field :alt_name_one, :class => "form-control", placeholder: "Alternative name (if any)" %>
	<%= f.text_field :alt_name_two, :class => "form-control", placeholder: "Alternative name (if any)" %>
	<%= f.text_field :alt_name_three, :class => "form-control", placeholder: "Alternative name (if any)" %>
	<%= f.submit "Submit", class: "btn btn-default btn-success formButton" %>			
<% end %>