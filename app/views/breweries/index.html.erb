<%= render 'layouts/header' %> 
<div class="container">
	<div class="row header-row">
		<div class="page-header">
			<div class="row">
				<div class="col-sm-7">
					<h3><%= @brewery_count %> breweries currently in the database</h3>
				</div>
				<div class="col-sm-5 text-right">
					<%= link_to "Add new brewery", new_brewery_path, :class => "btn btn-success inputButton2", data: {toggle: "modal", target: "#new_brewery"} %>
				</div>
			</div>
		</div>
	</div>
	<div class="row small-padding">
		<div class="col-sm-3">
			<h5><strong>Brewery Name</strong></h5>
		</div>
		<div class="col-sm-1">
			<h5><strong>City</strong></h5>
		</div>
		<div class="col-sm-1">
			<h5><strong>State</strong></h5>
		</div>
		<div class="col-sm-2">
			<h5><strong>Alt Name 1</strong></h5>
		</div>
		<div class="col-sm-2">
			<h5><strong>Alt Name 2</strong></h5>
		</div>
		<div class="col-sm-1">
			<h5><strong>Alt Name 3</strong></h5>
		</div>
	</div>
	<% if !@breweries.empty? %>
		<%= render 'breweries_list' %>
	<% else %>
		<h4>There are no breweries in the database.</h4>
	<% end %>
	<div id="new_brewery" class="modal">
		<%= render 'breweries/new' %>
	</div>
	<div id="edit_brewery" class="modal">
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
			<h3>Fix brewery info</h3>
			<%= link_to "Edit", "#", :class => "btn btn-success edit-brewery-info" %>
			<%= link_to "Delete", "#", :class => "btn btn-warning delete-brewery-info" %>
			<h5>
		</div>
		<div class="modal-body"></div>
	</div>
</div>
<%= render 'layouts/footer' %>