<%= render 'layouts/header' %> 
<div class="row no-margin spinner text-center">
	<div class="spinner-text">
		<i class="fa fa-spinner fa-spin fa-4x" aria-hidden="true"></i>
		<h4>Fetching...</h4>
	</div>
</div>
<div class="container">
	<% if !@order_prep.blank? %>
		<div class="row no-margin">
			<div class="col-xs-12 col-sm-offset-2 col-sm-8 col-md-offset-3 col-md-6 no-padding text-center" id="delivery-cost-message-holder">
				<%= render 'delivery_cost_message'%>
			</div>
		</div>
		<div class="row no-margin">
			<div class="col-xs-12 col-sm-3">
				<h1 class="cart-header">Cart</h1>
			</div>
		</div>
		<div class="row no-margin">
			<div class="col-xs-12 col-sm-9"  id="review-summary-holder">
				<%= render 'review_summary'%>
			</div>
			<div class="col-xs-12 col-sm-3 no-padding" id="checkout-summary-holder">
				<%= render 'checkout_summary' %>
			</div>
		</div>
	<% else %>
		<div class="row first-row-get-shopping">
			<div class="col-xs-12 text-center">
				<h3 class="start-shopping-text">Your cart is empty! Time to start shopping...</h3>
			</div>
			<div class="col-xs-offset-1 col-xs-10 col-sm-offset-4 col-sm-4 text-center">
				<%= link_to "Start shopping", stocks_path, class: "btn btn-success start-shopping-button" %>
			</div>
		</div>
	<% end %>
</div>
<%= render 'layouts/footer' %>