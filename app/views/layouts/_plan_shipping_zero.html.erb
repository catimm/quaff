<div class="row no-margin">
	<div class="col-xs-12 no-padding">
		<h3 class="retail-plan-header">The Ad Hoc</h3>
		<h5 class="retail-plan-subheader"><span>The no-membership option</span>: just order when your supply is running low.</h5>
	</div>
</div>
<div class="row no-margin">
	<div class="col-xs-7 membership-plan-feature-setup">
		<h4 class="plan-cost">Plan cost:</h4>
	</div>
	<div class="col-xs-5 membership-plan-feature-shown">
		<h4 class="plan-cost">$0</h4>
	</div>
	<div class="col-xs-7 membership-plan-feature-setup">
		<h4>Shipping cost per order:</h4>
	</div>
	<div class="col-xs-5 membership-plan-feature-shown">
		<h4>
			<%= number_to_currency(@zone_plan_zero_shipment_cost_low, precision: 0) %> - <%= number_to_currency(@zone_plan_zero_shipment_cost_high, precision: 0) %>
			<sup  data-toggle="tooltip" title="This is a range; the actual fee is based on final weight and will be shared prior to shipment.">?</sup>
		</h4>
	</div>
	<div class="col-xs-8 membership-plan-feature-setup-holder hidden-xs">
		<h4></h4>
	</div>
	<div class="col-xs-4 membership-plan-feature-shown-holder hidden-xs">
		<h4></h4>
	</div>
</div>
