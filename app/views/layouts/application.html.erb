<!DOCTYPE html>
<html>
<head>
  	<% if content_for?(:title) %>
		<%= yield :title %>
	<% else %>
		<title>Knird - Drink what you love. Love what you drink.</title>
	<% end %>
	<script type="text/javascript">
	  var BASE_URL = '<%= root_url %>';
	</script>
	<%= include_gon(:init => true) %>
	  
	<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=0">
	<% if content_for?(:description) %>
		<%= yield :description %>
	<% else %>
		<meta property="description" content="Knird delivers craft beer and cider that is curated according to your personal taste preferences." />
	<% end %>
	<meta property="og:type" content="website" />
	<meta property="og:url" content="http://www.drinkknird.com" />
	<meta property="og:image" content="http://www.drinkknird.com/logo.png"/>
	<meta charset=utf-8 />
	<meta http-equiv="X-UA-Compatible" content="IE=9" />
	<link rel="icon" type="image/x-ico" href="http://www.drinkknird.com/logo.png" />
	<%= favicon_link_tag 'Knird_logo.ico' %>
	<%= stylesheet_link_tag "application", :media => "all" %>
	<%= javascript_include_tag "application" %>
	<%= csrf_meta_tags %>
	<% unless ENV["RAILS_ENV"] == "development" %>
		<!-- Script for Google Analytics service -->
		<script>
		  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
		  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
		  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
		  })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
		
		  ga('create', 'UA-65821771-1', 'auto');
		  ga('send', 'pageview');
		</script>
	<% end %>
</head>
<body>

<%= yield %>

</body>
</html>
