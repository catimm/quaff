<div class="row">
	<div class="container">
		<div class="col-xs-12 text-center">
			<h2 class="signup-question">What else do you want to tell us about your <%= drink %> preferences?</h2>
		</div>
	</div>
</div>
<div class="row no-margin">
	<div class="container">
		<div class="row no-margin">
			<%= simple_form_for @user_drink_preferences, :url => {:action => "process_#{drink}_extras"} do |f| %>
				<div class="col-xs-offset-1 col-xs-10 col-sm-offset-2 col-sm-8 delivery-additional-request">
					<%= f.input :additional, 
								placeholder: 'For example, "I always want an ISA on hand" or "I want to improve my cellar selection" or "I prefer a 6-pack for ~$10 and then fill in the rest with speciality #{drink}s"', 
								label: false %>
				</div>
				<div class="col-xs-offset-1 col-xs-10 col-sm-offset-4 col-sm-4 no-padding text-center">
					<% if @user_drink_preferences.additional.nil? %>
						<%= f.submit "Save", class: "btn btn-success update_delivery_request" %>
					<% else %>
						<%= f.submit "Update", class: "btn btn-success update_delivery_request" %>
					<% end %>
				</div>
			<% end %>
		</div>
	</div>
</div>