<div class="row plan-location-info-row">
	<div class="col-xs-offset-1 col-xs-10 plan-location-info-holder">
		<div class="row no-margin">
			<div class="col-xs-12 text-center no-padding">
				<h4 class="zip-code-search-directions">Showing plans currently available for <%= @location %>.</h4>
			</div>
		</div>
		<div class="row no-margin">
			<div class="col-xs-offset-1 col-xs-10 col-sm-offset-3 col-sm-3 no-padding">
				<%= text_field_tag 'delivery_area', nil, placeholder: 'Enter different zip code', class: 'form-control check-zip-code-button', id: 'check-zip-code' %>
			</div>
			<div class="col-xs-offset-1 col-xs-10 col-sm-offset-0 col-sm-4">
				<%= link_to "#", :class => "btn btn-success find-plans-zip-code-button #{@page_source}" do %>
							<i class="fa fa-exchange">&nbsp;</i>
							Change zip code 
						<% end %>
			</div>
		</div>
		<% if @close_to_delivery_zones == true %>
			<div class="row no-margin">
				<div class="col-xs-10 col-sm-9 no-padding">
					<h4 class="check-local-delivery-zones-message">
						Even though your zip code is just beyond our local delivery area, we can still ship to you!<br> 
						Or, check our map to see if your home and/or work fall within our local delivery zones.
					</h4>
				</div>
				<div class="col-xs-2 home-page-view-map-button-holder">
					<%= link_to "#", class: 'btn btn-primary btn-inverse delivery-thoughts-text', 
							data: {toggle: "modal", target: "#initial_delivery_area"} do %>
						<i class="fa fa-map-marker"> View map</i>
					<% end %>
				</div>
			</div>
		<% end %>
	</div>
</div>
<div class="row plan-details-row">
	<div class="col-xs-12 col-sm-4">
		<div class="homepage-plan-options">
			<%= render 'layouts/plan_shipping_zero' %>
			<% if @page_source != "homepage" %>
				<div class="row no-margin">
					<div class="col-xs-12 no-padding">
						<%= link_to "Confirm The Ad Hoc Plan", 
									process_account_membership_getting_started_path(@zone_zero), 
									method: :post, class: 'btn btn-primary plan-get-started-button' 
						%>
					</div>
				</div>
			<% end %>
			<div class="row no-margin">
				<div class="col-xs-12 no-padding">
					<h6 class='membership-extra-info'>Order when you like; 6 drink minimum order.</h6>
				</div>
			</div>
		</div>
	</div>
	<div class="col-xs-12 col-sm-4">
		<div class="homepage-plan-options">
			<%= render 'layouts/plan_shipping_three' %>
			<% if @page_source != "homepage" %>
				<div class="row no-margin">
					<div class="col-xs-12 no-padding">
						<%= form_tag process_account_membership_getting_started_path(@zone_three), class:"plan-button" do %>
							<input name="plan_id" type="hidden" value="shipping_three"></input>
				          	<script 
				          		class="stripe-button" 
				          		data-name="Knird" 
				          		data-description="<%= number_to_currency(@zone_plan_three_cost, precision: 0) %>" + " for The Prepaid 3" 
				          		data-currency="USD" 
				          		data-label="Start The Prepaid 3 Plan"
				          		data-email="<%= @user.email %>" 
				          		data-image="https://s3-us-west-2.amazonaws.com/knird/Knird_logo-3.jpg" 
				          		data-key="<%= Rails.configuration.stripe[:publishable_key] %>" 
				          		src="https://checkout.stripe.com/checkout.js">
				          	</script>
						<% end %>
					</div>
				</div>
			<% end %>
			<div class="row no-margin">
				<div class="col-xs-12 no-padding">
					<h6 class='membership-extra-info'>Change any shipment date. Cancel any time.</h6>
				</div>
			</div>
		</div>
	</div>
	<div class="col-xs-12 col-sm-4">
		<div class="homepage-plan-options">
			<%= render 'layouts/plan_shipping_nine' %>
			<% if @page_source != "homepage" %>
				<div class="row no-margin">
					<div class="col-xs-12 no-padding">
						<%= form_tag process_account_membership_getting_started_path(@zone_nine), class:"plan-button" do %>
							<input name="plan_id" type="hidden" value="shipping_nine"></input>
				          	<script 
				          		class="stripe-button" 
				          		data-name="Knird" 
				          		data-description="<%= number_to_currency(@zone_plan_nine_cost, precision: 0) %>" + " for The Prepaid 9" 
				          		data-currency="USD" 
				          		data-label="Start The Prepaid 9 Plan"
				          		data-email="<%= @user.email %>" 
				          		data-image="https://s3-us-west-2.amazonaws.com/knird/Knird_logo-3.jpg" 
				          		data-key="<%= Rails.configuration.stripe[:publishable_key] %>" 
				          		src="https://checkout.stripe.com/checkout.js">
				          	</script>
						<% end %>
					</div>
				</div>
			<% end %>
			<div class="row no-margin">
				<div class="col-xs-12 no-padding">
					<h6 class='membership-extra-info'>Change any shipment date. Cancel any time.</h6>
				</div>
			</div>
		</div>
	</div>
</div>
