<div class="row no-margin drink-info-universal-first-row">
	<div class="col-xs-2 col-sm-2 brewery-image-holder-universal">
		<% if !drink.beer.brewery.image.blank? %>
			<img class="img-responsive center-block" alt="Responsive image" src="<%= drink.beer.brewery.image %>">
		<% else %>
			<div class="brewery-image-holder-empty-ratings-page text-center">
				<h2><i class="fa fa-beer"></i></h2>
			</div>
		<% end %>
	</div>
	<div class="col-xs-10 no-padding drink-name-and-info-holder-universal">
		<%= render 'layouts/drink_name_and_info_homepage', drink: drink.beer %>	
	</div>
</div>
<div class="row no-margin size-price-row">
	<div class="col-xs-7">
		<h5 class="svg-holder" data-toggle="tooltip" title="<%= drink.size_format.format_name %>" data-placement="top">
			<%= svg drink.size_format.image %>
		</h5>
	</div>
	<div class="col-xs-5 text-right">
		<h5 class="item-price">
			<% if @four_five = true %>
				<%= number_to_currency(drink.drink_price_four_five, precision: 2) %> each
			<% elsif @five_zero = true %>
				<%= number_to_currency(drink.drink_price_five_zero, precision: 2) %> each
			<% else %>
				<%= number_to_currency(drink.drink_price_five_five, precision: 2) %> each
			<% end %>
		</h5>		
	</div>
</div>