<% @user_rating_info = UserBeerRating.where(user_id: drink.user.id, beer_id: drink.account_delivery.beer.id) %>

<% if !@user_rating_info.blank? %>
	<% @user_rating = (@user_rating_info.average(:user_beer_rating).to_f).round(2) %>
	<% if @user_rating >= 10.0 %>
		<% @user_rating = 10 %>
	<% end %>
	<p><span class="best-guess">Our guess</span>: <span class="best-guess"><%= drink.account_delivery.projected_rating %></span></p>	
	<p><span class="user-rating-acknowledged">Your rating</span>:</p>
	<h1 class="user-rating"><%= @user_rating %><span class="recent-user-rating-context">/10</span></h1>
<% else %>
	<p><span class="best-guess">Our guess</span>:</p>
	<% if !drink.account_delivery.projected_rating.nil? %>
		<h1 class="best-guess"><%= drink.account_delivery.projected_rating %><span class="recent-user-rating-context">/10</span></h1>
	<% else %>
		<h1 class="best-guess"><%= drink.account_delivery.beer.best_guess %><span class="recent-user-rating-context">/10</span></h1>
	<% end %>
<% end %>