<div class="row no-margin drink-info-universal-first-row">
	<div class="col-xs-3 col-sm-2 brewery-image-holder-universal">
		<% if !drink.brewery.image.blank? %>
			<img class="img-responsive center-block" alt="<%= drink.brewery.brewery_name %> logo" src="<%= drink.brewery.image %>">
		<% else %>
			<div class="brewery-image-holder-empty-ratings-page text-center">
				<h2><i class="fa fa-beer"></i></h2>
			</div>
		<% end %>
	</div>
	<div class="col-xs-8 col-sm-4 col-sm-6 no-padding drink-name-and-info-holder-universal">
		<%= render 'drink_page_name_and_info', drink: drink %>	
	</div>
	<div class="col-xs-12 col-sm-4 cloud-descriptor-drink-page">
		<div class="cloud-holder-full-page" id="drink_<%= drink.id %>"></div>
	</div>
</div>
<div class="row drink-info-drink-page-second-row">	
	<div class="col-xs-12 why-statement">
		<% if !drink.brewer_description.nil? %>
			<h5 class="small-brewer-description" id="brewer-description"><%= drink.brewer_description %></h5>
			<%= link_to "+ expand brewer description", "#", class: "show more-brewer-description", :id => "more-brewer-description" %>
			<%= link_to "- less", "#", class: "hidden less-brewer-description", :id => "less-brewer-description" %>
		<% end %>
	</div>
</div>