<div class="col-xs-12 col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8 no-padding">
	<div class="row no-margin">
		<div class="col-xs-12 text-center no-padding">
			<h4 class="zip-code-search-directions">Enter your delivery address zip code to see Knird plans available to you.</h4>
		</div>
	</div>
	<div class="row no-margin">
		<div class="col-xs-offset-1 col-xs-10 col-sm-offset-2 col-sm-4 no-padding">
			<%= text_field_tag 'delivery_zip_code', nil, placeholder: 'Enter your delivery zip code', class: 'form-control check-zip-code-button', id: 'check-zip-code' %>
		</div>
		<div class="col-xs-offset-1 col-xs-10 col-sm-offset-0 col-sm-4">
			<%= link_to "#", :class => "btn btn-success find-plans-zip-code-button #{@page_source}" do %>
				<i class="fa fa-play">&nbsp;</i>
				View your options 
			<% end %>
		</div>
	</div>
</div>
