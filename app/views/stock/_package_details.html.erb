<% @drink_count = package.special_package_drinks.sum(:quantity)  %>
<div class="delivery-info-box drinks">
	<p>drinks</p>
	<h4 class="delivery-preference-prompt"><%= @drink_count %></h4>
</div>
<div class="delivery-info-box retail-value">
	<p>retail value</p>
	<h4 class="delivery-preference-prompt"><%= number_to_currency(package.retail_cost, precision: 2) %></h4>
</div>				
<div class="delivery-info-box total-price">
	<p>special price</p>
	<h4 class="delivery-preference-prompt"><%= number_to_currency(package.actual_cost, precision: 2) %></h4>
</div>

