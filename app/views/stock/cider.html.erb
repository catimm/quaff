<%= render 'layouts/header' %> 
<%= render 'stock_common', current_section: "Cider" %>
<div class="row no-margin spinner text-center">
	<div class="spinner-text">
		<i class="fa fa-spinner fa-spin fa-4x" aria-hidden="true"></i>
		<h4>Fetching...</h4>
	</div>
</div>
<div class="container">
	<div class="row no-margin" id="stock-page-header-message">
		<% if !user_signed_in? || current_user.subscription_status != "subscribed" %>
			<%= render 'stock_page_header_message' %>
		<% end %>
	</div>
	<div class="row no-margin" id="cider-header-row">
		<%= render 'cider_header' %>
	</div>
	<div class="row filter-row" id="cider-filter-row">
		<%= render 'cider_filters' %>
	</div>
	<div class="row no-margin" id="cider-filter-results-row">
		<%= render 'cider_filter_results' %>
	</div>
	<div class="col-xs-12" id="stock-paginator-row">
		<%= render 'stock_drink_paginator' %>
	</div>
</div>
<div id="drink_addition_confirmation" class="modal">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
		<h3>Got it!</h3>
	</div>
	<div class="modal-body">
		<div class="row no-margin" id="drink_addition_message"></div>
		<div class="col-xs-offset-1 col-xs-10 col-sm-offset-4 col-sm-4 add-button-holder">
			<%= link_to "Cool!", "#", :class => 'btn btn-success add-drink-button', :data => {:dismiss=>"modal"} %>
		</div>
	</div>
</div>
<div id="add_zip_code" class="modal">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
		<h3>Add your delivery zip code to see local prices</h3>
	</div>
	<div class="modal-body">
		<div class="col-xs-12 col-sm-offset-1 col-sm-5">
		<%= text_field_tag 'delivery_zip_code', nil, placeholder: 'Enter your zip code', class: 'form-control check-zip-code-button', id: 'check-zip-code' %>
		</div>
		<div class="col-xs-12 col-sm-5">
			<%= link_to "#", :class => "btn btn-success home-start-with-zip" do %>
				<i class="fa fa-map-marker" aria-hidden="true"></i>
				Submit 
			<% end %>
		</div>
	</div>
</div>
<%= render 'layouts/footer' %>