<div id="add_zip_code" class="modal">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
		<h3>Add delivery zip code to see local prices</h3>
	</div>
	<div class="modal-body">
		<%= simple_form_for @zip_code_check, :url => process_zip_from_inventory_path, :html => { :class => 'form-horizontal' } do |zip| %>		
			<div class="col-xs-12 col-sm-offset-1 col-sm-5">
				<%= zip.input :zip, input_html: { class: "form-control" }, placeholder: "Delivery Zip Code", required: true, label: false %>
			</div>
			<div class="col-xs-12 col-sm-5">
				<%= zip.submit "Submit", class: "btn btn-success stock-start-with-zip" %>
			</div>
		<% end %>
	</div>
</div>