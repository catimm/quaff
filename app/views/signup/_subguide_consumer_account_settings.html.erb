<div class="col-xs-6 col-sm-offset-2 col-sm-4 col-md-offset-3 col-md-3 no-padding signup-guide-column-holder <%= @account_address_chosen %>">
	<%= link_to "delivery address", account_address_getting_started_path(@user.id), class: "guide-header #{@account_address_chosen}" %>
	<h5 class="pipe-separator">&#124;</h5>
</div>
<div class="col-xs-6 col-sm-4 col-md-3 no-padding signup-guide-column-holder <%= @account_membership_chosen %>">
	<% if @user.getting_started_step >= 10 %>
		<%= link_to "membership", account_membership_getting_started_path(@user.id), class: "guide-header #{@account_membership_chosen}" %>
	<% else %>
		<h5 class="guide-header">membership</h5>
	<% end %>
</div>
