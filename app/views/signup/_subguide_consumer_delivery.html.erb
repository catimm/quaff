<% if (current_user.role_id == 1 || current_user.role_id == 4) && @user_subscription.subscription.deliveries_included != 0 %>
	<div class="col-xs-4 no-padding signup-guide-column-holder <%= @delivery_frequency_chosen %>">
		<% if @user.getting_started_step >= 10 %>
			<%= link_to "frequency", delivery_frequency_getting_started_path, class: "guide-header #{@delivery_frequency_chosen}" %>
		<% else %>
			<h5 class="guide-header">frequency</h5>
		<% end %>
		<h5 class="pipe-separator">&#124;</h5>
	</div>
	<div class="col-xs-4 no-padding signup-guide-column-holder <%= @user_delivery_address_chosen %>">
		<% if @user.getting_started_step >= 11 %>
			<%= link_to "delivery address", delivery_address_getting_started_path, class: "guide-header #{@user_delivery_address_chosen}" %>
		<% else %>
			<h5 class="guide-header">delivery address</h5>
		<% end %>
		<h5 class="pipe-separator">&#124;</h5>
	</div>
	<div class="col-xs-4 no-padding signup-guide-column-holder <%= @delivery_preference_chosen %>">
		<% if @user.getting_started_step >= 12 %>
			<%= link_to "start date", delivery_preferences_getting_started_path, class: "guide-header #{@delivery_preference_chosen}" %>
		<% else %>
			<h5 class="guide-header">start date</h5>
		<% end %>
	</div>	
<% end %>

