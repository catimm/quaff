<% if (1..4).include?(@user_subscription.subscription_id) %>
	<% if current_user.role_id == 1 || current_user.role_id == 4 %>
		<div class="col-xs-6 col-sm-offset-3 col-sm-3 no-padding signup-guide-column-holder <%= @delivery_numbers_chosen %>">
			<%= link_to "delivery numbers", delivery_numbers_getting_started_path, class: "guide-header #{@delivery_numbers_chosen}" %>
			<h5 class="pipe-separator">&#124;</h5>
		</div>
		<div class="col-xs-6 col-sm-3 no-padding signup-guide-column-holder <%= @delivery_preference_chosen %>">
			<% if @user.getting_started_step >= 3 %>
				<%= link_to "delivery start", delivery_preferences_getting_started_path, class: "guide-header #{@delivery_preference_chosen}" %>
			<% else %>
				<h5 class="guide-header">delivery start</h5>
			<% end %>
		</div>
	<% end %>
<% end %>

