<%= render 'layouts/header_early_signup' %> 
<div class="container">
	<div class="row no-margin spinner-signup text-center">
		<div class="spinner-text">
			<i class="fa fa-spinner fa-spin fa-4x" aria-hidden="true"></i>
			<h4>Processing...</h4>
		</div>
	</div>
	<div class="row no-margin first-row-signup">
		<%= render 'signup/signup_guide_consumer' %>
	</div>
	<div class="row">
		<div class="col-xs-12 text-center">
			<h2 class="signup-question">Where should we deliver your drinks?</h2>
			<h5 class="signup-question-detail">You can update this info on your account profile page anytime after signup.</h5>
		</div>
	</div>
	<div class="row">
        <div class="col-xs-offset-1 col-xs-10 col-sm-offset-3 col-sm-12" id="signup-personal-info-holder">
            <%= simple_form_for @user_address, url: {action: "process_delivery_address_getting_started"} do |f| %>
                <%= render 'user_addresses/user_address_form', f: f %>
				<div class="form-group">
					<div class="col-xs-offset-1 col-xs-6 col-sm-offset-1 col-sm-5 text-center">
						<%= f.submit "Next", class: "btn btn-success user-info-next-button", id: "user-info-next-button" %>
					</div>
				</div>
            <% end %>
        </div>	
	</div>
</div>

<%= render 'layouts/footer' %>