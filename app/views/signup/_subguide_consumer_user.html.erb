<div class="col-xs-6 col-sm-offset-2 col-sm-4 no-padding signup-guide-column-holder <%= @user_personal_info_chosen %>">
	<%= link_to "user info", edit_user_path(@user.id), class: "guide-header #{@user_personal_info_chosen}" %>
	<h5 class="pipe-separator">&#124;</h5>
</div>
<% if current_user.role_id == 1 || current_user.role_id == 4 %>
	<div class="col-xs-6 col-sm-4 no-padding signup-guide-column-holder <%= @user_plan_chosen %>">
		<% if @user.getting_started_step >= 8 %>
			<%= link_to "plan choice", account_membership_getting_started_path, class: "guide-header #{@user_plan_chosen}" %>
		<% else %>
			<h5 class="guide-header">plan choice</h5>
		<% end %>
	</div>
<% end %>	
