<%= render 'layouts/header' %> 
	<div class="row">
		<div class="container" id="signup-thank-you-header">
			<div class="col-xs-12 text-center">
				<h2 class="signup-question">Your free curation is being processed! You'll receive an email soon.</h2>
				<h5 class="signup-question-detail">In the meantime, feel free to explore the site.</h5>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="container">
			<div class="row">
				<div class="col-xs-offset-1 col-xs-10 col-sm-offset-2 col-sm-6">
					<h4 class="signup-next-step-header">Sign up for a delivery plan</h4>
					<h5 class="signup-next-step-text">You can sign up for a plan whenever your ready....</h5>
				</div>
				<div class="col-xs-offset-1 col-xs-10 col-sm-2 no-padding-right">
					<%= link_to "Check out plans", account_settings_membership_user_path, class: "btn btn-default btn-success thank-you-next-button" %>
				</div>
			</div>
			<div class="row">
				<div class="col-xs-offset-1 col-xs-10 col-sm-offset-2 col-sm-8">
					<hr>
				</div>
			</div>
			<div class="row">
				<div class="col-xs-offset-1 col-xs-10 col-sm-offset-2 col-sm-6">
					<h4 class="signup-next-step-header">Add a mate to your account</h4>
					<h5 class="signup-next-step-text">You can add free guests to your account so others at your address can get their own curated and
						personlized set of drinks.</h5>
				</div>
				<div class="col-xs-offset-1 col-xs-10 col-sm-2 no-padding-right">
					<%= link_to "Add a guest", account_settings_mates_user_path, class: "btn btn-default btn-success thank-you-next-button" %>
				</div>
			</div>
			<% if @user_delivery_preference.beer_chosen == true %>
				<div class="row">
					<div class="col-xs-offset-1 col-xs-10 col-sm-offset-2 col-sm-8">
						<hr>
					</div>
				</div>
				<div class="row">
					<div class="col-xs-offset-1 col-xs-10 col-sm-offset-2 col-sm-6">
						<h4 class="signup-next-step-header">Further personalize your beer settings</h4>
						<h5 class="signup-next-step-text">You can refine your beer settings to more accurately reflect
							your preferences.</h5>
					</div>
					<div class="col-xs-offset-1 col-xs-10 col-sm-2 no-padding-right">
						<%= link_to "Update beer settings", settings_beer_priorities_path, class: "btn btn-default btn-success thank-you-next-button" %>
					</div>
				</div>
			<% end %>
			<% if @user_delivery_preference.cider_chosen == true %>
				<div class="row">
					<div class="col-xs-offset-1 col-xs-10 col-sm-offset-2 col-sm-8">
						<hr>
					</div>
				</div>
				<div class="row">
					<div class="col-xs-offset-1 col-xs-10 col-sm-offset-2 col-sm-6">
						<h4 class="signup-next-step-header">Further personalize your cider settings</h4>
						<h5 class="signup-next-step-text">You can refine your cider settings to more accurately reflect
							your preferences.</h5>
					</div>
					<div class="col-xs-offset-1 col-xs-10 col-sm-2 no-padding-right">
						<%= link_to "Refine cider styles", settings_cider_priorities_path, class: "btn btn-default btn-success thank-you-next-button" %>
					</div>
				</div>
			<% end %>
		</div>
	</div>
<%= render 'layouts/footer' %>