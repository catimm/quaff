<% if @user_delivery_preference.beer_chosen == true %>
	<div class="row">
		<div class="col-xs-offset-1 col-xs-10 col-sm-offset-2 col-sm-8">
			<hr>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-offset-1 col-xs-10 col-sm-offset-2 col-sm-6">
			<h4 class="signup-next-step-header">Further personalize your beer settings</h4>
			<h5 class="signup-next-step-text">You can refine your beer settings to more accurately reflect
				your preferences.</h5>
		</div>
		<div class="col-xs-offset-1 col-xs-10 col-sm-2 no-padding-right">
			<%= link_to "Update beer settings", settings_beer_priorities_path, class: "btn btn-default btn-success thank-you-next-button" %>
		</div>
	</div>
<% end %>
<% if @user_delivery_preference.cider_chosen == true %>
	<div class="row">
		<div class="col-xs-offset-1 col-xs-10 col-sm-offset-2 col-sm-8">
			<hr>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-offset-1 col-xs-10 col-sm-offset-2 col-sm-6">
			<h4 class="signup-next-step-header">Further personalize your cider settings</h4>
			<h5 class="signup-next-step-text">You can refine your cider settings to more accurately reflect
				your preferences.</h5>
		</div>
		<div class="col-xs-offset-1 col-xs-10 col-sm-2 no-padding-right">
			<%= link_to "Refine cider styles", settings_cider_priorities_path, class: "btn btn-default btn-success thank-you-next-button" %>
		</div>
	</div>
<% end %>