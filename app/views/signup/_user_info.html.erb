<div class="row">
	<div class="container">
		<div class="col-xs-12 text-center">
			<p class="step-number-guide">3 of 3</p>
		</div>
		<div class="col-xs-12 text-center">
			<h2 class="signup-question">Complete your profile to get started with Knird.</h2>
			<h5 class="signup-question-detail">You can update this info on your user profile page after signup.</h5>
		</div>
	</div>
</div>
<div class="row">
	<div class="container">
		<div class="col-xs-0 col-sm-4"></div>
		<div class="col-xs-12 col-sm-4">
			<div class="row no-margin user-info-form">
				<%= form_for @user, :url => {:controller => "signup", :action => "account_info_process"} do |f| %>
					<div class="col-xs-12">
						<%= f.text_field :first_name, :class => "form-control", placeholder: "First name" %>
					</div>
					<div class="col-xs-12">
						<%= f.text_field :last_name, :class => "form-control", placeholder: "Last name" %>
					</div>
					<div class="col-xs-12">
						<%= f.text_field :username, :class => "form-control", placeholder: "Username" %>
					</div>
					<%= f.fields_for :user_delivery_addresses, UserDeliveryAddress.new do |address| %>
						<%= address.hidden_field :city %>
						<%= address.hidden_field :state %>
						<div class="col-xs-12">
							<%= address.text_field :address_one, :class => "form-control", placeholder: "Delivery Street Address 1" %>
						</div>
						<div class="col-xs-12">
							<%= address.text_field :address_two, :class => "form-control", placeholder: "Delivery Street Address 2 (Apt, Unit, etc.)" %>
						</div>
						<div class="col-xs-12">
							<%= address.text_field :zip, :class => "form-control", placeholder: "Zip Code" %>
						</div>
						<div class="col-xs-12">
							<%= address.text_area :special_instructions, :class => "form-control", placeholder: "Any special instructions for deliveries?" %>
						</div>
					<% end %>
					<div class="col-xs-12">
						<%= f.submit "Create Account", class: "btn btn-default btn-success formButton" %>
					</div>
				<% end %>
				<div class="col-xs-12 text-center">
					<h5 class="terms-and-conditions-text">By clicking Create Account, you agree to our 
						<%= link_to "terms", terms_path %> and <%= link_to "privacy policy", privacy_path %>.</h5>
				</div>
			</div>
		</div>
	</div>
</div>