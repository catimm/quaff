<div class="row">
	<div class="container">
		<div class="col-xs-12 text-center">
			<p class="step-number-guide">3 of 3</p>
		</div>
		<div class="col-xs-12 text-center">
			<h2 class="signup-question">Complete your profile to get started with Knird.</h2>
			<h5 class="signup-question-detail">You can update this info on your user profile page after signup.</h5>
		</div>
	</div>
</div>
<div class="row">
	<div class="container">
		<div class="col-xs-0 col-sm-3"></div>
		<div class="col-xs-12 col-sm-6">
			<div class="row no-margin user-info-form">
				<%= simple_form_for @user, :url => {:controller => "signup", :action => "account_info_process"}, :html => { :class => 'form-horizontal' } do |f| %>
					<label for="first_name_field" class="col-xs-4 col-sm-3 control-label">First name</label>
					<div class="col-xs-8 col-sm-9">
						<%= f.input :first_name, input_html: { class: "form-control", id: "first_name_field" }, placeholder: "First name", label: false %>
					</div>
					<label for="last_name_field" class="col-xs-4 col-sm-3 control-label">Last name</label>
					<div class="col-xs-8 col-sm-9">
						<%= f.input :last_name, input_html: { class: "form-control", id: "last_name_field" }, placeholder: "Last name", label: false %>
					</div>
					<label for="username_field" class="col-xs-4 col-sm-3 control-label">Username</label>
					<div class="col-xs-8 col-sm-9">
						<%= f.input :username, input_html: { class: "form-control", id: "username_field" }, placeholder: "Username", label: false %>
					</div>
					<label for="email_field" class="col-xs-4 col-sm-3 control-label">Email</label>
					<div class="col-xs-8 col-sm-9">
						<%= f.input :email, input_html: { class: "form-control", id: "email_field" }, placeholder: "Email", label: false %>
					</div>
					<label for="birthdate_field" class="col-xs-4 col-sm-3 control-label">Birthdate <sup  id="signup_birthdate_note" data-toggle="tooltip" title="You must be 21 to use the Knird service.">?</sup></label> 
					<div class="col-xs-8 col-sm-9">
						<%= f.input :birthday, as: :string, input_html: { type: :date, class: "form-control", id: "birthdate_field" }, placeholder: "Birthdate", label: false %>
					</div>
					<%= f.simple_fields_for :user_delivery_addresses, UserDeliveryAddress.new do |address| %>
						<%= address.input :city, :as => :hidden %>
						<%= address.input :state, :as => :hidden %>
						<label for="address_one_field" class="col-xs-4 col-sm-3 control-label">Address one</label>
						<div class="col-xs-8 col-sm-9">
							<%= address.input :address_one, input_html: { class: "form-control", id: "address_one_field" }, placeholder: "Delivery Street Address 1", label: false %>
						</div>
						<label for="address_two_field" class="col-xs-4 col-sm-3 control-label">Address two</label>
						<div class="col-xs-8 col-sm-9">
							<%= address.input :address_two, input_html: { class: "form-control", id: "address_two_field" }, placeholder: "Delivery Street Address 2 (Apt, Unit, etc.)", label: false %>
						</div>
						<label for="zip_code_field" class="col-xs-4 col-sm-3 control-label">Zip code</label>
						<div class="col-xs-8 col-sm-9">
							<%= address.input :zip, input_html: { class: "form-control", id: "zip_code_field" }, placeholder: "Zip Code", label: false %>
						</div>
						<label for="instructions_field" class="col-xs-4 col-sm-3 control-label">Special instructions</label>
						<div class="col-xs-8 col-sm-9">
							<%= address.input :special_instructions, input_html: { class: "form-control", id: "instructions_field" }, placeholder: "Any special instructions for deliveries?", label: false %>
						</div>
					<% end %>
					<div class="col-xs-12">
						<%= f.submit "Create Account", class: "btn btn-default btn-success formButton" %>
					</div>
				<% end %>
				<div class="col-xs-12 text-center">
					<h5 class="terms-and-conditions-text">By clicking Create Account, you agree to our 
						<%= link_to "terms", terms_path %> and <%= link_to "privacy policy", privacy_path %>.</h5>
				</div>
			</div>
		</div>
	</div>
</div>