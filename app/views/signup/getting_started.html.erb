<%= render 'layouts/header_signup' %> 
	<div class="row no-margin first-row-signup">
		<%= render 'signup_guide' %>
	</div>
	<% if @view == "category" %>
    	<%= render 'drink_category' %>
    <% elsif @view == "journey" %>
    	<%= render 'craft_journey' %>  
    <% elsif @view == "styles" %>
    	<% if @step == "1" %>
    		<%= render 'drink_styles_like' %>
    	<% else %>
    		<%= render 'drink_styles_dislike' %>
    	<% end %>
    <% elsif @view == "preferences" %>
    	<% if @step == "1" %>
    		<%= render 'drinks_per_week' %>
    	<% else %>
    		<%= render 'large_format_per_week' %>
    	<% end %>
    <% else %>
    	<% if @step == "1" %>
    		<%= render 'delivery_plan' %>
    	<% elsif @step == "2" %>
    		<%= render 'start_date' %>
    	<% else %>
    		<%= render 'user_info' %>
    	<% end %>
    <% end %>
<div id="getting_started_welcome" class="modal">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
		<h3>Welcome to Knird's signup process</h3>
	</div>
	<div class="modal-body initial-message-after-signup">
		<h5>We have only a handful of questions to ask to get your account setup.</h5>
		<h5>When we're done here, you'll be all set to receive your first delivery of personalized and curated drinks.</h5>
		<h5>This won't take long. We promise.</h5>
	</div> 
</div>
<%= render 'layouts/footer' %>
