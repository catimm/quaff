<%= render 'layouts/header_signup' %> 
	<div class="row no-margin first-row-signup">
		<div class="container first-row-container-signup">
			<%= render 'signup_guide' %>
		</div>
	</div>
	<% if @view == "category" %>
    	<%= render 'drink_category' %>
    <% elsif @view == "journey" %>
    	<%= render 'craft_journey' %>  
    <% elsif @view == "styles" %>
    	<% if @step == "1" %>
    		<%= render 'drink_styles_like' %>
    	<% else %>
    		<%= render 'drink_styles_dislike' %>
    	<% end %>
    <% elsif @view == "preferences" %>
    	<% if @step == "1" %>
    		<%= render 'drinks_per_week' %>
    	<% elsif @step == "2" %>
    		<%= render 'large_format_per_week' %>
    	<% else %>
    		<%= render 'new_vs_repeat' %>
    	<% end %>
    <% else %>
    	<% if @step == "1" %>
    		<%= render 'delivery_plan' %>
    	<% elsif @step == "2" %>
    		<%= render 'start_date' %>
    	<% else %>
    		<%= render 'user_info' %>
    	<% end %>
    <% end %>
	
<%= render 'layouts/footer' %>
