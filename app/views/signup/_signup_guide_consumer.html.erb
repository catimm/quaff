<% if session[:need_beers_per_week] || session[:need_ciders_per_week] %>
	<div class="row no-margin">
		<div class="col-xs-4 col-md-offset-3 col-md-2 no-padding signup-guide-column-holder <%= @user_chosen %>">
			<%= link_to "account", edit_user_path(@user.id), class: "guide-header #{@user_chosen}" %>
			<div class="fa fa-chevron-right"></div>
		</div>
		<div class="col-xs-4 col-md-2 no-padding signup-guide-column-holder <%= @drink_chosen %>">
			<% if @user.getting_started_step >= 9 %>
				<%= link_to "drinks", session[:drink_path], class: "guide-header #{@drink_chosen}" %>
			<% else %>
				<h5 class="guide-header">drinks</h5>
			<% end %>
			<div class="fa fa-chevron-right"></div>
		</div>
		<div class="col-xs-4 col-md-2 no-padding signup-guide-column-holder <%= @delivery_chosen %>">
			<% if @user.getting_started_step >= 11 %>
				<%= link_to "deliveries", delivery_frequency_getting_started_path, class: "guide-header #{@delivery_chosen}" %>
			<% else %>
				<h5 class="guide-header">deliveries</h5>
			<% end %>
		</div>
	</div>
<% else %>
	<div class="row no-margin">
		<div class="col-xs-6 col-sm-offset-4 col-sm-2 no-padding signup-guide-column-holder <%= @user_chosen %>">
			<%= link_to "account", edit_user_path(@user.id), class: "guide-header #{@user_chosen}" %>
			<div class="fa fa-chevron-right"></div>
		</div>
		<div class="col-xs-6 col-sm-2 no-padding signup-guide-column-holder <%= @delivery_chosen %>">
			<% if @user.getting_started_step >= 9 %>
				<%= link_to "deliveries", delivery_address_getting_started_path, class: "guide-header #{@delivery_chosen}" %>
			<% else %>
				<h5 class="guide-header">deliveries</h5>
			<% end %>
		</div>
	</div>
<% end %>
<div class="row no-margin">
	<% if @subguide == "user" %>
		<div class="col-xs-12 col-sm-offset-1 col-sm-10 text-center">
			<%= render 'signup/subguide_consumer_user' %>
		</div>
	<% end %>
	<% if @subguide == "drink" %>
		<div class="col-xs-12 col-sm-offset-1 col-sm-10 text-center">
			<%= render 'signup/subguide_consumer_drink' %>
		</div>
	<% end %>
	<% if @subguide == "delivery" %>
		<div class="col-xs-12 col-sm-offset-1 col-sm-10 text-center">
			<%= render 'signup/subguide_consumer_delivery' %>
		</div>
	<% end %>
	<% if @subguide == "drink_event" %>
		<div class="col-xs-12 col-sm-offset-1 col-sm-10 text-center">
			<%= render 'signup/subguide_drink_event_guest' %>
		</div>
	<% end %>
</div>
