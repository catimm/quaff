<%= render 'layouts/header_early_signup' %> 
<div class="container">
	<div class="row no-margin spinner-signup text-center">
		<div class="spinner-text">
			<i class="fa fa-spinner fa-spin fa-4x" aria-hidden="true"></i>
			<h4>Processing...</h4>
		</div>
	</div>
	<div class="row no-margin first-row-signup">
		<%= render 'signup/signup_guide_consumer' %>
	</div>
	<div class="row">
		<div class="col-xs-12 text-center">
			<h2 class="signup-question">Tell us about you</h2>
			<h5 class="signup-question-detail">You can update this info on your account profile page anytime after signup.</h5>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-offset-1 col-xs-10 col-sm-offset-3 col-sm-6" id="signup-personal-info-holder">
			<%= simple_form_for @home_address, :html => { :class => 'form-horizontal' } do |address| %>
				<%= render 'users/user_home_address_info', address: address  %>
				<div class="form-group">
					<div class="col-xs-offset-1 col-xs-10 col-sm-offset-2 col-sm-10 text-center">
						<%= address.submit "Next", class: "btn btn-success user-info-next-button", id: "user-info-next-button" %>
					</div>
				</div>
			<% end %>
		</div>
	</div>
</div>
<%= render 'layouts/footer' %>