<%= render 'layouts/header_signup' %> 
	<div class="row no-margin first-row-signup">
		<div class="container first-row-container-signup">

		</div>
	</div>
	<div class="row">
		<div class="container" id="user-drink-preference-signup">
			<div class="col-xs-12 text-center">
				<h2 class="signup-question">Where are you in the craft <%= @drink_preference_text %> journey?</h2>
			</div>
			<% if @drink_preference == "beer" %>
				<div class="col-xs-12 col-sm-4 no-padding signup-image-holder-parent">
					<div class="signup-image-holder">
						<img class="img-responsive center-block" alt="Responsive image" src="https://s3-us-west-2.amazonaws.com/knird/signup/beer-fan.png">
						<h3 class="signup-image-first-level-text-with-second-level">Casual</h3>
						<p class="signup-image-second-level-text">Not a priority, but I dig it</p>
					</div>
				</div>
				<div class="col-xs-12 col-sm-4 no-padding signup-image-holder-parent">
					<div class="signup-image-holder middle-option">
						<img class="img-responsive center-block" alt="Responsive image" src="https://s3-us-west-2.amazonaws.com/knird/signup/beer-geek.png">
						<h3 class="signup-image-first-level-text-with-second-level">Geek</h3>
						<p class="signup-image-second-level-text">It's a priority</p>
					</div>
				</div>
				<div class="col-xs-12 col-sm-4 no-padding signup-image-holder-parent">
					<div class="signup-image-holder">
						<img class="img-responsive center-block" alt="Responsive image" src="https://s3-us-west-2.amazonaws.com/knird/signup/beer-conn.png">
						<h3 class="signup-image-first-level-text-with-second-level">Connoisseur</h3>
						<p class="signup-image-second-level-text">It my only priority</p>
					</div>
				</div>
			<% elsif @drink_preference == "cider" %>
