<%= render 'layouts/header_early_signup' %> 
<div class="container">
	<div class="row">
		<div class="col-xs-offset-1 col-xs-10 col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8 col-lg-offset-3 col-lg-6 text-center no-padding">
			<h2 class="signup-question membership-plan-signup change-plan-header">Change your plan preference</h2>
		</div>
	</div>
	<%- flash.each do |name, msg| -%>
    	<% if msg.include?  "changed" %>
			<div class="row no-margin">
            	<div class="col-xs-12 col-sm-offset-2 col-sm-8">
                	<%= content_tag :div, msg, class: "alert alert-success text-center" if msg.is_a?(String) %>
            	</div>
	    	</div>
		<% end %>
    <%- end -%>
	<div class="row membership-details-row show" id="membership-details-row">
		<% if @plan_type == "delivery" %>
			<%= render 'change_plan_section_deliveries' %>
		<% else %>
			<%= render 'change_plan_section_shipments'%>
		<% end %>
	</div>
</div>
<%= render 'layouts/footer' %>
