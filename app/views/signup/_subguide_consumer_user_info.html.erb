<% @user_address = UserAddress.where(account_id: current_user.account_id) %>
<% if @user_address.blank? %>
	<div class="col-xs-4 no-padding signup-guide-column-holder <%= @user_personal_info_chosen %>">
		<%= link_to "personal", edit_user_path(@user.id), class: "guide-header #{@user_personal_info_chosen}" %>
		<h5 class="pipe-separator">&#124;</h5>
	</div>
	<div class="col-xs-4 no-padding signup-guide-column-holder <%= @user_delivery_address_chosen %>">
		<% if @user.getting_started_step >= 2 %>
			<%= link_to "delivery address", delivery_address_getting_started_path, class: "guide-header #{@user_delivery_address_chosen}" %>
		<% else %>
			<h5 class="guide-header">delivery address</h5>
		<% end %>
		<h5 class="pipe-separator">&#124;</h5>
	</div>
	<div class="col-xs-4 no-padding signup-guide-column-holder <%= @account_address_chosen %>">
		<% if @user.getting_started_step >= 3 %>
			<%= link_to "delivery preference", delivery_preferences_getting_started_path, class: "guide-header #{@account_address_chosen}" %>
		<% else %>
			<h5 class="guide-header">delivery preference</h5>
		<% end %>
	</div>
<% else %>
	<div class="col-xs-6 col-sm-offset-2 col-sm-4 col-md-offset-3 col-md-3 no-padding signup-guide-column-holder <%= @user_personal_info_chosen %>">
		<%= link_to "personal", edit_user_path(@user.id), class: "guide-header #{@user_personal_info_chosen}" %>
		<h5 class="pipe-separator">&#124;</h5>
	</div>
	<div class="col-xs-6 col-sm-4 col-md-3 no-padding signup-guide-column-holder <%= @account_address_chosen %>">
		<% if @user.getting_started_step >= 3 %>
			<%= link_to "delivery preference", delivery_preferences_getting_started_path, class: "guide-header #{@account_address_chosen}" %>
		<% else %>
			<h5 class="guide-header">delivery preference</h5>
		<% end %>
	</div>
<% end %>