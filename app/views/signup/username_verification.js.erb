<% if @response == "no" %>
	$("#username-not-available").removeClass('hidden').addClass('show');
	$("#username-not-available").html("<%= @message %>");
	$('#user-info-next-button').attr('disabled', true);
<% else %>
	$("#username-available").removeClass('hidden').addClass('show');
	$("#username-available").html("<%= @message %>");
	$('#user-info-next-button').removeAttr('disabled');
	$('#user-info-next-button').addClass('btn-success');
<% end %>
