<%= render 'layouts/header' %>
<div class="row no-margin first-row">
	<div class="container first-row-container">
		<div class="col-xs-12">
			<h1 class="section-header">Shipment info</h1>
		</div>
	</div>
</div>
<div class="container" id="user-delivery-preferences-holder">
	<div class="row no-margin">
		<div class="col-xs-12">
			<h3><%= (@shipment.delivery.delivery_date).strftime("%-m/%-d") %> shipment for <%= @account_owner.username %> (account: <%= @shipment.delivery.account_id %>)</h3>
		</div>
	</div>
	<div class="row no-margin">
		<div class="col-xs-12 col-sm-10 col-sm-8">
			<div class="row no-margin">
			    <%= simple_form_for @shipment, :html => { :class => 'form-horizontal' } do |f| %>
					<div class="form-group">
						<label for="shipping_company" class="col-xs-4 col-sm-3 control-label">Shipping company</label>
						<div class="col-xs-8 col-sm-9">
							<%= f.input :shipping_company, input_html: { class: "form-control", id: "shipping_company" }, placeholder: "Shipping company", label: false %>
						</div>
					</div>
					<div class="form-group">
						<label for="actual_shipping_date" class="col-xs-4 col-sm-3 control-label">Actual shipping date</label>
						<div class="col-xs-8 col-sm-9">
							<%= f.input :actual_shipping_date, input_html: { class: "form-control", id: "actual_shipping_date" }, placeholder: "Shipping date", label: false %>
						</div>
					</div>
					<div class="form-group">
						<label for="estimated_arrival_date" class="col-xs-4 col-sm-3 control-label">Estimated arrival date</label>
						<div class="col-xs-8 col-sm-9">
							<%= f.input :estimated_arrival_date, input_html: { class: "form-control", id: "estimated_arrival_date" }, placeholder: "Estimated arrival", label: false %>
						</div>
					</div>
					<div class="form-group">
						<label for="tracking_number" class="col-xs-4 col-sm-3 control-label">Tracking number</label>
						<div class="col-xs-8 col-sm-9">
							<%= f.input :tracking_number, input_html: { class: "form-control", id: "tracking_number" }, placeholder: "Tracking #", label: false %>
						</div>
					</div>
					<div class="form-group">
						<label for="estimated_shipping_fee" class="col-xs-4 col-sm-3 control-label">Estimated shipping fee</label>
						<div class="col-xs-8 col-sm-9">
							<%= f.input :estimated_shipping_fee, input_html: { class: "form-control", id: "estimated_shipping_fee" }, placeholder: "Estimated shipping", label: false %>
						</div>
					</div>
					<div class="form-group">
						<label for="actual_shipping_fee" class="col-xs-4 col-sm-3 control-label">Actual shipping fee</label>
						<div class="col-xs-8 col-sm-9">
							<%= f.input :actual_shipping_fee, input_html: { class: "form-control", id: "actual_shipping_fee" }, placeholder: "Actual shipping", label: false %>
						</div>
					</div>	
					<div class="form-group">
						<div class="col-xs-offset-1 col-xs-10 col-sm-offset-2 col-sm-10 text-center">
							<%= f.submit "Update", class: "btn btn-success user-info-next-button", id: "user-info-next-button" %>
						</div>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>
<%= render 'layouts/footer' %>