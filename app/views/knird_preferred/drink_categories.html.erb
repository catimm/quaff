<%= render 'layouts/header' %> 
<%= render 'layouts/updating_spinner' %>
<%= render 'knird_live_common', current_section: "Categories" %>
<%= render 'layouts/settings_drink_categories' %>
<% if !@last_saved.nil? %>
	<div class="row">
		<div class="container" id="settings-last-saved">
			<%= render 'layouts/last_saved' %>
		</div>
	</div>
<% end %>
<div id="need_one_category_message" class="modal">
	<div class="modal-header">
		<div class="row no-margin">
			<button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
			<div class="col-sm-12">
				<h3 class="oops-header">Oops!</h3>
			</div>
		</div>
	</div>
	<div class="modal-body">
		<div class="row no-margin">
			<div class="col-xs-12">
				<h4 class="delivery-confirmation-text">
					You need at least one chosen category in your profile. Please add another one before deleting this one.
				</h4>
			</div>
		</div>
		<div class="col-sm-offset-4 col-sm-4 add-button-holder">
			<%= link_to "#", :class => 'text-center btn btn-success add-drink-button', :data => {:dismiss=>"modal"} do %>
				<i class="fa fa-chevron-circle-right"></i>
				Got it!
			<% end %>
		</div>
	</div>
</div>
<div id="start_new_beer_category" class="modal">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
		<h3>You added Beer. Woohoo!</h3>
	</div>
	<div class="modal-body">
		<div class="row no-margin">
			<div class="col-xs-12">
				<h4 class="auto-confirm-confirmation-text">We're psyched to start delivering Beer to you. Please complete all the tabs on the Beer Settings page to ensure we deliver beers you really like.</h4>
			</div>
		</div>
		<div class="row no-margin">
			<div class="col-xs-6 remove-button-holder">
				<%= link_to "Go to Beer Settings", settings_beer_journey_path, :class => 'change-auto-renew-confirmation text-center btn btn-success remove-drink-button' %>		
			</div>
			<div class="col-xs-6 remove-button-holder">
				<%= link_to "I'll do it later", "#", :class => 'btn btn-default wait-button', :data => {:dismiss=>"modal"} %>
			</div>
		</div>
	</div>
</div>
<div id="start_new_cider_category" class="modal">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
		<h3>You added Cider. Hooray!</h3>
	</div>
	<div class="modal-body">
		<div class="row no-margin">
			<div class="col-xs-12">
				<h4 class="auto-confirm-confirmation-text">We're psyched to start delivering Cider to you. Please complete all the tabs on the Cider Settings page to ensure we deliver ciders you really like.</h4>
			</div>
		</div>
		<div class="row no-margin">
			<div class="col-xs-6 remove-button-holder">
				<%= link_to "Go to Cider Settings", settings_cider_journey_path, :class => 'change-auto-renew-confirmation text-center btn btn-success remove-drink-button' %>		
			</div>
			<div class="col-xs-6 remove-button-holder">
				<%= link_to "I'll do it later", "#", :class => 'btn btn-default wait-button', :data => {:dismiss=>"modal"} %>
			</div>
		</div>
	</div>
</div>
<div id="start_new_wine_category" class="modal">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
		<h3>You added Wine. Yipee!</h3>
	</div>
	<div class="modal-body">
		<div class="row no-margin">
			<div class="col-xs-12">
				<h4 class="auto-confirm-confirmation-text">We're psyched to start delivering Wine to you. Please complete all the tabs on the Wine Settings page to ensure we deliver wines you really like.</h4>
			</div>
		</div>
		<div class="row no-margin">
			<div class="col-xs-6 remove-button-holder">
				<%= link_to "Go to Wine Settings", settings_wine_journey_path, :class => 'change-auto-renew-confirmation text-center btn btn-success remove-drink-button' %>		
			</div>
			<div class="col-xs-6 remove-button-holder">
				<%= link_to "I'll do it later", "#", :class => 'btn btn-default wait-button', :data => {:dismiss=>"modal"} %>
			</div>
		</div>
	</div>
</div>
<%= render 'layouts/footer' %>