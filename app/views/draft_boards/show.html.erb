<%= render 'layouts/header_retailer' %> 
	<div class="container draft-board-container">
		<div class="row no-margin ">
			<div class="col-sm-10 visible-sm visible-md visible-lg">
				<div class="row img-responsive retailer-logo-image-med" alt="Responsive image" style="background-image: url(<%= @retailer.logo_med %>)">
					<h3 class="retailer-page-title with-update-text"><%= @retailer.short_name %>'s Current Draft List <span class="last-updated">(last updated: <%= (@last_draft_board_update.updated_at).strftime("%B %e, %Y @ %l:%M %p") %>)</span></h3>
				</div>
			</div>
			<div class="col-sm-2 visible-sm visible-md visible-lg">
					<%= link_to "Back", retailer_path(session[:retail_id]), class: 'btn btn-default formButton-cancel-draft-board-edit' %>
				</div>
			<div class="col-xs-12 visible-xs">
				<div class="img-responsive retailer-logo-image-small" alt="Responsive image" style="background-image: url(<%= @retailer.logo_small %>)">
					<h3 class="retailer-page-title-mobile"><%= @retailer.short_name %>'s Current Draft List</h3>
				</div>
			</div>
			<div class="col-xs-2 visible-xs"></div>
			<div class="col-xs-10 visible-xs">
				<p class="retail-account-last-updated-container"><span class="last-updated">(last updated: <%= (@last_draft_board_update.updated_at).strftime("%-m.%e.%y @ %l:%M %p") %>)</span></p>
			</div>
			<div class="col-xs-6 visible-xs">
				<%= link_to "Back", retailer_path(session[:retail_id]), class: 'btn btn-default formButton-cancel-draft-board-edit' %>
			</div>
		</div>
		<hr>
		<% if @board_type == "column" %>
			<div class="row no-margin ">
				<%= render 'current_column_draft_board' %>
			</div>
		<% else %>
			<div class="row no-margin ">
				<%= render 'current_row_draft_board' %>
			</div>
		<% end %>
		
	</div>

<%= render 'layouts/footer' %>