<%= render 'layouts/header_retailer' %> 
	<div class="container quick-swap-container">
		<div class="row no-margin">
			<div class="row no-margin">
					<div class="col-sm-8 visible-sm visible-md visible-lg">
						<div class="row img-responsive retailer-logo-image-med" alt="Responsive image" style="background-image: url(<%= @retailer.logo_med %>)">
							<% if !@last_draft_board_update.nil? %>
								<h3 class="retailer-page-title">Swap Draft Drinks <span class="last-updated">(last updated: <%= (@last_draft_board_update.updated_at).strftime("%B %e, %Y @ %l:%M %p") %>)</span></h3>
							<% else %>
								<h3 class="retailer-page-title">Edit Draft Drinks</h3>
							<% end %>
						</div>
					</div>
					<div class="col-xs-12 visible-xs">
						<div class="row img-responsive retailer-logo-image-med" alt="Responsive image" style="background-image: url(<%= @retailer.logo_med %>)">
							<% if !@last_draft_board_update.nil? %>
								<h3 class="retailer-page-title">Edit Draft Drinks <span class="last-updated">(updated: <%= (@last_draft_board_update.updated_at).strftime("%-m.%-d.%y @ %l:%M %p") %>)</span></h3>
							<% else %>
								<h3 class="retailer-page-title">Edit Draft Drinks</h3>
							<% end %>
						</div>
					</div>
					<div class="col-xs-6 col-sm-2">
						<%= link_to "Cancel", retailer_path(session[:retail_id]), class: 'btn btn-default formButton-cancel-draft-board-edit' %>
					</div>
					<div class="col-xs-6 col-sm-2">
						<%= link_to "Save", retailer_path(session[:retail_id]), class: "btn btn-default btn-success formButton-draft-edit" %>
					</div>
			</div>
		</div>
		<div class="row no-margin">
			<h3>Current draft list</h3>
			<div class="table-responsive">
				<table class="table table-striped">
					<thead>
						<th class="text-center">Tap</th>
						<th>Maker <span class="draft-board-drink-name">Drink Name</span></th>
						<th>Style</th>
						<th class="text-center">Keg size</th>
						<th class="text-center">Added</th>		
					</thead>
					<tbody class="current-draft-table">
					<% @current_draft_board.each do	|drink| %>		
						<tr>
							<td class="text-center swap-button-holder" data-tap=<%= drink.tap_number %>><%= link_to drink.tap_number, 
								swap_drinks_path(drink.draft_board_id, drink.tap_number, "current"), :class => "btn btn-default btn-primary formButton-search-footer quick-swap-button",
								data: {toggle: "modal", target: "#swap_drinks"}  %>
							</td>
							<% if !drink.beer.short_beer_name.nil? %>
								<% if drink.beer.collab == true %>
									<% @collab_brewery_name = Beer.collab_brewery_name(drink.beer.id) %>
									<td class="draft-board-row-name"><%= @collab_brewery_name %> <%= ("<span class=draft-board-drink-name>"+drink.beer.short_beer_name+"</span>").html_safe %></td>
								<% elsif drink.beer.brewery.short_brewery_name.nil? %>
									<td class="draft-board-row-name table-condensed"><%= drink.beer.brewery.brewery_name %> <%= ("<span class=draft-board-drink-name>"+drink.beer.short_beer_name+"</span>").html_safe %></td>
								<% else %>
									<td class="draft-board-row-name table-condensed"><%= drink.beer.brewery.short_brewery_name %> <%= ("<span class=draft-board-drink-name>"+drink.beer.short_beer_name+"</span>").html_safe %></td>
								<% end %>
							<% else %>
								<% if drink.beer.collab == true %>
									<% @collab_brewery_name = Beer.collab_brewery_name(drink.beer.id) %>
									<td class="draft-board-row-name"><%= @collab_brewery_name %> <%= ("<span class=draft-board-drink-name>"+drink.beer.beer_name+"</span>").html_safe %></td>
								<% elsif drink.beer.brewery.short_brewery_name.nil? %>
									<td class="draft-board-row-name table-condensed"><%= drink.beer.brewery.brewery_name %> <%= ("<span class=draft-board-drink-name>"+drink.beer.beer_name+"</span>").html_safe %></td>
								<% else %>
									<td class="draft-board-row-name table-condensed"><%= drink.beer.brewery.short_brewery_name %> <%= ("<span class=draft-board-drink-name>"+drink.beer.beer_name+"</span>").html_safe %></td>
								<% end %>
							<% end %>
							<% if !drink.beer.beer_type_id.nil? %>
								<td class="draft-board-row-style"><%= drink.beer.beer_type.beer_type_name %></td>
							<% else %>
								<td class="draft-board-row-style">N/A</td>
							<% end %>
							<% if !drink.keg_size.nil? %>
								<% if drink.keg_size == 5.16 %>
									<% @keg_size = "1/6 BBL" %>
								<% elsif drink.keg_size == 7.75 %>
									<% @keg_size = "1/4 BBL" %>
								<% elsif drink.keg_size == 10.3 %>
									<% @keg_size = "1/3 BBL" %>
								<% elsif drink.keg_size == 13.2 %>
									<% @keg_size = "Euro BBL" %>
								<% else %>
									<% @keg_size = "1/2 BBL" %>
								<% end %>
								<td class="draft-board-row-abv text-center"><%= @keg_size %></td>
							<% else %>
								<td class="draft-board-row-abv text-center">N/A</td>
							<% end %>
							<td class="draft-board-row-style"><%= drink.created_at.strftime("%b %e, %Y") %></td>
						</tr>
					<% end %>
					</tbody>
				</table>
			</div>
		</div>
