<div class="table-responsive">
			<table class="table table-striped">
				<thead>
					<th class="text-center"><%= @internal_board_preferences.tap_title %></th>
					<% if @subscription_plan == 2 && @internal_board_preferences.separate_names == true %>
						<th><%= @internal_board_preferences.maker_title %></th>
						<th class="draft-board-drink-name"><%= @internal_board_preferences.drink_title %></th>
					<% else %>
						<th><%= @internal_board_preferences.maker_title %> <span class="draft-board-drink-name"><%= @internal_board_preferences.drink_title %></span></th>
					<% end %>
					<th class=""><%= @internal_board_preferences.style_title %></th>
					<th class="text-center"><%= @internal_board_preferences.abv_title %></th>
					<th class="text-center"><%= @internal_board_preferences.ibu_title %></th>
					<% if @taster_size >= 1 %>
						<th class="text-center" id="taster-option-holder"><%= @internal_board_preferences.taster_title %></th>
					<% end %>
					<% if @tulip_size >= 1 %>
						<th class="text-center" id="tulip-option-holder"><%= @internal_board_preferences.tulip_title %></th>
					<% end %>
					<% if @pint_size >= 1 %>
						<th class="text-center" id="pint-option-holder"><%= @internal_board_preferences.pint_title %></th>
					<% end %>
					<% if @half_growler_size >= 1 %>
						<th class="text-center" id="half-growler-option-holder"><%= @internal_board_preferences.half_growler_title %></th>
					<% end %>
					<% if @growler_size >= 1 %>
						<th class="text-center" id="growler-option-holder"><%= @internal_board_preferences.growler_title %></th>
					<% end %>
				</thead>
				<tbody class="table-bordered">
				<% @current_draft_board.each do	|drink| %>		
					<tr>
						<td class="draft-board-row-tap text-center <%= @column_border_class %> <%= @row_font %>"><%= drink.tap_number %></td>
						<% if @subscription_plan == 2 && @internal_board_preferences.separate_names == true %>
							<% if !drink.beer.short_beer_name.nil? %>
								<% if drink.beer.collab == true %>
									<% @collab_brewery_name = Beer.collab_brewery_name(drink.beer.id) %>
									<td class="draft-board-row-maker <%= @row_drink_font %>"><%= @collab_brewery_name %></td>
									<td class="draft-board-row-drink draft-board-drink-name <%= @row_drink_font %>"><%= drink.beer.short_beer_name %></td>
								<% elsif drink.beer.brewery.short_brewery_name.nil? %>
									<td class="draft-board-row-maker table-condensed <%= @row_drink_font %>"><%= drink.beer.brewery.brewery_name %></td>
									<td class="draft-board-row-drink draft-board-drink-name table-condensed <%= @row_drink_font %>"><%= drink.beer.short_beer_name %></td>
								<% else %>
									<td class="draft-board-row-maker table-condensed <%= @row_drink_font %>"><%= drink.beer.brewery.short_brewery_name %></td>
									<td class="draft-board-row-drink draft-board-drink-name table-condensed <%= @row_drink_font %>"><%= drink.beer.short_beer_name %></td>
								<% end %>
							<% else %>
								<% if drink.beer.collab == true %>
									<% @collab_brewery_name = Beer.collab_brewery_name(drink.beer.id) %>
									<td class="draft-board-row-maker <%= @row_drink_font %>"><%= @collab_brewery_name %></td>
									<td class="draft-board-row-drink <%= @row_drink_font %>"><%= drink.beer.beer_name %></td>
								<% elsif drink.beer.brewery.short_brewery_name.nil? %>
									<td class="draft-board-row-maker table-condensed <%= @row_drink_font %>"><%= drink.beer.brewery.brewery_name %></td>
									<td class="draft-board-row-drink table-condensed <%= @row_drink_font %>"><%= drink.beer.beer_name %></td>
								<% else %>
									<td class="draft-board-row-maker table-condensed <%= @row_drink_font %>"><%= drink.beer.brewery.short_brewery_name %></td>
									<td class="draft-board-row-drink table-condensed <%= @row_drink_font %>"><%= drink.beer.beer_name %></td>
								<% end %>
							<% end %>
						<% else %>
							<% if !drink.beer.short_beer_name.nil? %>
								<% if drink.beer.collab == true %>
									<% @collab_brewery_name = Beer.collab_brewery_name(drink.beer.id) %>
									<td class="draft-board-row-name <%= @row_drink_font %>"><%= @collab_brewery_name %> <%= ("<span class=draft-board-drink-name>"+drink.beer.short_beer_name+"</span>").html_safe %></td>
								<% elsif drink.beer.brewery.short_brewery_name.nil? %>
									<td class="draft-board-row-name table-condensed <%= @row_drink_font %>"><%= drink.beer.brewery.brewery_name %> <%= ("<span class=draft-board-drink-name>"+drink.beer.short_beer_name+"</span>").html_safe %></td>
								<% else %>
									<td class="draft-board-row-name table-condensed <%= @row_drink_font %>"><%= drink.beer.brewery.short_brewery_name %> <%= ("<span class=draft-board-drink-name>"+drink.beer.short_beer_name+"</span>").html_safe %></td>
								<% end %>
							<% else %>
								<% if drink.beer.collab == true %>
									<% @collab_brewery_name = Beer.collab_brewery_name(drink.beer.id) %>
									<td class="draft-board-row-name <%= @row_drink_font %>"><%= @collab_brewery_name %> <%= ("<span class=draft-board-drink-name>"+drink.beer.beer_name+"</span>").html_safe %></td>
								<% elsif drink.beer.brewery.short_brewery_name.nil? %>
									<td class="draft-board-row-name table-condensed <%= @row_drink_font %>"><%= drink.beer.brewery.brewery_name %> <%= ("<span class=draft-board-drink-name>"+drink.beer.beer_name+"</span>").html_safe %></td>
								<% else %>
									<td class="draft-board-row-name table-condensed <%= @row_drink_font %>"><%= drink.beer.brewery.short_brewery_name %> <%= ("<span class=draft-board-drink-name>"+drink.beer.beer_name+"</span>").html_safe %></td>
								<% end %>
							<% end %>
						<% end %>
						<% if !drink.beer.beer_type_id.nil? %>
							<td class="draft-board-row-style <%= @row_font %>"><%= drink.beer.beer_type.beer_type_short_name %></td>
						<% else %>
							<td class="draft-board-row-style n-a-draft-board-format-style <%= @row_n_a_font %>">N/A</td>
						<% end %>
						<% if !drink.beer.beer_abv.nil? %>
							<td class="draft-board-row-abv text-center <%= @column_border_class %> <%= @row_font %>"><%= (drink.beer.beer_abv).round(1) %><span class="row-percent-sign">%</span></td>
						<% else %>
							<td class="draft-board-row-abv text-center n-a-draft-board-format <%= @column_border_class %> <%= @row_n_a_font %>">N/A</td>
						<% end %>
						<% if !drink.beer.beer_ibu.nil? %>
							<td class="draft-board-row-ibu text-center <%= @column_border_class %> <%= @row_font %>"><%= drink.beer.beer_ibu %></td>
						<% else %>
							<td class="draft-board-row-ibu text-center n-a-draft-board-format <%= @column_border_class %> <%= @row_n_a_font %>">N/A</td>
						<% end %>
						<% @taster = "N/A" %>
						<% @tulip = "N/A" %>
						<% @pint = "N/A" %>
						<% @half_growler = "N/A" %>
						<% @growler = "N/A" %>
						<% @draft_details = DraftDetail.where(beer_location_id: drink.id) %>
						<% @draft_details.each do |details| %>
							<% if details.drink_size > 0 && details.drink_size <= 5 %>
								<% @taster = number_to_currency(details.drink_cost) %>
							<% end %>
							<% if details.drink_size > 5 && details.drink_size <= 12 %>
								<% @tulip = number_to_currency(details.drink_cost) %>
							<% end %>
							<% if details.drink_size > 12 && details.drink_size <= 22 %>
								<% @pint = number_to_currency(details.drink_cost) %>
							<% end %>
							<% if details.drink_size == 32 %>
								<% @half_growler = number_to_currency(details.drink_cost) %>
							<% end %>
							<% if details.drink_size == 64 %>
								<% @growler = number_to_currency(details.drink_cost) %>
							<% end %>
						<% end %>
						<% if @taster_size >= 1 %>
							<% if @subscription_plan == 2 && drink.special_designation == true %>
								<% if @taster == "N/A" %>
									<td class="draft-board-row-taster text-center n-a-draft-board-format <%= drink.special_designation_color %> <%= @column_border_class %> <%= @row_n_a_font %>"><%= @taster %></td>
								<% else %>
									<td class="draft-board-row-taster text-center <%= drink.special_designation_color %> <%= @column_border_class %> <%= @row_font %>"><%= @taster %></td>
								<% end %>
							<% else %>
								<% if @taster == "N/A" %>
									<td class="draft-board-row-taster text-center n-a-draft-board-format <%= @column_border_class %> <%= @row_n_a_font %>"><%= @taster %></td>
								<% else %>
									<td class="draft-board-row-taster text-center <%= @column_border_class %> <%= @row_font %>"><%= @taster %></td>
								<% end %>
							<% end %>
						<% end %>
						<% if @tulip_size >= 1 %>
							<% if @subscription_plan == 2 && drink.special_designation == true %>
								<% if @tulip == "N/A" %>
									<td class="draft-board-row-tulip text-center n-a-draft-board-format <%= drink.special_designation_color %> <%= @column_border_class %> <%= @row_n_a_font %>"><%= @tulip %></td>
								<% else %>
									<td class="draft-board-row-tulip text-center <%= drink.special_designation_color %> <%= @column_border_class %> <%= @row_font %>"><%= @tulip %></td>
								<% end %>
							<% else %>
								<% if @tulip == "N/A" %>
									<td class="draft-board-row-tulip text-center n-a-draft-board-format <%= @column_border_class %> <%= @row_n_a_font %>"><%= @tulip %></td>
								<% else %>
									<td class="draft-board-row-tulip text-center <%= @column_border_class %> <%= @row_font %>"><%= @tulip %></td>
								<% end %>
							<% end %>
						<% end %>
						<% if @pint_size >= 1 %>
							<% if @subscription_plan == 2 && drink.special_designation == true %>
								<% if @pint == "N/A" %>
									<td class="draft-board-row-pint text-center n-a-draft-board-format <%= drink.special_designation_color %> <%= @column_border_class %> <%= @row_n_a_font %>"><%= @pint %></td>
								<% else %>
									<td class="draft-board-row-pint text-center <%= drink.special_designation_color %> <%= @column_border_class %> <%= @row_font %>"><%= @pint %></td>
								<% end %>
							<% else %>
								<% if @pint == "N/A" %>
									<td class="draft-board-row-pint text-center n-a-draft-board-format <%= @column_border_class %> <%= @row_n_a_font %>"><%= @pint %></td>
								<% else %>
									<td class="draft-board-row-pint text-center <%= @column_border_class %> <%= @row_font %>"><%= @pint %></td>
								<% end %>
							<% end %>
						<% end %>
						<% if @half_growler_size >= 1 %>
							<% if @subscription_plan == 2 && drink.special_designation == true %>
								<% if @half_growler == "N/A" %>
									<td class="draft-board-row-growler text-center n-a-draft-board-format <%= drink.special_designation_color %> <%= @column_border_class %> <%= @row_n_a_font %>"><%= @half_growler %></td>
								<% else %>
									<td class="draft-board-row-growler text-center <%= drink.special_designation_color %> <%= @column_border_class %> <%= @row_font %>"><%= @half_growler %>
								<% end %>
							<% else %>
								<% if @half_growler == "N/A" %>
									<td class="draft-board-row-growler text-center n-a-draft-board-format <%= @column_border_class %> <%= @row_n_a_font %>"><%= @half_growler %></td>
								<% else %>
									<td class="draft-board-row-growler text-center <%= @column_border_class %> <%= @row_font %>"><%= @half_growler %></td>
								<% end %>
							<% end %>
						<% end %>
						<% if @growler_size >= 1 %>
							<% if @subscription_plan == 2 && drink.special_designation == true %>
								<% if @growler == "N/A" %>
									<td class="draft-board-row-growler text-center n-a-draft-board-format <%= drink.special_designation_color %> <%= @column_border_class %> <%= @row_n_a_font %>"><%= @growler %></td>
								<% else %>
									<td class="draft-board-row-growler text-center <%= drink.special_designation_color %> <%= @column_border_class %> <%= @row_font %>"><%= @growler %></td>
								<% end %>
							<% else %>
								<% if @growler == "N/A" %>
									<td class="draft-board-row-growler text-center n-a-draft-board-format <%= @column_border_class %> <%= @row_n_a_font %>"><%= @growler %></td>
								<% else %>
									<td class="draft-board-row-growler text-center <%= @column_border_class %> <%= @row_font %>"><%= @growler %></td>
								<% end %>
							<% end %>
						<% end %>
					</tr>
				<% end %>
				</tbody>
			</table>
</div>