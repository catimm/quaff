<% if !@draft_board.blank? && @subscription_plan == 2 %>
	<% if !@internal_board_preferences.nil? %>
		<% if current_user.role_id == 1 || current_user.role_id == 5 %>
			<div class="col-xs-12 no-padding">
				<div class="row no-margin">
					<div class="col-xs-12 no-padding">
						<h5 class="retailer-section-instructions">Change how your internal draft board looks by choosing one or more of the following options:</h5>
					</div>
				</div>
				<div class="row no-margin">
						<%= hidden_field_tag :draft_board_id, :value => @draft_board.id %>
						<div class="col-xs-12 col-sm-4 col-md-5 board-preference-inputs">
							<h6 class="board-preference-options internal-board-option-header">Separate Maker/Drink names into two columns:</h6>
							<% if @internal_board_preferences.separate_names == true %>
								<input type="checkbox" name="separate_names" id="separate_names" checked="checked" value="yes" class="separate_names">
							<% else %>
								<input type="checkbox" name="separate_names" id="separate_names" value="no" class="separate_names">
							<% end %>
						</div>
						<div class="col-xs-12 col-sm-4 col-md-3 board-preference-inputs">
							<h6 class="board-preference-options internal-board-option-header">Add borders to columns:</h6>
							<% if @internal_board_preferences.column_names == true %>
								<input type="checkbox" name="column_names" id="column_names" checked="checked" value="yes" class="column_names">
							<% else %>
								<input type="checkbox" name="column_names" id="column_names" value="no" class="column_names">
							<% end %>
						</div>
						<div class="col-xs-12 col-sm-4 col-md-3 board-preference-inputs">
								<h6 class="board-preference-options internal-board-option-header">Change font size:</h6>
									<select id="font_size" name="font_size" class="btn btn-default dropdown-toggle font-preference">
										<% if @internal_board_preferences.font_size == 1 %>
											<option value="1" selected>Very small</option>
										<% else %>
											<option value="1">Very small</option>
										<% end %>
										<% if @internal_board_preferences.font_size == 2 %>
											<option value="2" selected>Small</option>
										<% else %>
											<option value="2">Small</option>
										<% end %>
										<% if @internal_board_preferences.font_size == 3 %>
											<option value="3" selected>Med</option>
										<% else %>
											<option value="3">Med</option>
										<% end %>
										<% if @internal_board_preferences.font_size == 4 %>
											<option value="4" selected>Large</option>
										<% else %>
											<option value="4">Large</option>
										<% end %>
										<% if @internal_board_preferences.font_size == 5 %>
											<option value="5" selected>Very large</option>
										<% else %>
											<option value="5">Very large</option>
										<% end %>
			    					</select>		
						</div>
						<div class="col-xs-12 board-preference-inputs">
							<div class="row">
								<div class="col-xs-12">
									<h6 class="board-preference-options internal-board-option-header change-column-title">Change column titles:</h6>
								</div>
							</div>
							<div class="row no-margin title-holder-row">	
								<div class="col-xs-12 col-sm-1 no-padding">
									<h6 class="title-header-explainer">Tap: </h6>
									<input type="text" id="tap_title_input" name="tap_title_input" value="<%= @internal_board_preferences.tap_title %>" class="title_input form-control" />
								</div>
								<div class="col-xs-12 col-sm-1 no-padding">
									<h6 class="title-header-explainer">Maker: </h6>
									<input type="text" id="maker_title_input" name="maker_title_input" value="<%= @internal_board_preferences.maker_title %>" class="title_input form-control" />
								</div>
								<div class="col-xs-12 col-sm-1 no-padding">
									<h6 class="title-header-explainer">Drink: </h6>
									<input type="text" id="drink_title_input" name="drink_title_input" value="<%= @internal_board_preferences.drink_title %>" class="title_input form-control" />
								</div>
								<div class="col-xs-12 col-sm-1 no-padding">
									<h6 class="title-header-explainer">Style: </h6>
									<input type="text" id="style_title_input" name="style_title_input" value="<%= @internal_board_preferences.style_title %>" class="title_input form-control" />
								</div>
								<div class="col-xs-12 col-sm-1 no-padding">
									<h6 class="title-header-explainer">ABV: </h6>
									<input type="text" id="abv_title_input" name="abv_title_input" value="<%= @internal_board_preferences.abv_title %>" class="title_input form-control" />
								</div>
								<div class="col-xs-12 col-sm-1 no-padding">
									<h6 class="title-header-explainer">IBU: </h6>
									<input type="text" id="ibu_title_input" name="ibu_title_input" value="<%= @internal_board_preferences.ibu_title %>" class="title_input form-control" />
								</div>
								<div class="col-xs-12 col-sm-1 no-padding taster-option-holder hidden">
									<h6 class="title-header-explainer">1oz - 5oz: </h6>
									<input type="text" id="taster_title_input" name="taster_title_input" value="<%= @internal_board_preferences.taster_title %>" class="title_input form-control" />
								</div>
								<div class="col-xs-12 col-sm-1 no-padding tulip-option-holder hidden">
									<h6 class="title-header-explainer">6oz - 12oz: </h6>
									<input type="text" id="tulip_title_input" name="tulip_title_input" value="<%= @internal_board_preferences.tulip_title %>" class="title_input form-control" />
								</div>
								<div class="col-xs-12 col-sm-1 no-padding pint-option-holder hidden">
									<h6 class="title-header-explainer">13oz - 22oz: </h6>
									<input type="text" id="pint_title_input" name="pint_title_input" value="<%= @internal_board_preferences.pint_title %>" class="title_input form-control" />
								</div>
								<div class="col-xs-12 col-sm-1 no-padding half-growler-option-holder hidden">
									<h6 class="title-header-explainer">32oz: </h6>
									<input type="text" id="half_growler_title_input" name="half_growler_title_input" value="<%= @internal_board_preferences.half_growler_title %>" class="title_input form-control" />
								</div>
								<div class="col-xs-12 col-sm-1 no-padding growler-option-holder hidden">
									<h6 class="title-header-explainer">64oz: </h6>
									<input type="text" id="growler_title_input" name="growler_title_input" value="<%= @internal_board_preferences.growler_title %>" class="title_input form-control" />
								</div>
							</div>
						</div>
				</div>
			<hr />
			</div>
		<% end %>
	<% end %>
<% end %>
<div class="col-xs-12 no-padding">
	<div class="row no-margin" id="updated-draft-board-row">
		<%= render 'draft_board_row' %>
	</div>
</div>
