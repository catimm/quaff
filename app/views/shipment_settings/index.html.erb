<%= render 'layouts/header' %> 
<div class="row no-margin first-row">
	<div class="container first-row-container">
		<div class="col-xs-12">
			<h1 class="section-header">Shipment Settings</h1>
		</div>
		<div class="col-xs-12 col-sm-7">
			<div class="row">
				<% if session[:user_subscription_id] != 1 %>
					<div class="col-xs-4">
						<%= link_to "My Preferences", user_shipment_settings_path, class: "drink-preference-view-option current", id: "next" %>
					</div>
				<% end %>
				<div class="col-xs-4">
					<%= link_to 'Delivery Location', user_shipping_location_path, class: "drink-preference-view-option", id: "history" %>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="row">
	<div class="container" id="user-delivery-preferences-holder">
	    <%= render 'user_shipment_preferences' %>
	</div>
</div>
<%= render 'layouts/footer' %>