<%= render 'layouts/header' %> 
	<div class="row no-margin first-row">
		<div class="container first-row-container">
			<div class="col-sm-5 no-padding">
				<h1 class="section-header">Drink Preferences</h1>
			</div>
			<div class="col-sm-7">
				<div class="row no-margin">
					<div class="col-xs-0 col-sm-1"></div>
					<div class="col-xs-4 no-padding-left">
						<%= link_to "Favorite types", user_profile_path('drink_types'), class: "drink-preference-view-option #{@drink_types_chosen}", id: "drink-types" %>
					</div>
					<div class="col-xs-4 text-center">
						<%= link_to "Favorite producers", user_profile_path('producers'), class: "drink-preference-view-option #{@producers_chosen}", id: "producers" %>
					</div>
					<div class="col-xs-3 text-right">
						<%= link_to "Style settings", user_drink_settings_path(current_user.id, 'styles'), class: "drink-preference-view-option #{@styles_chosen}", id: "styles" %>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="container">
			<% if @view == "drink_types" %>
				<%= render 'user_profile_favorite_drink_type' %>
			<% else %>
				<%= render 'user_profile_favorite_producers' %>
			<% end %>
		</div>
	</div>
<%= render 'layouts/footer' %>