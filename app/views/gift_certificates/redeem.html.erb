<%= render 'layouts/header_no_search' %> 
<div class="row justify-content-center">
    <div class="container">
            <%- flash.each do |name, msg| -%>
                <%= content_tag :div, msg, class: "alert alert-warning text-center", :id => "flash_gift_#{name}" if msg.is_a?(String) %>
            <%- end -%>
        <div class="row">
            <div class="col-xs-offset-1 col-xs-10 col-sm-offset-3 col-sm-6 text-center">
                <h2 class="signup-question">Redeem a Knird Gift Certificate</h3>
            </div>
        </div>
        <% if user_signed_in? %>
            <%= form_tag :url => process_new_gift_certificate_path, :html => { :class => 'form-horizontal' } do |f| %>
            <div class="row">
                <div class="col-xs-offset-2 col-xs-8 col-sm-offset-4 col-sm-4 container text-center">
                        <%= text_field_tag :redeem_code, params[:redeem_code], size: 20, placeholder: "Enter redemption code", class: "form-control" %>
                </div>
            </div>
            <div class="row text-center">
                <input type="submit" class="btn btn-success gift-redeem-submit" value="Redeem Your Gift"></input>
            </div>
            <% end %>
        <% else %>
            <div class="row">
                <div class="col-xs-offset-1 col-xs-5 col-sm-offset-3 col-sm-3">
                    <label class="control-label gift-form-label">Already registered?</label>
                </div>
                <div class="col-xs-5 col-sm-offset-1 col-sm-3">
                    <label class="control-label gift-form-label">New to Knird?</label>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-offset-1 col-xs-5 col-sm-offset-3 col-sm-3">
                    <%= link_to "Log in & Redeem", gift_certificates_signin_and_redeem_path() + "?redeem_code=#{params[:redeem_code]}", class: "btn btn-default" %>
                </div>
                <div class="col-xs-5 col-sm-offset-1 col-sm-3">
                    <%= link_to "Sign up to Redeem", new_user_path(), class: "btn btn-success" %>
                </div>
            </div>
        <% end %>
    </div>
</div>