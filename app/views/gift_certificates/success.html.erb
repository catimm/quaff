<%= render 'layouts/header_no_search' %> 
<div class="row justify-content-center">
    <div class="container">
        <div class="row">
            <div class="col-xs-offset-1 col-xs-10 col-sm-offset-3 col-sm-6 text-center knird-credit-header">
                <h2 class="signup-question">Knird credit order</h2>
            </div>
        </div>

        <div class="row">
            <div class="col-xs-offset-1 col-xs-10 col-sm-offset-2 col-sm-8 container">
                <%- flash.each do |name, msg| -%>
                    <%= content_tag :div, msg, class: "alert alert-success", :id => "flash_gift_#{name}" if msg.is_a?(String) %>
                <%- end -%>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-offset-2 col-xs-8 col-sm-offset-2 col-sm-8 text-center">
                <%= link_to "Home", root_path(), class: "btn btn-default gift-success-buttons" %>
                <%= link_to "Order More", gift_certificates_new_path(), class: "btn btn-primary" %>
            </div>
        </div>
    </div>
</div>
<%= render 'layouts/footer' %>