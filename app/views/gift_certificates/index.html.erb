<%= render 'layouts/header' %> 
<div class="row no-margin first-row">
	<div class="container first-row-container">
		<div class="col-xs-12 col-sm-12">
			<h1 class="section-header">Gift Certificates</h1>
		</div>
	</div>
</div>
    <div class="container">
	    <div class="row no-margin">
            <div class="col-xs-12 col-sm-8">
            <%- flash.each do |name, msg| -%>
                <% if msg.include?  "gift certificate" %>
                	<%= content_tag :div, msg, class: "alert alert-success text-center", :id => "flash_gift_#{name}" if msg.is_a?(String) %>
            	<% end %>
            <%- end -%>
            </div>
	    </div>
	    <div class="row no-margin">
          <div class="col-xs-12 col-sm-8">
              <%= form_tag gift_certificates_process_redeem_path, :html => { :class => 'form-horizontal' } do |f| %>
                  <div class="row text-center redemption-row">
                      <div class="col-xs-6 col-sm-4">
                        <%= text_field_tag :redeem_code, params[:redeem_code], size: 20, placeholder: "Enter redemption code", class: "form-control", :required => true %>
                      </div>
                      <div class="col-xs-6 col-sm-4">
                        <input type="submit" class="btn btn-success gift-redeem-submit" value="Redeem Certificate"></input>
                      </div>
                  </div>
              <% end %>
          </div>
	    </div>
      <hr>
	    <div class="row no-margin">
            <div class="col-xs-12">
                <h3 class="user-settings-header">Give a gift</h3>
            </div>
            <div class="col-xs-6 col-sm-4">
                <%= link_to "Give Knird credit", gift_certificates_new_path(), class: "btn btn-primary" %>
            </div>
	    </div>
		</div>
<%= render 'layouts/footer' %>