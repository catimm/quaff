<%= render 'layouts/header_early_signup' %> 
<div class="container">
	<div class="row topRow"> 
		<div class="col-xs-12 col-sm-offset-3 col-sm-6 col-md-offset-4 col-md-4 box">
			<div class="row">
				<div class="col-xs-12">
					<h2 class="formSpace">Log in</h2>
				    <%= form_for(resource, :class => "input-group", :as => resource_name, :url => session_path(resource_name)) do |f| %> 
				      <% flash.each do |name, msg| %>
					    <% if msg.is_a?(String) && ["alert", "error", "warning", "notice"].include?(name) %>
					        <div class="flash-message" data-type="<%= name %>" >
					          <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
					        </div>
					     <% end %>
					  <% end %>
						<div class="row"> 
							<div class="col-xs-12">
					      		<%= f.email_field :email, :class => "form-control", placeholder: "Email", autofocus: true %> 
							</div>
						</div>
						<div class="row"> 
							<div class="col-xs-12 forgot">
						 		<%= f.password_field :password, :class => "form-control", placeholder: "Password" %> 
						 		<%= render "devise/shared/forgot" %>
							</div>
						</div>
						<div class="row"> 
							<div class="col-xs-12 rememberMe">
						 		<% if devise_mapping.rememberable? %>
							    <%= f.check_box :remember_me %> <%= f.label :remember_me %>
							  <% end %>
							</div>
						</div>
						<div class="row">
							<div class="col-xs-12">
				      			<%= f.submit "Login", class: "btn btn-default btn-success formButton" %> 
				      		</div>
				      	</div>
				    <% end %> 
				</div> 
			</div>
		</div>
	</div>
	<div class="row no-margin">
		<div class="col-xs-12 col-sm-offset-3 col-sm-6 col-md-offset-4 col-md-4">
			<h2 class="formSpace">New to Knird?</h2>
			<%= link_to "Get started", root_path, class: "btn btn-success thank-you-next-button" %>
		</div>
	</div>
</div>
<% flash.clear %>
<%= render 'layouts/footer' %> 