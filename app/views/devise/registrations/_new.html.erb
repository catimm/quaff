<%= render 'layouts/header' %> 
<div class="container">
	<div class="row topRow"> 
		<div class="col-xs-0 col-sm-3 col-md-4"></div>
		<div class="col-xs-12 col-sm-6 col-md-4 box">
			<div class="row">
				<div class="col-xs-12">
						<h2>Sign up</h2>
					    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
							<%= devise_error_messages! %>
							<%- flash.each do |name, msg| -%>
							    <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
							  <%- end -%>
							<%= f.hidden_field :role_id, :value => 2 %>
							<div class="row"> 
								<div class="col-xs-12">
						      		<%= f.text_field :username, required: true, :class => "form-control", autofocus: true, placeholder: "Username" %>
								</div>
							</div>
							<div class="row"> 
								<div class="col-xs-12">
							 		<%= f.email_field :email, :class => "form-control", required: true, placeholder: "Email" %>
								</div>
							</div>
							<div class="row"> 
								<div class="col-xs-12">
							 		 <%= f.password_field :password, :class => "form-control", required: true, placeholder: "Password (8 characters min)", hint: ("#{@minimum_password_length} characters minimum" if @validatable) %>
								</div>
							</div>
							<div class="row"> 
								<div class="col-xs-12">
							 		<%= f.password_field :password_confirmation, :class => "form-control", required: true, placeholder: "Confirm password" %>
								</div>
							</div>
							<div class="row"> 
								<div class="col-xs-12">
							 		<%= f.submit "Sign up", class: "btn btn-default btn-success formButton" %> 
								</div>
							</div>
					    <% end %> 
					  		<div class="row text-center">
								<div class="col-xs-2"></div>
								<div class="col-xs-8">
									<h6>By signing up you agree to our <%= link_to "Terms of Use", "#" %> and <%= link_to "Privacy Policy", "#" %></h6>
								</div>
							</div>
					  </div> 
					</div>
					<div class="row signupBox text-center">
						<div class="col-xs-12">
							<h5>Have an account? <%= render "devise/shared/login" %></h5> 
						</div>
					</div>
			</div>
		</div>
		<div class="col-xs-0 col-sm-3 col-md-4"></div>
</div>
<%= render 'layouts/footer' %>