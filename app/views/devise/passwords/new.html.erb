<%= render 'layouts/header' %> 
<div class="container">
	<div class="row topRow"> 
		<div class="col-xs-0 col-sm-3 col-md-4"></div>
		<div class="col-xs-12 col-sm-6 col-md-4 box">
			<div class="row">
				<div class="col-xs-12">
						<h2>Forgot your password?</h2>
					    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  							<%- flash.each do |name, msg| -%>
  								<%= f.error_notification %>
							<%- end -%>
							<div class="row"> 
								<div class="col-xs-12">
							 		<%= f.email_field :email, :class => "form-control", required: true, placeholder: "Email", autofocus: true %>
								</div>
							</div>
							<div class="row"> 
								<div class="col-xs-12">
							 		<%= f.submit "Send me reset password instructions", class: "btn btn-default btn-success formButton" %> 
								</div>
							</div>
					    <% end %> 
				  </div> 
				</div>	
			</div>
		<div class="col-xs-0 col-sm-3 col-md-4"></div>
	</div>
</div>
<%= render 'layouts/footer' %>
