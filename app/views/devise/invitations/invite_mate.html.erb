<%= render 'layouts/header' %> 
	<div class="row">
		<div class="container">
			<div class="row">
				<div class="col-xs-offset-1 col-xs-10 col-sm-offset-3 col-sm-6 box">
					<h2>Invite a mate</h2>
					<%= simple_form_for @new_mate, :url => process_mate_invite_path do |f| %>
						<%= f.hidden_field :invited_by_id, :value => @invitor_id %>
						<div class="row"> 
							<div class="col-xs-4">
								<label for="first_name_field" class="control-label">Mate's first name</label>
							</div>
							<div class="col-xs-8">
								<%= f.input :first_name, input_html: { class: "form-control", id: "first_name_field" }, required: true, placeholder: "Mate's first name", label: false %>
							</div>
						</div>
						<div class="row"> 
							<div class="col-xs-4">
								<label for="email_field" class="control-label">Mate's email</label>
							</div>
							<div class="col-xs-8">
								<%= f.input :email, input_html: { class: "form-control invited-mates-email", id: "email_field" }, required: true, placeholder: "Mate's email address", label: false %>
							</div>
						</div>
						<div class="row"> 
							<div class="col-xs-1 col-sm-1 col-md-2"></div>
							<div class="col-xs-10 col-sm-10 col-md-8">
								<%= f.submit "Send invite", class: "btn btn-default btn-success formButton", id:"invite-mate-submit-button", disabled: true %> 
							</div>
						</div>
					<% end %>
				</div>
			</div>
			<div class="row hidden" id="invite-mate-failure-notice">
				<div class="col-xs-offset-1 col-xs-10 col-sm-offset-3 col-sm-6">
					<h3 class="invite-failure-message">
						Sorry, this user can't be added to your account because s/he is already part of a paid Knird account.
					</h3>
				</div>
			</div>
		</div>
	</div>
<%= render 'layouts/footer' %>