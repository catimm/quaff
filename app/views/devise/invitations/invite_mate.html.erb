<%= render 'layouts/header' %> 
	<div class="row">
		<div class="container">
			<div class="row">
				<div class="col-xs-1 col-sm-3"></div>
				<div class="col-xs-10 col-sm-6 box">
					<h2>Invite a mate</h2>
					<%= simple_form_for @new_mate, :url => process_mate_invite_path do |f| %>
						<%= f.hidden_field :invited_by_id, :value => @invitor_id %>
						<div class="row"> 
							<div class="col-xs-4">
								<label for="first_name_field" class="control-label">Mate's first name</label>
							</div>
							<div class="col-xs-8">
								<%= f.input :first_name, input_html: { class: "form-control", id: "first_name_field" }, required: true, placeholder: "Mate's first name", label: false %>
							</div>
						</div>
						<div class="row"> 
							<div class="col-xs-4">
								<label for="email_field" class="control-label">Mate's email</label>
							</div>
							<div class="col-xs-8">
								<%= f.input :email, input_html: { class: "form-control", id: "email_field" }, required: true, placeholder: "Mate's email address", label: false %>
							</div>
						</div>
						<div class="row"> 
							<div class="col-xs-1 col-sm-1 col-md-2"></div>
							<div class="col-xs-10 col-sm-10 col-md-8">
								<%= f.submit "Send invite", class: "btn btn-default btn-success formButton" %> 
							</div>
						</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
<%= render 'layouts/footer' %>