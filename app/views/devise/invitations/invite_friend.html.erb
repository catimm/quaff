<%= render 'layouts/header' %> 
	<div class="row">
		<div class="container">
			<div class="row invitation-instruction-row">
				<div class="col-xs-12 col-sm-offset-1 col-sm-10">
					<h4>You can either use the form below to request Knird send your friend an invitation on your behalf.
						Or, you can invite your friend with your own email&mdash;just remember to include your invitation code: <b><%= @invitation_code.special_code %></b>.</h4>
				</div>
			</div>
			<div class="row">
				<div class="col-xs-offset-1 col-xs-10 col-sm-offset-3 col-sm-6 box invite-friend-box">
					<h2>Invite a friend</h2>
					<%= simple_form_for @new_mate, :url => process_friend_invite_path do |f| %>
						<%= f.hidden_field :invited_by_id, :value => @invitor_id %>
						<div class="row"> 
							<div class="col-xs-4">
								<label for="first_name_field" class="control-label">Friend's first name</label>
							</div>
							<div class="col-xs-8">
								<%= f.input :first_name, input_html: { class: "form-control", id: "first_name_field" }, required: true, placeholder: "Friend's first name", label: false %>
							</div>
						</div>
						<div class="row"> 
							<div class="col-xs-4">
								<label for="email_field" class="control-label">Friend's email</label>
							</div>
							<div class="col-xs-8">
								<%= f.input :email, input_html: { class: "form-control invited-mates-email", id: "email_field" }, required: true, placeholder: "Friend's email address", label: false %>
							</div>
						</div>
						<div class="row"> 
							<div class="col-xs-1 col-sm-1 col-md-2"></div>
							<div class="col-xs-10 col-sm-10 col-md-8">
								<%= f.submit "Send invite", class: "btn btn-default btn-success formButton", id:"invite-friend-submit-button", disabled: true %> 
							</div>
						</div>
					<% end %>
				</div>
			</div>
			<div class="row hidden" id="invite-friend-failure-notice">
				<div class="col-xs-offset-1 col-xs-10 col-sm-offset-3 col-sm-6">
					<h3 class="invite-failure-message">
						This user already has a Knird account!
					</h3>
				</div>
			</div>
		</div>
	</div>
<%= render 'layouts/footer' %>