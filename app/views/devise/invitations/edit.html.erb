<%= render 'layouts/header' %> 
<div class="container">
	<div class="row topRow"> 
		<div class="col-xs-0 col-sm-3 col-md-4"></div>
		<div class="col-xs-12 col-sm-6 col-md-4 box">
			<div class="row">
				<div class="col-xs-12">
						<h2>Set your username and password</h2>
					    <%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :put } do |f| %>
  							<%- flash.each do |name, msg| -%>
							    <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
							  <%- end -%>
							<%= f.hidden_field :invitation_token %>
							<%= f.hidden_field :role_id, :value => 4 %>
							<div class="row"> 
								<div class="col-xs-12">
							 		<%= f.text_field :first_name, :class => "form-control", required: true, placeholder: "Your first name" %>
								</div>
							</div>
							<div class="row"> 
								<div class="col-xs-12">
							 		<%= f.text_field :username, :class => "form-control", required: true, placeholder: "Your username" %>
								</div>
							</div>
							<div class="row"> 
								<div class="col-xs-12">
							 		<%= f.password_field :password, :class => "form-control", required: true, placeholder: "Set password", hint: ("#{@minimum_password_length} characters minimum" if @validatable) %>
								</div>
							</div>
							<div class="row"> 
								<div class="col-xs-12">
							 		<%= f.password_field :password_confirmation, :class => "form-control", required: true, placeholder: "Confirm password" %>
								</div>
							</div>
							<div class="row"> 
								<div class="col-xs-12">
							 		<%= f.submit "Sign up", class: "btn btn-default btn-success formButton" %> 
								</div>
							</div>
					    <% end %>
				</div> 
			</div>
		</div>
	</div>
</div>
<%= render 'layouts/footer' %>