<head>
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js" type="text/javascript"></script>
	<script href="https://quaff-stage.herokuapp.com/bootstrap.min.js" rel="stylesheet" type="text/javascript"></script>
	<link href="https://quaff-stage.herokuapp.com/bootstrap-theme.min.css" rel="stylesheet" type="text/css">
	<link href="https://quaff-stage.herokuapp.com/bootstrap.min.css" rel="stylesheet" type="text/css">
	<link href="https://quaff-stage.herokuapp.com/bootstrap-custom.css" rel="stylesheet" type="text/css"> 
</head>
<body>
	<div class="container" id="draft-board">
		<% if @board_type == "column-web" %>
			<div class="row no-margin ">
				<%= render 'current_column_draft_board_web' %>
			</div>
		<% elsif @board_type == "column-internal" %>
			<div class="row no-margin ">
				<%= render 'current_column_draft_board_internal' %>
			</div>
		<% elsif @board_type == "row-web" %>
			<div class="row no-margin ">
				<%= render 'current_row_draft_board_web' %>
			</div>
		<% else %>
			<div class="row no-margin ">
				<%= render 'current_row_draft_board_internal' %>	
			</div>
		<% end %>
	</div>
</body>
<script type="text/javascript"> 
      // Tell the parent iframe what height the iframe needs to be
      $( document ).ready(function() {
	  	
	  	//alert(document.getElementById("draft-frame").contentWindow.document.body.scrollHeight);
	  	setInterval(function(){
    		var ifrm = document.getElementById("draft-frame");
	  		alert(ifrm);
    		document.getElementById("draft-frame").style.height = document.getElementById("draft-frame").contentWindow.document.body.scrollHeight + 'px';
		},1000)
	  });
    </script>