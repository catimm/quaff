<%= render 'layouts/header_retailer' %> 
	<div class="container draft-board-container">
		<div class="row no-margin ">
			<div class="col-sm-12 visible-sm visible-md visible-lg">
				<div class="row img-responsive retailer-logo-image-med" alt="Responsive image" style="background-image: url(<%= @retailer.logo_med %>)">
					<h3 class="retailer-page-title"><%= @retailer.short_name %>'s Account</h3>
				</div>
			</div>
			<div class="col-xs-12 visible-xs">
				<div class="row img-responsive retailer-logo-image-small" alt="Responsive image" style="background-image: url(<%= @retailer.logo_small %>)">
					<h3 class="retailer-page-title-mobile"><%= @retailer.short_name %>'s Account</h3>
				</div>
			</div>
		</div>
		<%- flash.each do |name, msg| -%>
				<%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
			<%- end -%>
		<hr>
		<div class="row no-margin">
			<div class="col-xs-12 text-center">
				<% if @draft_board.blank? %>
					<h4 class="retail-manage-header">Manage Draft Board Drinks</h4>
				<% else %>
					<h4 class="retail-manage-header">Manage Draft Board Drinks <span class="last-updated"> (Last updated: <%= (@last_draft_board_update.updated_at).strftime("%B %e, %Y @ %l:%M %p") %>)</span></h4>
				<% end %>
			</div>
			<div class="col-xs-12">
				<% if @draft_board.blank? %>
					<div class="row no-margin ">
						<div class="col-xs-8 col-sm-5 col-md-4">
							<%= link_to new_draft_board_path(@retailer.id), class: 'btn btn-default btn-success formButton-add-draft-board' do %>
								<i class="fa fa-plus"> Create new draft board</i>
							<% end %>
						</div>
					</div>
				<% else %>
					<div class="row no-margin ">
						<div class="col-xs-12 col-sm-5 col-md-4">
							<%= link_to edit_draft_board_path(@draft_board[0].id), class: 'btn btn-default btn-success formButton-draft-board-edit' do %>
								<i class="fa fa-pencil"> Edit board</i>
							<% end %>
						</div>
						<% if !@draft_inventory.blank? && @subscription_plan == 2 %>
							<div class="col-xs-12 col-sm-1 col-md-1 or-option text-center">
								<p>or</p>
							</div> 
							<div class="col-xs-12 col-sm-5 col-md-4">
								<%= link_to quick_draft_edit_path(@draft_board[0].id), class: 'btn btn-default btn-success formButton-draft-board-edit' do %>
									<i class="fa fa-refresh"> Quickly swap drinks</i>
								<% end %>
							</div>
						<% end %>
					</div>		
					<div class="row no-margin ">	
						<div class="col-xs-12 col-sm-5 col-md-4">
							<%= link_to draft_board_path(@draft_board[0].id, "column"), class: 'btn btn-default btn-primary formButton-view-draft-board' do %>
								<i class="fa fa-chevron-right"> View web board</i>
							<% end %>
						</div>
						<div class="col-xs-12 col-sm-1 col-md-1 or-option text-center">
							<p>or</p>
						</div> 
						<div class="col-xs-12 col-sm-5 col-md-4">
							<%= link_to draft_board_path(@draft_board[0].id, "row"), class: 'btn btn-default btn-primary formButton-view-draft-board' do %>
								<i class="fa fa-chevron-right"> View internal board</i>
							<% end %>
						</div>
					</div>		
				<% end %>
			</div>
		</div>
		<% if !@draft_board.blank? && @subscription_plan == 2 %>
		<hr>
			<div class="row no-margin">
				<div class="col-xs-12">
					<% if @draft_inventory.blank? %>
						<h4 class="retail-manage-header">Manage Draft Inventory</h4>
					<% else %>
						<h4 class="retail-manage-header">Manage Draft Inventory <span class="last-updated"> (Last updated: <%= (@last_draft_inventory_update.updated_at).strftime("%B %e, %Y @ %l:%M %p") %>)</span></h4>
					<% end %>
				</div>
				<div class="col-xs-12">
					<% if @draft_inventory.blank? %>
						<div class="row no-margin ">
							<div class="col-xs-12 col-sm-5 col-md-4">
								<%= link_to edit_draft_inventory_path(@draft_board[0].id), class: 'btn btn-default btn-success formButton-add-draft-board' do %>
									<i class="fa fa-plus"> Create inventory</i>
								<% end %>
							</div>
						</div>
					<% else %>
						<div class="row no-margin ">
							<div class="col-xs-12 col-sm-5 col-md-4">
								<%= link_to edit_draft_inventory_path(@draft_board[0].id), class: 'btn btn-default btn-success formButton-draft-board-edit' do %>
									<i class="fa fa-plus"> Add inventory</i>
								<% end %>
							</div>
						</div>
						<div class="row no-margin ">	
							<div class="col-xs-12 col-sm-5 col-md-4">
								<%= link_to draft_inventory_path(@draft_board[0].id), class: 'btn btn-default btn-primary formButton-view-draft-board' do %>
									<i class="fa fa-chevron-right"> View inventory list</i>
								<% end %>
							</div>
						</div>				
					<% end %>
				</div>
			</div>
			<hr>
			<% if current_user.role_id == 1 || current_user.role_id == 7 %>
				<div class="row no-margin">
					<div class="col-xs-12">
						<h4 class="retail-manage-header">Manage Social Media</h4>
					</div>
					<div class="col-xs-12">
						<div class="row no-margin ">
							<div class="col-xs-12">
								<% if !@fb_authentication.blank? && !@twitter_authentication.blank? %>
									<h5 class="retailer-section-instructions">Both your Facebook and Twitter accounts are connected.  You can now post to those accounts and share when new drinks become available on tap.</h5>
								<% elsif !@fb_authentication.blank? && @twitter_authentication.blank? %>
									<h5 class="retailer-section-instructions">Your Facebook account is connected, so you can now post to Facebook and share when new drinks become available on tap.</br> Now connect your Twitter account!</h5>
								<% elsif @fb_authentication.blank? && !@twitter_authentication.blank? %>
									<h5 class="retailer-section-instructions">Your Twitter account is connected, so you can now post to Twitter and share when new drinks become available on tap.</br> Now connect your Facebook account!</h5>
								<% else %>
									<h5 class="retailer-section-instructions">Connect your Facebook and Twitter accounts so you can post to those accounts and share new drinks when they become available on tap.</h5>
								<% end %>
							</div>
						</div>
						<div class="row no-margin social-facebook-row">
							<% if !@fb_authentication.blank? %>
								<div class="col-xs-12 col-sm-5 col-md-4">
									<%= link_to facebook_post_options_path, :class => "btn btn-block btn-social btn-facebook" do %>
								  		<i class="fa fa-facebook"></i>Post Drinks to Facebook
								  	<% end %>
								 </div>
								 <div class="col-xs-12 col-sm-4 col-md-3">
									<h5 class="social-connected-on last-updated">Facebook was connected on <%= (@fb_authentication[0].created_at).strftime("%B %e, %Y @ %l:%M %p") %></h5>
								 </div>
								 <div class="col-xs-12 col-sm-4 col-md-3">
								 	<%= link_to user_omniauth_authorize_path(:facebook), data: { confirm: "Are you sure you no longer want to post to Facebook?" }, :class => "btn btn-default btn-social-disconnect" do %>
								  		Disconnect Facebook <i class="fa fa-times"></i>
								  	<% end %>
								 </div>
							<% else %>
								<div class="col-xs-12 col-sm-5 col-md-4">
									<%= link_to user_omniauth_authorize_path(:facebook), :class => "btn btn-block btn-social btn-facebook" do %>
								  		<i class="fa fa-facebook"></i>Connect Facebook
								  	<% end %>
								 </div>
							<% end %>
						</div>
						<div class="row no-margin ">
							<div class="col-xs-12 col-sm-5 col-md-4">
								<% if !@twitter_authentication.blank? %>
									<div class="col-xs-12 col-sm-6 col-md-5">
									<%= link_to "#", :class => "btn btn-social-icon btn-twitter" do %>
								  		<i class="fa fa-twitter"></i>
								  	<% end %>
									<h5 class="social-connected-on last-updated">Connected on <%= (@twitter_authentication[0].created_at).strftime("%B %e, %Y @ %l:%M %p") %></h5>
								 </div>
								 <div class="col-xs-12 col-sm-4 col-md-3">
								 	<%= link_to user_omniauth_authorize_path(:twitter), data: { confirm: "Are you sure you no longer want to post to Twitter?" }, :class => "btn btn-default btn-social-disconnect" do %>
								  		Disconnect Twitter <i class="fa fa-times"></i>
								  	<% end %>
								 </div>
								<% else %>
									<%= link_to user_omniauth_authorize_path(:twitter), :class => "btn btn-block btn-social btn-twitter" do %>
								  		<i class="fa fa-twitter"></i>Connect Twitter
								  	<% end %>
								<% end %>
							</div>
						</div>
					</div>
				</div>
				<hr>
			<% end %>
			<% if !@internal_board_preferences.nil? %>
				<div class="row no-margin">
					<%= render 'internal_draft_preferences' %>
				</div>
			<% end %>
		<% end %>
		<% if !@draft_board.blank? %>
			<hr>
			<div class="row no-margin">
				<div class="col-xs-12 text-center no-padding">
					<h4 class="retail-manage-header">Manage Your Plan</h4>
				</div>
				<div class="col-xs-12">
					 <div class="row no-margin">
						<div class="col-xs-12">
							<h5 class="retailer-section-instructions">Your current plan is <%= @user_plan %>.</h5>
						</div>
					</div>
					<div class="row no-margin">
						<div class="col-xs-12 col-sm-5 col-md-4">
							<% if @subscription_plan == 1 %>
								<%= link_to change_plans_path(@draft_board[0].id, @retailer.id), class: 'btn btn-default btn-success formButton-draft-board-edit', data: { confirm:'Are you sure you want to upgrade?'} do %>
									<i class="fa fa-plus"> Upgrade Plan</i>
								<% end %>
							<% else %>
								<%= link_to change_plans_path(@draft_board[0].id, @retailer.id), class: 'btn btn-default btn-success formButton-draft-board-edit', data: { confirm:'Are you sure you want to downgrade?'} do %>
									<i class="fa fa-minus"> Downgrade Plan</i>
								<% end %>
							<% end %>
						</div>
					</div>
				</div>	
			</div>
		<% end %>
	</div>
<%= render 'layouts/footer' %>