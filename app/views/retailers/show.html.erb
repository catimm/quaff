<%= render 'layouts/header_retailer' %> 
	<div class="container draft-board-container">
		<div class="row no-margin ">
			<div class="col-xs-12 visible-sm visible-md visible-lg">
				<div class="row img-responsive retailer-logo-image-med" alt="Responsive image" style="background-image: url(<%= @retailer.logo_med %>)">
					<h3 class="retailer-page-title"><%= @retailer.short_name %>'s Account</h3>
				</div>
			</div>
			<div class="col-xs-12 visible-xs">
				<div class="row img-responsive retailer-logo-image-small" alt="Responsive image" style="background-image: url(<%= @retailer.logo_small %>)">
					<h3 class="retailer-page-title-mobile"><%= @retailer.short_name %>'s Account</h3>
				</div>
			</div>
		</div>
		<hr>
		<% if @draft_board.blank? %>
			<div class="row no-margin ">
				<div class="col-sm-2 retail-account-col text-right no-padding-right">
					<h5>Create a draft board:</h5>
				</div>
				<div class="col-sm-4 retail-account-col">
					<%= link_to new_draft_board_path(@retailer.id), class: 'btn btn-default btn-success formButton-add-draft-board' do %>
						<i class="fa fa-plus"> New draft board</i>
					<% end %>
				</div>
			</div>
		<% else %>
			<div class="row no-margin ">
				<div class="col-sm-2 retail-account-col text-right no-padding-right">
					<h5>Edit your draft board:</h5>
				</div>
				<div class="col-sm-3 retail-account-col">
					<%= link_to edit_draft_board_path(@draft_board[0].id), class: 'btn btn-default btn-success formButton-draft-board-edit' do %>
						<i class="fa fa-pencil"> Edit board</i>
					<% end %>
				</div>
				<div class="col-sm-7">
					<h3 class="retail-account-last-updated-container"><span class="last-updated">(last updated: <%= (@last_draft_board_update.updated_at).strftime("%B %e, %Y @ %l:%M %p") %>)</span></h3>
				</div>
			</div>		
			<div class="row no-margin ">	
				<div class="col-sm-2 retail-account-col text-right no-padding-right">
					<h5>View your draft board:</h5>
				</div>
				<div class="col-sm-3 retail-account-col">
					<%= link_to draft_board_path(@draft_board[0].id, "column-web"), class: 'btn btn-default btn-primary formButton-view-draft-board' do %>
						<i class="fa fa-chevron-right"> Web column style</i>
					<% end %>
				</div>
				<div class="col-sm-3 retail-account-col">
					<%= link_to draft_board_path(@draft_board[0].id, "column-internal"), class: 'btn btn-default btn-primary formButton-view-draft-board' do %>
						<i class="fa fa-chevron-right"> Internal column style</i>
					<% end %>
				</div>
				<div class="col-sm-4 retail-account-filler-col">
				</div>
				<div class="col-sm-2 retail-account-filler-col text-right no-padding-right">
				</div>
				<div class="col-sm-3 retail-account-col">
					<%= link_to draft_board_path(@draft_board[0].id, "row-web"), class: 'btn btn-default btn-primary formButton-view-draft-board' do %>
						<i class="fa fa-chevron-right"> Web row style</i>
					<% end %>
				</div>
				<div class="col-sm-3 retail-account-col">
					<%= link_to draft_board_path(@draft_board[0].id, "row-internal"), class: 'btn btn-default btn-primary formButton-view-draft-board' do %>
						<i class="fa fa-chevron-right"> Internal row style</i>
					<% end %>
				</div>
			</div>		
		<% end %>
	</div>
<%= render 'layouts/footer' %>