<%= form_for @retailer, :url => { :controller => "retailers", :action => "update" } do |f| %>
	<div class="col-sm-6 col-xs-12">
		<%= f.text_field :name, :class => "form-control", placeholder: "Full name" %>
	</div>
	<div class="col-sm-6 col-xs-12">
		<%= f.text_field :short_name, :class => "form-control", placeholder: "Shortened name" %>
	</div>
	<div class="col-sm-6 col-xs-12">
		<%= f.text_field :homepage, :class => "form-control", placeholder: "Webpage URL" %>
	</div>
	<div class="col-sm-6 col-xs-12">
		<%= f.text_field :beerpage, :class => "form-control", placeholder: "Beer Page URL" %>
	</div>
	<div class="col-sm-6 col-xs-12">
		<% if !@retailer.facebook_url.nil? %>	
			<% @facebook_value_to_show = "https://facebook.com/" + @retailer.facebook_url %>
		<% else %>
			<% @facebook_value_to_show = "" %>
		<% end %>
		<%= f.text_field :facebook_url, :class => "form-control", placeholder: "Facebook URL", :value => @facebook_value_to_show %>
	</div>
	<div class="col-sm-6 col-xs-12">
		<% if !@retailer.twitter_url.nil? %>
			<% @twitter_value_to_show = "https://twitter.com/" + @retailer.twitter_url %>
		<% else %>
			<% @twitter_value_to_show = "" %>
		<% end %>
		<%= f.text_field :twitter_url, :class => "form-control", placeholder: "Twitter URL", :value => @twitter_value_to_show  %>
	</div>
	<div class="col-sm-6 col-xs-12">
		<%= f.text_field :address, :class => "form-control", placeholder: "Address" %>
	</div>
	<div class="col-sm-6 col-xs-12">
		<%= f.text_field :neighborhood, :class => "form-control", placeholder: "Neighborhood" %>
	</div>
	<div class="col-sm-6 col-xs-12">
		<%= f.telephone_field :phone_number, :class => "form-control", placeholder: "Phone Number (for public)" %>
	</div>
	<div class="col-sm-6 col-xs-12">
		<%= f.email_field :email, :class => "form-control", placeholder: "Email (for public)" %>
	</div>
	<div class="col-sm-6 col-xs-12">
		<%= f.text_field :hours_one, :class => "form-control", placeholder: "Hours (e.g. Mon - Thur 11am - 1pm)" %>
	</div>
	<div class="col-sm-6 col-xs-12">
		<%= f.text_field :hours_two, :class => "form-control", placeholder: "Additional Hours" %>
	</div>
	<div class="col-sm-6 col-xs-12">
		<%= f.text_field :hours_three, :class => "form-control", placeholder: "Additional Hours" %>
	</div>
	<div class="col-sm-6 col-xs-12">
		<%= f.text_field :hours_four, :class => "form-control", placeholder: "Additional Hours" %>
	</div>
	<div class="col-sm-6 col-xs-12">
		<%= f.text_field :logo_holder, :class => "form-control", placeholder: "Add a link to your logo" %>
	</div>
	<div class="col-sm-6 col-xs-12">
		<%= f.text_field :image_holder, :class => "form-control", placeholder: "Add a link to your preferred image" %>
	</div>
	<div class="col-sm-3 col-md-4"></div>
	<div class="col-sm-6 col-md-4 col-xs-12 text-center">
		<%= f.submit "Update", class: "btn btn-default btn-success formButton" %>
	</div>		
	<div class="col-sm-3 col-xs-0"></div>	
<% end %>