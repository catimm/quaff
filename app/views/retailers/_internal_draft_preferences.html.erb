<div class="col-xs-12">
	<h4 class="retail-manage-header">Manage Internal Board View</h4>
</div>
<div class="col-xs-12">
	<div class="row no-margin">
		<div class="col-xs-12">
			<h5 class="retailer-section-instructions">Change how your internal draft board looks by choosing one or more options below.</h5>
		</div>
	</div>
	<div class="row no-margin ">
			<%= hidden_field_tag :draft_board_id, :value => @draft_board[0].id %>
			<div class="col-xs-12 col-sm-6 col-md-5">
				<div class="row no-margin">
					<div class="col-xs-6 col-sm-6 col-md-2 no-padding">
						<h6 class="board-preference-options">Option 1:</h6>
					</div>
					<div class="col-xs-6 col-sm-6 col-md-6 no-padding-right">
						<h6 class="board-preference-options">Separate brewery/drink names into two columns</h6>
					</div>
					<div class="col-xs-6 col-sm-6 col-md-1 text-right no-padding board-preference-labels">
						<%= label_tag :separate_names, 'Yes' %>
					</div>
					<div class="col-xs-6 col-sm-6 col-md-1 board-preference-inputs">
						<% if @internal_board_preferences.separate_names == true %>
							<input type="checkbox" name="separate_names" id="separate_names" checked="checked" value="yes" class="separate_names">
						<% else %>
							<input type="checkbox" name="separate_names" id="separate_names" value="no" class="separate_names">
						<% end %>
					</div>
				</div>
				<div class="row no-margin">
					<div class="col-xs-6 col-sm-6 col-md-2 no-padding">
						<h6 class="board-preference-options">Option 2:</h6>
					</div>
					<div class="col-xs-6 col-sm-6 col-md-6 no-padding-right">
						<h6 class="board-preference-options">Add borders to columns</h6>
					</div>
					<div class="col-xs-6 col-sm-6 col-md-1 text-right no-padding board-preference-labels">
						<%= label_tag :column_names, 'Yes' %>
					</div>
					<div class="col-xs-6 col-sm-6 col-md-1 board-preference-inputs">
						<% if @internal_board_preferences.column_names == true %>
							<input type="checkbox" name="column_names" id="column_names" checked="checked" value="yes" class="column_names">
						<% else %>
							<input type="checkbox" name="column_names" id="column_names" value="no" class="column_names">
						<% end %>
					</div>
				</div>
				<div class="row no-margin">
					<div class="col-xs-6 col-sm-6 col-md-2 no-padding">
						<h6 class="board-preference-options">Option 3:</h6>
					</div>
					<div class="col-xs-6 col-sm-6 col-md-6 no-padding-right">
						<h6 class="board-preference-options">Change font size</h6>
					</div>
					<div class="col-xs-6 col-sm-6 col-md-1">
						<select id="font_size" name="font_size" class="btn btn-default dropdown-toggle font-preference">
							<% if @internal_board_preferences.font_size == 1 %>
								<option value="1" selected>Very small</option>
							<% else %>
								<option value="1">Very small</option>
							<% end %>
							<% if @internal_board_preferences.font_size == 2 %>
								<option value="2" selected>Small</option>
							<% else %>
								<option value="2">Small</option>
							<% end %>
							<% if @internal_board_preferences.font_size == 3 %>
								<option value="3" selected>Med</option>
							<% else %>
								<option value="3">Med</option>
							<% end %>
							<% if @internal_board_preferences.font_size == 4 %>
								<option value="4" selected>Large</option>
							<% else %>
								<option value="4">Large</option>
							<% end %>
							<% if @internal_board_preferences.font_size == 5 %>
								<option value="5" selected>Very large</option>
							<% else %>
								<option value="5">Very large</option>
							<% end %>
    					</select>
					</div>
				</div>
			</div>
	</div>
</div>