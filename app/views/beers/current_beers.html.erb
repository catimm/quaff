<body class="admin-background">
<%= render 'layouts/header' %> 
<div class="container admin-container">
	<div class="row header-row">
		<div class="page-header">
			<div class="row">
				<div class="col-sm-7">
					<h3><%= @beer_count %> current beers on tap</h3>
				</div>
			</div>
		</div>
	</div>
	<div class="row small-padding">
		<div class="col-sm-2">
			<h5><strong>Beer Name</strong></h5>
		</div>
		<div class="col-sm-1">
			<h5><strong>Beer Type</strong></h5>
		</div>
		<div class="col-sm-1">
			<h5><strong>Rating</strong></h5>
		</div>
		<div class="col-sm-1">
			<h5><strong># ratings</strong></h5>
		</div>
		<div class="col-sm-1">
			<h5><strong>ABV</strong></h5>
		</div>
		<div class="col-sm-1">
			<h5><strong>IBU</strong></h5>
		</div>
		<div class="col-sm-1">
			<h5><strong>Image</strong></h5>
		</div>
		<div class="col-sm-1">
			<h5><strong>Tags</strong></h5>
		</div>
		<div class="col-sm-1">
			<h5><strong>Descriptors</strong></h5>
		</div>
	</div>
	<% if !@brewery_beers.empty? %>
		<%= render 'beers/brewery_beers' %>
	<% else %>
		<h4>No beers yet associated with this brewery.</h4>
	<% end %>
	<div id="new_beer" class="modal">
		<%= render 'beers/new' %>
	</div>
	<div id="edit_beer" class="modal">
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
			<h3>Fix beer info</h3>
			<%= link_to "Edit", "#", :class => "btn btn-success edit-beer-info" %>
			<%= link_to "Delete", "#", :class => "btn btn-warning delete-beer-info" %>
			<h5>
		</div>
		<div class="modal-body"></div>
	</div>
</div>
<%= render 'layouts/footer' %>
</body>
