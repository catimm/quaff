<% if !wishlist.nil? %>
	<%= link_to "#", class: 'btn btn-danger btn-primary formButton-track-beer-stop wishlist-remove-drink the-wishlist-button' do %>
		<i class="fa fa-minus"> remove drink from your wishlist</i>
	<% end %>
	<p class="wishlist-added-info">added to wishlist on <%= (wishlist.created_at).strftime("%b %e, %Y") %></p>
<% else %>
	<%= link_to "#", class: 'btn btn-default btn-primary formButton-track-beer wishlist-add-drink the-wishlist-button' do %>
		<i class="fa fa-plus"> add drink to your wishlist</i>
	<% end %>
	<p class="wishlist-added-info"></p>
<% end %>