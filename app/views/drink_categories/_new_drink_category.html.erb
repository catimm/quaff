<%= f.fields_for :drink_categories do |ff| %>
		<%= ff.hidden_field :draft_board_id, value: @draft.id %>
		<%= ff.hidden_field :category_position, class: "category-position-number" %>
		<div class="row drink-category-row" id="drink-category-row-<%= ff.index %>">
			<div class="col-sm-1"></div>
			<div class="col-xs-6 col-sm-3 col-md-2 arrow-holder	" id="arrow-holder-<%= ff.index %>">
				<%= link_to "#", id: "up-arrow", class: 'btn btn-default btn-default formButton-move-category up-arrow' do %>
					<i class="fa fa-chevron-up"></i>
				<% end %>
				<%= link_to "#", id: "down-arrow", class: 'btn btn-default btn-default formButton-move-category down-arrow' do %>
					<i class="fa fa-chevron-down"></i>
				<% end %>
			</div>
			<div class="col-xs-6 col-sm-2 drink-category-show-as">

					<h6 class="category-show-text">Show:</h6>
					<h4 class="category-show-text"></h4>
					<sup></sup>

			</div>
			<div class="col-xs-12 col-sm-5 col-md-4 no-padding draft-cost-input">
				<%= ff.text_field :category_name, :class => "form-control", placeholder: "Choose a category name" %>
			</div>			
			<div class="col-sm-1"></div>
			<div class="col-sm-1 no-padding-right remove-draft-button-2 visible-sm visible-md visible-lg">
				<%= ff.link_to_remove do %>
					<i class="fa fa-trash-o"></i>	
				<% end %>
			</div>
		</div>	
		<hr>
<% end %>	