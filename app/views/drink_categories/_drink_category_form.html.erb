<%= nested_form_for(@draft, :url=> @this_path, :method => @this_method)  do |f| %>
	<div class="row no-margin">
		<div class="col-xs-12 col-sm-6 col-md-8 visible-sm visible-md visible-lg">
			<div class="row img-responsive retailer-logo-image-med" alt="Responsive image" style="background-image: url(<%= @retailer.logo_med %>)">
				<% if @drink_price_status == "new" %>
					<h3 class="retailer-page-title">Create Drink Categories</h3>
				<% else %>
					<% if !@last_drink_prices_update.nil? %>
						<h3 class="retailer-page-title">Edit Drink Categories <span class="last-updated">(last updated: <%= (@last_drink_categories_update.updated_at).strftime("%B %e, %Y @ %l:%M %p") %>)</span></h3>
					<% else %>
						<h3 class="retailer-page-title">Edit Drink Categories</h3>
					<% end %>
				<% end %>
			</div>
		</div>
		<div class="col-xs-12 visible-xs">
			<div class="row img-responsive retailer-logo-image-med" alt="Responsive image" style="background-image: url(<%= @retailer.logo_med %>)">
				<% if @drink_price_status == "new" %>
					<h3 class="retailer-page-title">Create Drink Categories</h3>
				<% else %>
					<% if !@last_drink_prices_update.nil? %>
						<h3 class="retailer-page-title">Edit Drink Categories <span class="last-updated">(updated: <%= (@last_drink_categories_update.updated_at).strftime("%-m.%-d.%y @ %l:%M %p") %>)</span></h3>
					<% else %>
						<h3 class="retailer-page-title">Edit Drink Categories</h3>
					<% end %>
				<% end %>
			</div>
		</div>
		<div class="col-xs-6 col-sm-3 col-md-2">
			<%= link_to "Cancel", retailer_path(session[:retail_id]), class: 'btn btn-default formButton-cancel-draft-board-edit' %>
		</div>
		<div class="col-xs-6 col-sm-3 col-md-2">
			<%= f.submit "Save", class: "btn btn-default btn-success formButton-draft-edit" %>
		</div>
	</div>
	<hr>
	<div class="row no-margin">
		<%= render 'new_drink_category', :f => f %>
		<%= f.link_to_add :drink_categories, id: "add-drink-category", class: 'btn btn-default btn-primary formButton-add-category' do %>
			<i class="fa fa-plus"> Add a new drink category</i>
		<% end %>
	</div>
<% end %>