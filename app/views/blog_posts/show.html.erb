<% content_for :title do %>
  	<title><%= @blog_post.title %> &#124; Knird</title>
<% end %>
<% content_for :description do %>
	<meta property="description" content="A drink review of <%= @blog_post.beer.brewery_and_beer_name %>" />
<% end %>
<%= render 'layouts/header' %> 
<div class="row no-margin first-row">
	<div class="container first-row-container">
		<div class="col-xs-12 col-sm-12">
			<h1 class="section-header">Blog: Drink Reviews</h1>
		</div>
		<div class="col-xs-12">
			<%= link_to "Recent posts", blog_posts_path, class: "drink-preference-view-option current" %>
		</div>
	</div>
</div>
<div class="container">
	<%= render 'blog_template' %> 
</div>
<%= render 'layouts/footer' %>