<% content_for :title do %>
  	<title>Knird's blog</title>
<% end %>
<% content_for :description do %>
	<meta property="description" content="Amazingly interesting blog posts related to beer and cider." />
<% end %>
<%= render 'layouts/header' %> 
<div class="row no-margin first-row">
	<div class="container first-row-container">
		<div class="col-xs-12 col-sm-12">
			<h1 class="section-header">Blog</h1>
		</div>
		<div class="col-xs-12">
			<%= link_to "Recent posts", blog_posts_path, class: "drink-preference-view-option current" %>
		</div>
	</div>
</div>
<div class="container">
	<div class="row no-margin">
		<% if user_signed_in? && current_user.role_id == 1 %>
			<div class="col-xs-12 col-sm-9">
				<h1>Drink Reviews</h1>
			</div>
			<div class="col-xs-12 col-sm-2">
				<%= link_to "Add post", new_blog_post_path, class: 'btn btn-primary add-blog-post-button' %>
			</div>
		<% else %>
			<div class="col-xs-12">
				<h1>Drink Reviews</h1>
			</div>
		<% end %>
	</div>
	<div class="row no-margin">
		<div class="col-xs-12 col-sm-9">
			<% @blog_posts.each do |post| %>
				<%= render 'blog_overview', post: post %> 
			<% end %>
		</div>
		<div class="col-xs-12 col-sm-3">
			<h4 class="follow-us-text">FOLLOW US</h4>
			<hr />
			<%= link_to "https://www.facebook.com/drinkknird/", class: 'social-media-follow facebook-follow', :target => "_blank" do %>
				<i class="fa fa-facebook"></i>
			<% end %>
			<%= link_to "https://twitter.com/drink_knird/", class: 'social-media-follow twitter-follow', :target => "_blank" do %>
				<i class="fa fa-twitter"></i>
			<% end %>
			<%= link_to "https://www.instagram.com/drinkknird/", class: 'social-media-follow instagram-follow', :target => "_blank" do %>
				<i class="fa fa-instagram"></i>
			<% end %>
		</div>
	</div>
</div>
<%= render 'layouts/footer' %>