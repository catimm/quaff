<div class="row no-margin">
	<div class="col-xs-12 col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
		<div class="row blog-first-row">
			<% if !@blog_post.beer_id.nil? %>
				<% @picture_title = @blog_post.beer.brewery_and_beer_name %>
			<% end %>
			<div class="col-xs-12 col-sm-4">
				<img class="img-responsive center-block" alt="<%= @picture_title %> poured" src="<%= @blog_post.image_url %>">
			</div>
			<div class="col-xs-12 col-sm-8">
				<h1 class="blog-title"><%= @blog_post.title %></h1>
				<h6 class="blog-published-time"><%= @blog_post.published_at.strftime("%B %-d, %Y") %></h6>
				<div class="row blog-rating-information">
					<% if !@in_stock.blank? %>
						<div class="col-xs-12 col-sm-4 col-md-6 no-padding-left">
							<h3 class="blog-in-stock-message">Now in stock!</h3>
						</div>
					<% end %>
					<% if !@blog_post.beer.beer_rating_one.nil? %>
						<div class="col-xs-offset-1 col-xs-5 col-sm-offset-0 col-sm-4 col-md-3 no-padding">
							<div class="col-xs-4 no-padding">
								<%= link_to @blog_post.untappd_url, target: :_blank do %>
									<img class="img-responsive center-block blog-rating-icons" alt="untappd" src="https://s3-us-west-2.amazonaws.com/knird/blog/Untappd.png">
								<% end %>
							</div>
							<div class="col-xs-6">
								<p class="blog-beer-rating-text">rated</p>
								<h5 class="blog-beer-rating"><%= @blog_post.beer.beer_rating_one %></h5>
							</div>
						</div>
					<% end %>
					<% if !@blog_post.beer.beer_rating_two.nil? %>
						<div class="col-xs-5 col-sm-4 col-md-3 no-padding">
							<div class="col-xs-4 no-padding">
								<%= link_to @blog_post.ba_url, target: :_blank do %>
									<img class="img-responsive center-block blog-rating-icons" alt="beer advocate" src="https://s3-us-west-2.amazonaws.com/knird/blog/beer_advocate.png">
								<% end %>
							</div>
							<div class="col-xs-6">
								<p class="blog-beer-rating-text">rated</p>
								<h5 class="blog-beer-rating"><%= @blog_post.beer.beer_rating_two %></h5>
							</div>
						</div>
					<% end %>
				</div>
			</div>
		</div>
		<div class="row blog-last-row">
			<div class="col-xs-12">
				<%=raw @blog_post.content %>
			</div>
		</div>
	</div>
</div>
