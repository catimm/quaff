<div class="row no-margin">
	<div class="col-xs-12">
		<h3 class="index-section-header">Check out a few of our hottest drinks in stock!</h3>
	</div>
	<div class="col-xs-1 col-sm-offset-1 col-sm-1 col-md-2 text-center no-padding">
		<a class="carousel-control-prev" href="#hot_inventory" role="button" data-slide="prev">
		    <i class="fa fa-chevron-left fa-2x" aria-hidden="true"></i>
		  </a>
	</div>
	<div class="col-xs-10 col-sm-8 col-md-6 no-padding">
		<div class="carousel slide carousel-fade" id="hot_inventory" data-ride="carousel" data-pause="null">
			<div class="carousel-inner">
			    <% @hot_inventory.each_with_index do |drink, index| %>
			    	<% if index == 0 %>
			    		<% @class = "item active"%>
			    	<% else %>
			    		<% @class = "item"%>
			    	<% end %>
				    <div class="<%= @class %>">
				    	<%= render 'layouts/drink_tile_hot_drinks', drink: drink %>
				    </div>
				<% end %>
			</div>
		</div>
	</div>
	<div class="col-xs-1 col-md-2 text-center no-padding">
		 <a class="carousel-control-next" href="#hot_inventory" role="button" data-slide="next">
		    <i class="fa fa-chevron-right fa-2x" aria-hidden="true"></i>
		  </a>
	</div>
	<div class="col-xs-offset-1 col-xs-10 col-sm-offset-4 col-sm-4 text-center">
		<%= link_to "Check out our full inventory", beer_stock_path, class: "btn btn-success start-shopping-button-homepage" %>
	</div>
</div>
