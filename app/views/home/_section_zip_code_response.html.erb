<div class="container">
<% if @coverage == true && @plan_type == "delivery" && @location != nil %>
	<div class="row zip-response-row">
		<div class="col-xs-12 text-center">
			<h3 class="index-section-header" id="zip-code-response-text">Lucky day, we deliver to <%= @location %>!</h3> 
		</div>
		<div class="col-xs-12 text-center">
			<h3 class="index-section-header">Just a couple questions so we can personalize your view of our inventory according to your preferences....</h3> 
		</div>
	</div>
<% elsif @coverage == true && @plan_type == "delivery" && @location == nil %>
	<div class="row zip-response-row">
		<div class="col-xs-12 text-center">
			<h3 class="index-section-header" id="zip-code-response-text">Lucky day, we deliver to you!</h3>
		</div>
		<div class="col-xs-12 text-center">
			<h3 class="index-section-header">Just a couple questions so we can personalize your view of our inventory according to your preferences.....</h3> 
		</div>
	</div>
<% elsif @coverage == true && @plan_type == "shipping" && @location != nil %>
	<div class="row zip-response-row">
		<div class="col-xs-12 text-center">
			<h3 class="index-section-header" id="zip-code-response-text">Lucky day, we ship to <%= @location %>!</h3>
		</div>
		<div class="col-xs-12 text-center">
			<h3 class="index-section-header">Just a couple questions so we can personalize a stack rank of our inventory according to your preferences....</h3> 
		</div>
	</div>
<% elsif @coverage == true && @plan_type == "shipping" && @location == nil %>
	<div class="row zip-response-row">
		<div class="col-xs-12 text-center">
			<h3 class="index-section-header" id="zip-code-response-text">Lucky day, we ship to you!</h3>
		</div>
		<div class="col-xs-12 col-md-offset-1 col-md-10 text-center">
			<h3 class="index-section-header">Just a few questions to personalize your view of our stock according to your preferences....</h3> 
		</div>
	</div>
<% elsif @coverage == false &&  @location != nil %>
	<div class="row zip-response-row">
		<div class="col-xs-12 text-center">
			<h3 class="index-section-header" id="zip-code-response-text">Unfortunately we're not yet available in <%= @location %>.</h3>
		</div>
		<div class="col-xs-12 text-center">
			<h3 class="index-section-header">Sign up to be notified when things change.</h3> 
		</div>
	</div>
<% else %>
	<div class="row zip-response-row">
		<div class="col-xs-12 text-center">
			<h3 class="index-section-header" id="zip-code-response-text">Unfortunately we're not yet available in your area.</h3>
		</div>
		<div class="col-xs-12 text-center">
			<h3 class="index-section-header">Sign up to be notified when things change.</h3> 
		</div>
	</div>
<% end %>		
</div>