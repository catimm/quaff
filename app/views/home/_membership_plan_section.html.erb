<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<h3 class="index-section-header">Find a Knird plan that works for you</h3> 
		</div>
	</div>
	<div class="row membership-details-row">
		<div class="col-xs-12 col-sm-4">
			<div class="homepage-plan-options">
				<%= render 'layouts/deliveries_plan_zero' %>
				<div class="row no-margin">
					<div class="col-xs-12 no-padding">
						<%= link_to "Get started", invitation_code_path("zero"), class: 'btn btn-default btn-primary plan-get-started-button' %>
					</div>
				</div>
				<div class="row no-margin">
					<div class="col-xs-12 no-padding">
						<h6 class='membership-extra-info'>Order when you like; 6 drink minimum order.</h6>
					</div>
				</div>
			</div>
		</div>
		<div class="col-xs-12 col-sm-4">
			<div class="homepage-plan-options">
				<%= render 'layouts/deliveries_plan_six' %>
				<div class="row no-margin">
					<div class="col-xs-12 no-padding">
						<%= link_to "Get started", invitation_code_path("six"), class: 'btn btn-default btn-primary plan-get-started-button' %>
					</div>
				</div>
				<div class="row no-margin">
					<div class="col-xs-12 no-padding">
						<h6 class='membership-extra-info'>Change any delivery date. Cancel any time.</h6>
					</div>
				</div>
			</div>
		</div>
		<div class="col-xs-12 col-sm-4">
			<div class="homepage-plan-options">
				<%= render 'layouts/deliveries_plan_twenty_five' %>
				<div class="row no-margin">
					<div class="col-xs-12 no-padding">
						<%= link_to "Get started", invitation_code_path("twenty-five"), class: 'btn btn-default btn-primary plan-get-started-button' %>
					</div>
				</div>
				<div class="row no-margin">
					<div class="col-xs-12 no-padding">
						<h6 class='membership-extra-info'>Change any delivery date. Cancel any time.</h6>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>