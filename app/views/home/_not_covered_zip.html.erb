<h4 class="knird-delivers-confirmation-text">
	Sorry, we don't deliver to <%= @location %> ... yet!<br> 
</h4>
<h5 class="knird-delivers-confirmation-text">
	We can notify you when we do&mdash;just provide your info below.
</h5>
<%= simple_form_for @request_invitation, :url => {:controller => "home", :action => "create"}, :remote => true do |invite| %>
	<%= invite.input :city, :as => :hidden, :input_html => { :value => @city } %>
	<%= invite.input :state, :as => :hidden, :input_html => { :value => @state } %>
	<%= invite.input :zip_code, :as => :hidden, :input_html => { :value => @zip_code } %>
	<%= invite.input :delivery_ok, :as => :hidden, :input_html => { :value => @covered } %>
	<div class="row no-margin">
		<div class="col-xs-3 no-padding-right">
			<%= label :first_name, 'First name' %>
		</div>
		<div class="col-xs-9">
			<%= invite.input :first_name, input_html: { class: "form-control" }, placeholder: "What should we call you?", required: true, label: false %>
		</div>
	</div>
	<div class="row no-margin">
		<div class="col-xs-3 no-padding-right">
			<%= label :email, 'Email' %>
		</div>
		<div class="col-xs-9">
			<%= invite.input :email, input_html: { class: "form-control" }, placeholder: "What is your email address?", required: true, label: false %>
		</div>
	</div>
	<div class="row no-margin">
		<div class="col-xs-3 no-padding-right homepage-request-invite-birthday-holder">
			<%= label :birthday, 'Birthday' %> <sup  data-toggle="tooltip" title="You must be 21 to use the Knird service.">?</sup>
		</div>
		<div class="col-xs-9">
			<%= invite.input :birthday, as: :string, input_html: { type: :date, class: "form-control" }, required: true, label: false %>
		</div>
	</div>
	<div class="row no-margin">
		<div class="col-xs-1"></div>
		<div class="col-xs-10">
			<%= invite.submit "Send me a notification", class: "btn btn-default btn-success formButton-invitation-request" %>
		</div>
	</div>
<% end %>
<div class="row no-margin">
	<div class="col-xs-1"></div>
		<div class="col-xs-10 text-center">
			<h5 class="homepage-or-try-another-zip">- or -</h5>
		</div>
</div>
<div class="row no-margin">
	<div class="col-xs-1"></div>
		<div class="col-xs-10">
			<%= link_to "Try a different zip code", "#", class: "btn btn-default btn-success formButton-invitation-request show-zip-search" %>
		</div>
</div>
