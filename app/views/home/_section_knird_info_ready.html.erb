<div class="container">
	<div class="row zip-code-input-row">
		<div class="row no-margin" id="home_enter_zip_code">
 			<div class="col-xs-12 text-center">
				<h3 class='home-prompt-text'>Ok, just one more thing.<br>Let's make sure we deliver to you...</h3>
 			</div>
			<div class="col-xs-offset-1 col-xs-10 col-sm-offset-2 col-sm-4 col-md-offset-3 col-md-3">
				<%= text_field_tag 'delivery_zip_code', nil, placeholder: 'Enter your zip code', class: 'form-control check-zip-code-button', id: 'check-zip-code' %>
			</div>
			<div class="col-xs-offset-1 col-xs-10 col-sm-offset-0 col-sm-4 col-md-3">
				<%= link_to "#", :class => "btn btn-success home-start-with-zip" do %>
					<i class="fa fa-check-square-o" aria-hidden="true"></i>
					Check 
				<% end %>
			</div>
		</div>
	</div>
	<% if session[:new_membership_path] == true %>
		<div class="row extra-get-started-option-row">
			<div class="col-xs-12 text-center">
		      <p>
		      	or 
		      </p>
			</div>
			<div class="col-xs-12 text-center">
				<div class="col-xs-offset-1 col-xs-10 col-sm-offset-4 col-sm-4 text-center">
					<%= link_to "Continue with Knird Preferred", account_personal_path, class: "btn btn-success stock-ranking-ready-button" %>
				</div>
			</div>
		</div>
	<% end %>
	<% if session[:new_trial_path] == true %>
		<div class="row extra-get-started-option-row">
			<div class="col-xs-12 text-center">
		      <p>
		      	or 
		      </p>
			</div>
			<div class="col-xs-12 text-center">
				<div class="col-xs-offset-1 col-xs-10 col-sm-offset-4 col-sm-4 text-center">
					<%= link_to "Continue with a trial membership", account_personal_path, class: "btn btn-success stock-ranking-ready-button" %>
				</div>
			</div>
		</div>
	<% end %>
</div>
