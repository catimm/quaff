$(function() {
	
	// make sure correct "next" button is visible
	<% if @total_count > 0 %>
		if($('#process-styles-disabled-button-row').hasClass("show")){
			$('#process-styles-disabled-button-row').removeClass("show").addClass("hidden");
			$('#process-styles-live-button-row').removeClass("hidden").addClass("show");
		}
	<% else %>
		$('#process-styles-disabled-button-row').removeClass("hidden").addClass("show");
		$('#process-styles-live-button-row').removeClass("show").addClass("hidden");
	<% end %>
	
	// adjust view of chosen style/action
	<% if @action == "add" %>
		$('#add-'+'<%= @drink_style_id %>').children('.style-indicator.home-like-style').removeClass("hidden").addClass("show");
		$('#add-'+'<%= @drink_style_id %>').addClass('like-cover');
		$('#add-'+'<%= @drink_style_id %>').attr('id','remove-'+<%= @drink_style_id %>);
	<% end %>
	
	<% if @action == "remove" %>
		$('#remove-'+'<%= @drink_style_id %>').removeClass('like-cover');
		$('#remove-'+'<%= @drink_style_id %>').children('.style-indicator.home-like-style').removeClass("show").addClass("hidden");
		$('#remove-'+'<%= @drink_style_id %>').attr('id','remove-'+<%= @drink_style_id %>);
	<% end %>
});