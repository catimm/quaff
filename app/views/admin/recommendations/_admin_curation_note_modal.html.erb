<div class="modal-body">
	<%= form_for @free_curation, url: admin_curation_note_path, html: { method: :post } do |f| %>
		<%= f.hidden_field :id, :value => @curation_id %>
		<div class="row no-margin">
			<div class="col-sm-12">
				<%= f.text_area :admin_curation_note, :class => "form-control", placeholder: "Add explanation for anomolies" %>
			</div>
		</div>
		<div class="row no-margin">
			<div class="col-sm-2"></div>
			<div class="col-sm-8">
				<%= f.submit "Add note", class: "btn btn-default btn-success formButton" %>
			</div>
		</div>
	<% end %>
</div>