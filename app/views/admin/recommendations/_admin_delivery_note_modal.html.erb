<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
	<h3>Add a note about the upcoming delivery</h3>
</div>
<div class="modal-body">
	<%= form_for @customer_next_delivery, url: admin_delivery_note_path, html: { method: :post } do |f| %>
		<%= f.hidden_field :delivery_id, :value => @customer_next_delivery.id %>
		<div class="row no-margin">
			<div class="col-sm-12">
				<% if @customer_next_delivery.status == "admin prep" %>
					<%= f.text_area :admin_delivery_review_note, :class => "form-control", placeholder: "Add explanation for anomolies" %>
				<% else %>
					<%= f.text_area :admin_delivery_confirmation_note, :class => "form-control", placeholder: "Add explanation for anomolies" %>
				<% end %>
			</div>
		</div>
		<div class="row no-margin">
			<div class="col-sm-2"></div>
			<div class="col-sm-8">
				<%= f.submit "Add note", class: "btn btn-default btn-success formButton" %>
			</div>
		</div>
	<% end %>
</div>