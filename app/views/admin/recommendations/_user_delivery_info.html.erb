			    	<h6>Need <%= @next_delivery_small_need %> small <%= "drink".pluralize(@next_delivery_small_need) %>; have <%= @next_delivery_small %></h6>
			    </div>
		    	<div class="box-right">
			      	<% if @next_delivery_small_need == @next_delivery_small %>
			      		<div class="style-indicator-next-delivery like-style-next-delivery text-center">
			      			<i class="fa fa-check"></i>
			      		</div>						
			      	<% else %>
			      		<div class="style-indicator-next-delivery dislike-style-next-delivery text-center">
			      			<i class="fa fa-times"></i>
			      		</div>	
			      	<% end %>
				</div>
		    </div>
		    <div class="col-sm-2">
		    	<div class="box-left">
			    	<h6>Need <%= @next_delivery_large_need %> large <%= "drink".pluralize(@next_delivery_large_need) %>; have <%= @next_delivery_large %></h6>
			    </div>
		    	<div class="box-right">
			      	<% if @next_delivery_large_need == @next_delivery_large %>
			      		<div class="style-indicator-next-delivery like-style-next-delivery text-center">
			      			<i class="fa fa-check"></i>
			      		</div>						
			      	<% else %>
			      		<div class="style-indicator-next-delivery dislike-style-next-delivery text-center">
			      			<i class="fa fa-times"></i>
			      		</div>	
			      	<% end %>
				</div>
		    </div>
		</div>
	</div>
