$(function() {	
	// show appropriate customer info and drop down menu at top
	$('#chosen-customer-info').html('<%=  escape_javascript(render :partial => 'chosen_customer_info') %>');
	
	<% if @view == "in_stock" %>
	// get views for in stock
	$('#chosen-view-info').html('<%=  escape_javascript(render :partial => 'in_stock') %>');
	
	// show additional info as appropriate
	$('#user-delivery-info-container').html('<%=  escape_javascript(render :partial => 'user_delivery_info') %>');
	$('#admin-user-delivery-button-holder').html('<%=  escape_javascript(render :partial => 'admin_user_appropriate_button') %>');
	$('#admin_user_delivery').html('<%=  escape_javascript(render :partial => 'admin_check_delivery_modal') %>');
	<% elsif  @view == "not_in_stock" %>
		$('#chosen-view-info').html('<%=  escape_javascript(render :partial => 'not_in_stock') %>');
	<% else %>
		$('#chosen-view-info').html('<%=  escape_javascript(render :partial => 'not_in_inventory') %>');
	<% end %>


});
