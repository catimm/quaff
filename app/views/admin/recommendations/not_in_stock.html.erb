<%= render 'layouts/header' %> 
<div class="container">
	<div class="row header-row">
		<div class="page-header">
			<div class="row">
				<div class="col-sm-8">
					<h2>Recommendations--currently not in stock</h2>
				</div>
				<div class="col-sm-2" id="in-stock-button-holder">
					<%= render 'in_stock_button' %>
				</div>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-1 text-right">
			<h5>Choose user:</h5>
		</div>
		<div class="col-md-3">
			<%= collection_select(@drink_recommendations, :user_id, User.where(id: @customer_ids), :id, :username, {prompt: true}, {class: "form-control user-list-for-recommendation", id: "user-drink-recommendations-non"}) %>
		</div>
		<div class="col-md-3 text-left">
			<h4>For user: <span class="current-selected-user" id="current-user-recommendations-non"><%= @drink_recommendations[0].user.username %></span></h4>
		</div>
	</div>
	<div class="row" id="non-inventory-list-holder">
		<%= render(partial: 'non_inventory_list', locals: { drinks: @non_inventory_drink_recommendations }) %>
	</div>
</div>
<%= render 'layouts/footer' %>
