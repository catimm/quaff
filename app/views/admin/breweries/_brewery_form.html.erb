<%= form_for [:admin, @brewery] do |f| %>
	<%= f.hidden_field :form_type, :value => "edit" %>
	<%= f.text_field :brewery_name, :class => "form-control", placeholder: "Brewery name" %>
	<%= f.text_field :short_brewery_name, :class => "form-control", placeholder: "Short brewery name" %>
	<%= f.label :collab, "Does this brewery have a collaboration beer?" %>
	<%= f.check_box :collab %>
	<%= f.label :dont_include, "Avoid showing any related info in Views?" %>
	<%= f.check_box :dont_include %>
	<%= f.text_field :brewery_city, :class => "form-control", placeholder: "Brewery city" %>
	<%= f.text_field :brewery_state_short, :class => "form-control", placeholder: "Abbreviated Brewery state" %>
	<%= f.text_field :brewery_state_long, :class => "form-control", placeholder: "Full Brewery state" %>
	<%= f.text_field :brewery_beers, :class => "form-control", placeholder: "Number of beers brewery has" %>
	<%= f.text_field :brewery_url, :class => "form-control", placeholder: "Brewery url" %>
	<%= f.text_field :image, :class => "form-control", placeholder: "Brewery image url" %>
	<%= f.submit "Submit", class: "btn btn-default btn-success formButton" %>			
<% end %>