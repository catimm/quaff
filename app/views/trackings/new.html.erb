<%= render 'layouts/header' %> 
<div class="container">
	<div class="row">
		<div class="col-sm-3 col-xs-0"></div>
		<div class="col-sm-6 col-xs-12 rating-tile">
			<div class="row">
				<div class="col-sm-1 col-xs-0"></div>
				<% if !@user_beer_tracking.empty? %>
					<div class="col-sm-10 col-xs-12">
						<h4 class="beer-location-status">You're currently tracking <%= @this_beer.brewery.short_brewery_name %> <%= @this_beer.beer_name %> at:</h4>
							<div class="row">
								<% @tracking_locations.each_with_index do |location, i| %>
									<% if location.location_id != 0 %>
										<% @this_location = Location.where(id: location.location_id)[0] %>
											<div class="col-sm-6 col-xs-12">
												<div class="row img-responsive location-logo-image-small" alt="Responsive image" style="background-image: url(<%= @this_location.logo_small %>)">
													<p class="location-name-by-image"><%= @this_location.short_name %></p>
												</div>
											</div>
									<% else %>
										<div class="col-xs-12">
											<h4 class="beer-location-status">All Seattle locations!</h4>
										</div>
									<% end %>	
								<% end %>
							</div>
							<h5>Change your tracking options below: </h5>
						</div>
					<% else %>
						<div class="col-sm-10 col-xs-12">
							<h4>You'll be notified when <%= @this_beer.brewery.short_brewery_name %> <%= @this_beer.beer_name %> is available at the location(s) you choose:</h4>
						</div>
					<% end %>
			</div>
			<%= form_for @location_tracking, :url => {:controller => "trackings", :action => "create"} do |track| %>
					<%= track.hidden_field :beer_id, :value => @this_beer.id %>
			<div class="row tracking-row">
				<div class="col-xs-12 text-center">
					<%= track.check_box :all_seattle, checked: true %>
					<%= label :all_seattle, 'Anywhere in Seattle' %>
					<h6 class="text-center or-text">-- or --</h6>
				</div>
			</div>
			<div class="row tracking-row">
					
					<%= track.collection_check_boxes(:location_id, @locations, :id, :short_name, :class => "form-control tracking-checkboxes") do |box| %>
				        <div class="col-md-4 col-sm-6 col-xs-6 tracking-option">
				          <%= box.label { box.check_box + box.text } %>
				        </div>
				     <% end %>
			</div>
			<div class="row">
				<div class="col-sm-2 col-xs-1"></div>
				<div class="col-sm-8 col-xs-10 comment-holder">
					<%= track.submit "Save", class: "btn btn-default btn-success formButton" %>
				</div>
			</div>
			<% end %>
		</div>
	</div>
</div>
<%= render 'layouts/footer' %>