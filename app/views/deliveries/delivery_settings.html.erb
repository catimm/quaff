<%= render 'layouts/header' %> 
<div class="row no-margin first-row">
		<div class="container first-row-container">
			<div class="col-xs-12 col-sm-4 no-padding">
				<h1 class="section-header">Deliveries</h1>
			</div>
			<div class="col-xs-12 col-sm-8">
				<div class="row no-margin">
					<div class="col-xs-0 col-sm-3 mobile-menu-holder"></div>
					<div class="col-xs-4 col-sm-3 mobile-menu-holder">
						<%= link_to "Upcoming", user_deliveries_path('next'), class: "drink-preference-view-option", id: "next" %>
					</div>
					<div class="col-xs-4 col-sm-2 mobile-menu-holder no-padding-left">
						<%= link_to "History", user_deliveries_path('history'), class: "drink-preference-view-option", id: "history" %>
					</div>
					<div class="col-xs-4 col-sm-3 mobile-menu-holder no-padding-right">
						<%= link_to "Delivery settings", user_delivery_settings_path, class: "drink-preference-view-option chosen", id: "settings" %>
					</div>
				</div>
			</div>
		</div>
	</div>
<div class="row">
	<div class="container" id="user-delivery-preferences-holder">
	    <%= render 'user_delivery_preferences' %>
	</div>
</div>
<div id="delivery_settings_welcome" class="modal">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
		<h3 class="getting-started-header">Congrats, you're done. Welcome to Knird!</h3>
	</div>
	<div class="modal-body initial-message-after-signup">
		<div class="row no-margin">
			<div class="col-xs-12">
				<h5>We're leaving you at your delivery settings page so you can review all the information you just provided.</h5>
				<h5>You can visit this page at any time to updated these settings.</h5>
				<h5>Also, you'll receive an email the Monday before each delivery so you can review the drinks and provide input if you have any, but that's it for now...</h5>
			</div>
			<div class="col-xs-1 col-sm-3"></div>
			<div class="col-xs-10 col-sm-6">
				<%= link_to "Got it!", "#", :class => 'btn btn-success wait-button', :data => {:dismiss=>"modal"} %>
			</div>
		</div>
	</div> 
</div>
<%= render 'layouts/footer' %>