<%= render 'layouts/header' %> 
<div class="row no-margin first-row">
	<div class="container first-row-container">
		<div class="col-xs-12">
			<h1 class="section-header">Find Friends</h1>
		</div>
		<div class="col-xs-12 col-sm-7">
			<div class="row">
				<div class="col-xs-4">
					<%= link_to "Connections", manage_friends_path(current_user.id), class: "drink-preference-view-option" %>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="row spinner">
	<div class="spinner-text">
		<i class="fa fa-spinner fa-spin fa-4x" aria-hidden="true"></i>
		<h4>Updating...</h4>
	</div>
</div>
<div class="row">
	<div class="container" id="deliveries-view">
		<div class="row no-margin">
			<div class="col-xs-12 col-sm-6 no-padding-right">
				<h3 class="recent-ratings-header">Search friends</h3>
			</div>
			<div class="col-xs-12 col-sm-6">
				<%= form_tag friend_search_path, method: :get, :remote => true, :id => "header-navbar", class: 'navbar-form', role: 'search' do %>
				    <div class="input-group">
				      <%= text_field_tag :query, params[:query], size: 30, placeholder: "Search friend name, username or email", class: "form-control friend-search" %>
					    <div class="input-group-btn">
					      <%= button_tag(type: "submit", class: "btn btn-default") do %>
					        <i class="glyphicon glyphicon-search"></i>
					      <% end %>
					    </div>
				    </div>
				<% end %>
			</div>
		<hr>
		</div>
		<div class="col-xs-12" id="friend-search-results-holder"></div>
	</div>
</div>
<div id="accept_connection_confirmation" class="modal">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
		<h3>Send connection confirmation</h3>
	</div>
	<div class="modal-body">
		<div class="row no-margin">
			<div class="col-sm-12">
				<h4>Send this person an invitation?</h4>
			</div>
		</div>
		<div class="col-sm-2"></div>
		<div class="col-sm-4 add-button-holder">
			<%= link_to "#", :id => 'add-connection-button', :class => 'text-center btn btn-success add-connection-button', remote: true do %>
				<i class="fa fa-plus"></i>
				Accept!
			<% end %>
		</div>
		<div class="col-sm-4 remove-button-holder">
			<%= link_to "Wait!", "#", :class => 'btn btn-default wait-button', :data => {:dismiss=>"modal"} %>
		</div>
	</div>
</div>
<div id="resend_invitation_confirmation" class="modal">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
		<h3>Resend invitation confirmation</h3>
	</div>
	<div class="modal-body">
		<div class="row no-margin">
			<div class="col-sm-12">
				<h4>Your invitation reminder has been sent!</h4>
			</div>
		</div>
		<div class="col-sm-4"></div>
		<div class="col-sm-4 remove-button-holder">
			<%= link_to "Thanks!", "#", :class => 'btn btn-success wait-button', :data => {:dismiss=>"modal"} %>
		</div>
	</div>
</div>
<%= render 'layouts/footer' %>