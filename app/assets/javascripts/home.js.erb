$(document).ready(function(){
	$("#filter-button").on("click", function(){
		if ($("#first_filter").hasClass("show")) {
	    		$(".filter-options").removeClass("show").addClass("hidden");
				$(this).html("Show filters");	
	    	} else {
	    		$(".filter-options").removeClass("hidden").addClass("show");
	    		$(this).html("Hide filters");
	    	}
	});
});