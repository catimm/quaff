$(function () {

	// hide spinner
	$(".spinner").hide();
	
	
  	// show spinner on AJAX start
	$(document).ajaxStart(function(){
	  $(".spinner").show();
	});
	
	// hide spinner on AJAX stop
	$(document).ajaxStop(function(){
	  $(".spinner").hide();
	});
	  
	// set delay function
	var delay = (function(){
	  var timer = 0;
	  return function(callback, ms){
	    clearTimeout (timer);
	    timer = setTimeout(callback, ms);
	  };
	})();
	
});