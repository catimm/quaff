$(function() {
	
	// add logic to filter in stock table based on admin choice 
	$(document).on('change', '.user-list-for-recommendation', function () {
		var user_id = $(this).val();
		var this_view = $(this).attr('id');
		
		$.ajax({
		  type: "GET",
		  url: "/admin/recommendations/change_user_view/" + user_id + "-" + this_view
		});
	});
	
	// earmark drink as part of next delivery
	$(document).on('change', '.add_to_delivery', function () {
		var this_id = $(this).attr('id');
		
		$.ajax({
		  type: "GET",
		  url: "/admin/recommendations/next_delivery_drink/" + this_id
		});
	});
	
	// enable admin to reduce drink quantity in next delivery
	$(document).on('click', '.subtract-drink-quantity', function () {
		var this_id = $(this).attr('id');
		
		$.ajax({
		  type: "GET",
		  url: "/admin/recommendations/change_delivery_drink_quantity/" + this_id
		});
		// stop jumping to top
		return false;
	});
	// enable admin to add drink quantity in next delivery
	$(document).on('click', '.add-drink-quantity', function () {
		var this_id = $(this).attr('id');
		
		$.ajax({
		  type: "GET",
		  url: "/admin/recommendations/change_delivery_drink_quantity/" + this_id
		});
		// stop jumping to top
		return false;
	});
});
