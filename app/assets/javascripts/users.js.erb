	function moveScroller() {
		if(window.location.href.indexOf("users/delivery_settings") > -1) {
		    var move = function() {
		        var st = $(window).scrollTop() + $('.navbar.navbar-default.navbar-fixed-top.homeNavbar').outerHeight() + 5;
		        var ot = $("#scroller-anchor").offset().top;
		        var s = $("#scroller");
		        if(st > ot) {
		            s.css({
		                position: "fixed",
		                top: "72.5px"
		            });
		        } else {
		            if(st <= ot) {
		                s.css({
		                    position: "relative",
		                    top: ""
		                });
		            }
		        }
		    };
		    $(window).scroll(move);
		    move();
		}
	}
