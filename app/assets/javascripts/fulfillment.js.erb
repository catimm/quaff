$(function() {
	
	// add logic to add delivery id to confirm form
	$(document).on('click', '.delivery-confirm-button', function () {
		var delivery_id = $(this).attr('id');
		
		$("#confirm-delivery-info").attr("action", "/admin/fulfillment/admin_confirm_delivery/" + delivery_id);
	
	});
	
	// add logic to filter current drivers 
	$(document).on('change', '#driver_list_delivery_driver_id', function () {
		var driver_id = $(this).val();

		$.ajax({
		  type: "GET",
		  url: "/admin/fulfillment/change_driver_view/" + driver_id
		});
	});
	
});